pragma solidity ^0.8.0;

import "./BEP20.sol";
// import "./extensions/BEP20Pausable.sol";
import "./utils/Pausable.sol";
import "./extensions/BEP20Burnable.sol";
import "./extensions/Ownable.sol";

/**
 * @title XPLL
 */
contract XPLL is Pausable, BEP20Burnable, Ownable  {
    
    constructor (string memory tokenName, string memory tokenSymbol, uint initialSupply) BEP20(tokenName, tokenSymbol) {

        uint256 tokenAmount = initialSupply * (10 ** uint256(decimals()));
        _mint(_msgSender(), tokenAmount);

    }

    function mint(address account, uint256 amount) onlyOwner public {
        _mint(account, amount);
    }

    function pause() onlyOwner public {
        _pause();
    }

    function unpause() onlyOwner public {
        _unpause();
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override(BEP20) {
        super._beforeTokenTransfer(from, to, amount);

        require(!paused(), "BEP20Pausable: token transfer while paused");
    }
}

