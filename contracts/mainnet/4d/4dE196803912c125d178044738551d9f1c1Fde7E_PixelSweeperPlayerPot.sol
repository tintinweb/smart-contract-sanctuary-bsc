import "./prize-strategy/strategies/IDynamicPeriodicPrizeStrategy.sol";
import "./prize-strategy/IPeriodicPrizeStrategyListener.sol";
import "../sweeper/IMasterSweeper.sol";
import "../sweeper/utils/EmergencyWithdrawable.sol";

contract PixelSweeperPlayerPot is EmergencyWithdrawable, ReentrancyGuard, ERC165, ITokenController, IPeriodicPrizeStrategyListener {
    using ERC165Checker for address;
    using SafeERC20 for IERC20;
    using Strings for uint256;

    struct Round {
        uint256 roundId;
        BurnableTicket ticket;
        uint256 ticketsSold;
        uint256 nftsSweept;
    }

    /// @dev Event emitted when repenishingAmount is changed
    event ReplenishingAmountSet(uint256 repenishingAmount);

    /// @dev Event emitted when executorsOnly is changed
    event ExecutorsOnlySet(bool executorsOnly);

    /// @dev Event emitted when a executor is added/removed from the whitelist
    event ExecutorSet(address indexed user, bool isExecutor);

    /// @dev Event emitted when the Prize Strategy is set
    event PrizeStrategySet(address indexed prizeStrategy);

    /// @dev Event emitted when fund receivers are changed
    event FundReceiversSet(address main, address bonus, address team);

    /// @dev Event emitted when surplus tickets are beeing slashed
    event SlashTickets(address indexed operator, address indexed user, uint256 slashed, uint256 balance, uint256 maxTickets);

    
    /// @dev Tickets are bought and funds are held in BUSD.
    IERC20 public immutable BUSD;
    address public immutable MAIN_PRIZE_COLLECTION;

    /// @dev Tickets cost 1 BUSD each.
    uint256 public constant TICKET_PRICE = 1 ether;

    /// @dev Holders can buy 100 tickets per staked PixelSweeper.
    uint256 public constant MAX_TICKETS = 100;

    uint256 public constant FUND_SPLIT_MAIN = 90;
    uint256 public constant FUND_SPLIT_BONUS = 5;
    uint256 public constant FUND_SPLIT_TEAM = 5;


    /// @dev The implementation for tickets, cloned new round.
    BurnableTicketFactory public ticketFactory;
    
    /// @dev The Prize Strategy that this Prize Pool is bound to.
    IDynamicPeriodicPrizeStrategy public prizeStrategy;

    /// @dev PixelSweeper staked NFT token.
    IERC721Enumerable public stakedToken;

    /// @dev Sweeper used by player pot
    IMasterSweeper public masterSweeper; 

    /// @dev Amount of NFT swept before increasing the price pool
    uint256 public replenishingAmount = 2;

    /// @dev current round id
    uint256 public roundId;

    /// @dev Record for all past and current rounds
    mapping(uint256 => Round) rounds;

    /// @dev Receiver addresses for ticket sale funds
    address public fundReceiverMain;
    address public fundReceiverBonus;
    address public fundReceiverTeam;

    mapping(address => bool) public isExectutor;
    bool public executorsOnly;


    constructor(IERC20 _busd, IERC721Enumerable _stakedToken, IMasterSweeper _masterSweeper, address _ticketFactory, address _mainPrize, address _fundReceiverMain, address _fundReceiverBonus, address _fundReceiverTeam) {
        BUSD = _busd;
        MAIN_PRIZE_COLLECTION = _mainPrize;

        stakedToken = _stakedToken;
        masterSweeper = _masterSweeper;
        fundReceiverMain = _fundReceiverMain;
        fundReceiverBonus = _fundReceiverBonus;
        fundReceiverTeam = _fundReceiverTeam;

        ticketFactory = BurnableTicketFactory(_ticketFactory);

        _prepareNextRound();
    }

    /// @dev Buy `amount` tickets Ã  1 BUSD each. For every staked PixelSweeper, holders can buy 100 tickets.
    function buyTickets(uint256 amount) external nonReentrant {
        address from = _msgSender();
        uint256 amountTickets = amount * TICKET_PRICE;
        BurnableTicket ticket_ = _ticket();

        require((ticket_.balanceOf(from) + amountTickets) <= _maxTickets(from), "Insufficient staked tokens");
        BUSD.safeTransferFrom(from, address(this), amountTickets);

        BUSD.transfer(fundReceiverMain, amountTickets * FUND_SPLIT_MAIN / 100);
        BUSD.transfer(fundReceiverBonus, amountTickets * FUND_SPLIT_BONUS / 100);
        BUSD.transfer(fundReceiverTeam, amountTickets * FUND_SPLIT_TEAM / 100);

        ticket_.controllerMint(from, amountTickets);
    }

    /// @dev Sweep the floor and add to the award 
    function sweep(
        address _market,
        address _collection,
        uint256 _tokenId,
        uint256 _price,
        uint256 _timestamp,
        bytes memory _signature
    ) external {
        require(address(prizeStrategy) != address(0), "No strategy set");
        require(_collection == MAIN_PRIZE_COLLECTION, "Only main collection");
        require(!executorsOnly || isExectutor[_msgSender()], "Only executors");

        masterSweeper.sweep(_market, _collection, _tokenId, _price, _timestamp, _signature);
        
        rounds[roundId].nftsSweept += 1;
        if (rounds[roundId].nftsSweept > replenishingAmount) {
            prizeStrategy.addOnetimeAward(_collection);
        }
    }

    /// @dev set after constructor since we need to set this contract as controller
    function setTicketFactory(address _ticketFactory) external onlyOwner {
        ticketFactory = BurnableTicketFactory(_ticketFactory);
    }

    /// @dev hook used by tickets
    function beforeTokenTransfer(
        address from,
        address to,
        uint256
    ) external view override {
        require(from != to, "Self transfer");
        require(
            from == address(0) || to == address(0),
            "Tickets non transferable"
        );
        require(
            address(prizeStrategy) == address(0) ||
                prizeStrategy.awardNotInProgress(),
            "Award in progress"
        );
    }

    /// @dev hook to get notified once prize was awarded
    function afterPrizePoolAwarded(uint256, uint256) external override {
        require(_msgSender() == address(prizeStrategy), "only prize strategy");
        _prepareNextRound();
    }


    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC165, IERC165) returns (bool) {
        return
            interfaceId == type(IPeriodicPrizeStrategyListener).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    /// @notice Set the receivers of ticket sale funds
    function setFundReceivers(address _main, address _bonus, address _team) external onlyOwner {
        fundReceiverMain = _main;
        fundReceiverBonus = _bonus;
        fundReceiverTeam = _team;

        emit FundReceiversSet(fundReceiverMain, fundReceiverBonus, fundReceiverTeam);
    }

    /// @dev Set to only allow whitelisted executors to sweep
    function setExecutorsOnly(bool _executorsOnly) external onlyOwner {
        executorsOnly = _executorsOnly;
        emit ExecutorsOnlySet(_executorsOnly);
    }

    /// @dev Allow/disallow executor to sweep
    function setExecutor(address executor, bool _isExecutor) external onlyOwner {
        isExectutor[executor] = _isExecutor;
        emit ExecutorSet(executor, _isExecutor);
    }

    /// @notice Sets the prize strategy of the prize pool.  Only callable by the owner.
    /// @param _prizeStrategy The new prize strategy
    function setPrizeStrategy(IDynamicPeriodicPrizeStrategy _prizeStrategy)
        external
        onlyOwner
    {
        _setPrizeStrategy(_prizeStrategy);
    }

    /// @dev Set the number of nft swept before increasing the number of awards
    function setReplenishingAmount(uint256 _replenishingAmount) external onlyOwner {
        replenishingAmount = _replenishingAmount;
        emit ReplenishingAmountSet(_replenishingAmount);
    }

    /// @notice Sets the prize strategy of the prize pool.  Only callable by the owner.
    /// @param _prizeStrategy The new prize strategy
    function _setPrizeStrategy(IDynamicPeriodicPrizeStrategy _prizeStrategy) internal {
        require(
            address(_prizeStrategy) != address(0),
            "prizeStrategy-not-zero"
        );
        require(
            address(_prizeStrategy).supportsInterface(
                type(IDynamicPeriodicPrizeStrategy).interfaceId
            ),
            "prizeStrategy-invalid"
        );
        prizeStrategy = _prizeStrategy;

        emit PrizeStrategySet(address(_prizeStrategy));
    }


    function _prepareNextRound() internal {
        BurnableTicket lastTicket = _ticket();
        if (address(lastTicket) != address(0)) {
            rounds[roundId].ticketsSold = lastTicket.totalSupply();
            lastTicket.setBurnable(true);
        }

        Round storage round = rounds[++roundId];

        string memory id = roundId.toString();
        string memory name = string(abi.encodePacked("PixelSweeper Player Ticket #", id));
        string memory symbol = string(abi.encodePacked("SWPR-P #", id));
        BurnableTicket ticket_ = ticketFactory.create(name, symbol, address(this));

        round.roundId = roundId;
        round.ticket = ticket_;
    }

    /// @dev allow anyone to slash tickets after unstaking
    function slashTickets(address[] memory _users) external {
        uint256 length = _users.length;
        address operator = _msgSender();

        for (uint256 i = 0; i < length; ++i) {
            _slashTickets(operator, _users[i]);
        }
    }

    function _slashTickets(address _operator, address _user) internal {
        uint256 maxTickets_ = _maxTickets(_user);
        BurnableTicket ticket_ = _ticket();
        uint256 tickets = ticket_.balanceOf(_user);

        if (tickets > maxTickets_) {
            uint256 slash = tickets - maxTickets_;
            emit SlashTickets(_operator, _user, slash, tickets, maxTickets_);
            ticket_.controllerBurnFrom(_operator, _user, slash);
        }
    }

    function maxTickets(address _user) external view returns (uint256) {
        return _maxTickets(_user);
    }

    function _maxTickets(address _user) internal view returns (uint256) {
        return stakedToken.balanceOf(_user) * MAX_TICKETS * TICKET_PRICE;
    }


    function ticket() external view returns (ITicket) {
        return _ticket();
    }

    function currentRoundNFTsSweept() external view returns (uint256) {
        return rounds[roundId].nftsSweept;
    }

    function currentRoundTicketsSold() external view returns (uint256) {
        return _ticket().totalSupply();
    }

    function _ticket() internal view returns (BurnableTicket) {
        return rounds[roundId].ticket;
    }
}

