        uniswapV2Pair = _uniswapV2Pair;

        dividendTracker = new TokenDividendTracker(uniswapV2Pair, address(this));

        excludeFromFees(owner());
        excludeFromFees(address(this));
        excludeFromFees(address(0));
        excludeFromFees(address(dividendTracker));

        isDividendExempt[owner()] = true;
        isDividendExempt[address(this)] = true;
        isDividendExempt[address(0)] = true;
        isDividendExempt[address(dividendTracker)] = true;

        _cast(owner(), totalSupply);
    }

    receive() external payable {}

    function excludeFromFees(address account) public onlyOwner {
        if(!_isExcludedFromFees[account]){
            _isExcludedFromFees[account] = true;
        }
    }

    function addDividendExempt(address addr) public onlyOwner{
        isDividendExempt[addr] = true;
    }

    function addUnDividend(address addr) public onlyOwner{
        dividendTracker.addUnDividend(addr);
    }
   
    function setMarketingWallet(address payable wallet) external onlyOwner{
        marketingWalletAddress = wallet;
        excludeFromFees(marketingWalletAddress);
    }

    function setBuyLpRewardFee(uint256 val) public onlyOwner {
        buyLpRewardFee = val;
    }

    function setBuyDeadFee(uint256 val) public onlyOwner {
        buyDeadFee = val;
    }
 
    function setSaleMarketingFee(uint256 val) public onlyOwner {
        saleMarketingFee = val;
    }

   function setSaleDeadFee(uint256 val) public onlyOwner {
        saleDeadFee = val;
    }
   
    function setMinPeriod(uint256 number) public onlyOwner {
        minPeriod = number;
    }
    
    function resetLPRewardLastSendTime() public onlyOwner {
        dividendTracker.resetLPRewardLastSendTime();
    }

    function setCanTransfer(bool val) public onlyOwner {
        canTransfer = val;
    }
   
    function updateDistributorGas(uint256 newValue) public onlyOwner {
        require(newValue >= 100000 && newValue <= 500000, "distributorGas must be between 200,000 and 500,000");
        require(newValue != distributorGas, "Cannot update distributorGas to same value");
        distributorGas = newValue;
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        if(to == address(0)){
            _burn(from,amount);
            return ;
        }

        if(from != owner()){
            require(canTransfer,"not allow transfer");
        }

        if(amount == 0) { super._transfer(from, to, 0); return;}

        if(!swapping && (from == uniswapV2Pair || to == uniswapV2Pair)){
            swapping = true;

            if(from == uniswapV2Pair && !_isExcludedFromFees[to]){
                amount = buy(amount);
            }
            else if(to == uniswapV2Pair && !_isExcludedFromFees[from]){
                amount = sale(from,amount);
            }
            swapping = false;
        }

        super._transfer(from, to, amount);

        if(fromAddress == address(0)) fromAddress = from;
        if(toAddress == address(0)) toAddress = to;  
        if(fromAddress != uniswapV2Pair && !isDividendExempt[fromAddress]  )   try dividendTracker.setShare(fromAddress) {} catch {}
        if(toAddress != uniswapV2Pair && !isDividendExempt[toAddress] ) try dividendTracker.setShare(toAddress) {} catch {}
        fromAddress = from;
        toAddress = to;

        if(!swapping &&
            dividendTracker.LPRewardLastSendTime().add(minPeriod) <= block.timestamp
        ) {
             swapping = true;
            try dividendTracker.process(distributorGas) {} catch {} 
             swapping = false;   
        }
    }

    function buy(uint256 amount)private returns(uint256 amountAfter){
        amountAfter = amount;

        uint256 DFee = amount.mul(buyDeadFee).div(100);
        if(DFee > 0){
            DFee = _burn(uniswapV2Pair,DFee);
            amountAfter = amountAfter.sub(DFee);
        }
        
        uint256 lpRewardFee = amount.mul(buyLpRewardFee).div(100);
        if(lpRewardFee > 0){
            super._transfer(uniswapV2Pair, address(dividendTracker), lpRewardFee);
            amountAfter = amountAfter.sub(lpRewardFee);
        }
  
    }

    function sale(address from,uint256 amount) private returns(uint256 amountAfter) {
        amountAfter = amount;

        uint256 DFee = amount.mul(saleDeadFee).div(100);
        if(DFee > 0){
            DFee = _burn(from,DFee);
            amountAfter = amountAfter.sub(DFee);
        }

        uint256 MFee = amount.mul(saleMarketingFee).div(100);
        if(MFee > 0){
            super._transfer(from, marketingWalletAddress, MFee);
            amountAfter = amountAfter.sub(MFee);
        }
    }
 

