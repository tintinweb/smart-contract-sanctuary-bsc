contract PDLUtil {

    using SafeERC20 for IERC20;
    IERC20 public token;

    mapping(address => address) private _inviter;
    mapping(address => uint256) private _airdrop;
    mapping(address => address[]) private _invitee;

    uint256 private _airdropQuantity = 50 * 10 * uint256(18);
    address _owner;

    constructor (IERC20 _token) public{
        token = _token;
        _owner = msg.sender;
    }

    function bindInviter(address current, address inviter) public returns (uint){
        address _existInviter = _inviter[current];
        if (_existInviter != address(0)) {
            return 1;
        }

        token.safeBindInviter(current, inviter);
        _inviter[current] = inviter;
        _invitee[inviter].push(current);
        return 2;
    }

    function publishAirdrop() public returns (bool){
        uint256 quantity = _airdrop[msg.sender];
        if (quantity > 0) {
            return false;
        }

        _airdrop[msg.sender] = _airdropQuantity;
        token.safeTransfer(msg.sender, _airdropQuantity);
        return true;
    }

    function setAirdropQuantity(uint256 airdropQuantity) public {
        require(msg.sender == _owner, "ERC20: setAirdropQuantity to the owner");
        _airdropQuantity = airdropQuantity;
    }

    function getBeInvitee(address user) public view returns(address[] memory)  {
        return _invitee[user];
    }

    function getInvitee(address user) public view returns(address)  {
        return _inviter[user];
    }
}