contract PnmReserve is Initializable {
    using SafeERC20 for IERC20;

    IERC20 public pnm;

    address public rewarder;
    address public pool;

    /* ============ CONSTRUCTORS ========== */

    function initialize(address _pnm) external initializer {
        require(_pnm != address(0), "PnmReserve::constructor: invalid address");
        pnm = IERC20(_pnm);
    }

    /* ============ MUTATIVE ========== */

    function setRewarder(address _rewarder) external returns (bool) {
        require(rewarder == address(0), "PnmReserve::setRewarder: NOT_ALLOWED");
        rewarder = _rewarder;
        return true;
    }

    function setPool(address _pool) external returns (bool) {
        require(pool == address(0), "PnmReserve::setPool: NOT_ALLOWED");
        pool = _pool;
        return true;
    }

    function transfer(address _to, uint256 _amount) external {
        require(
            rewarder == msg.sender || pool == msg.sender,
            "PnmReserve::transfer: Only allowed funds can withdraw"
        );
        require(_to != address(0), "PnmReserve::transfer: Invalid address");
        pnm.safeTransfer(_to, _amount);
    }
}