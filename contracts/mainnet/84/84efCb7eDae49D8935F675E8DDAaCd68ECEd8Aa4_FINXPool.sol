    bool public userLimit;

    // Whether it is initialized
    bool public isInitialized;

    // The block number when CAKE mining ends.
    uint256 public bonusEndBlock;

    // The block number when CAKE mining starts.
    uint256 public startBlock;

    // The pool limit (0 if none)
    uint256 public poolLimitPerUser;

    // Block numbers available for user limit (after start block)
    uint256 public numberBlocksForUserLimit;

    // The precision factor
    uint256 public PRECISION_FACTOR;

    // The reward token
    IERC20Metadata public rewardToken;

    // The staked token
    IERC20Metadata public stakedToken;

    // The dependance token
    IERC20Metadata public dependanceToken;

    //ownership
    address public adminAddr;
    
    // multiply for dependance staked amount
    uint256 public multiplyDependanceToken;

    // Info of each user that stakes tokens (stakedToken)
    mapping(address => UserInfo[]) public userInfos;
    Package[] public packages; 
    uint256 public penaltyFees;

    struct UserInfo {
        uint256 amount; // Stake Amount
        uint256 rewardAmount; // Reward Amount
        uint256 stakeBlockNumber; // Block number staked 
        uint256 matureBlockNumber; // Block number mature
        uint256 apy; // Reward Percentage
        uint256 balance; // Stake Balance
        uint256 rewardBalance; // Reward Balance
    }

    struct Package {
        bytes32 name;
        uint256 stakeBlockNumber;
        uint256 apy;
    }

    event Deposit(address indexed user, uint256 amount, uint256 apy);
    event EmergencyWithdraw(address indexed user, uint256 amount);
    event NewStartAndEndBlocks(uint256 startBlock, uint256 endBlock);
    event NewRewardPerBlock(uint256 rewardPerBlock);
    event NewMultiplyDependanceToken(uint256 multiply);
    event NewPoolLimit(uint256 poolLimitPerUser);
    event RewardsStop(uint256 blockNumber);
    event TokenRecovery(address indexed token, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    event Reward(address indexed user, uint256 amount);
    event UpdateProfileAndThresholdPointsRequirement(bool isProfileRequested, uint256 thresholdPoints);

    /**
     * @notice Constructor
     */
    constructor() {
    }

    /*
     * @notice Initialize the contract
     * @param _dependanceToken: depandance token address
     * @param _stakedToken: staked token address
     * @param _rewardToken: reward token address
     * @param _startBlock: start block
     * @param _bonusEndBlock: end block
     * @param _poolLimitPerUser: pool limit per user in stakedToken (if any, else 0)
     * @param _numberBlocksForUserLimit: block numbers available for user limit (after start block)
     * @param _admin: admin address with ownership
     */
    function initialize(
        IERC20Metadata _dependanceToken,
        IERC20Metadata _stakedToken,
        IERC20Metadata _rewardToken,
        uint256 _startBlock,
        uint256 _bonusEndBlock,
        uint256 _poolLimitPerUser,
        uint256 _numberBlocksForUserLimit,
        uint256 _multiplyDependanceToken,
        uint256 _penaltyFees,
        address _admin
    ) external {
        require(!isInitialized, "Already initialized");

        // Make this contract initialized
        isInitialized = true;

        stakedToken = _stakedToken;
        dependanceToken = _dependanceToken;
        rewardToken = _rewardToken;
        startBlock = _startBlock;
        bonusEndBlock = _bonusEndBlock;
        // Set the multiply deposit based on depandance deposit
        multiplyDependanceToken = _multiplyDependanceToken;
        penaltyFees = _penaltyFees;
        adminAddr = _admin;

        if (_poolLimitPerUser > 0) {
            userLimit = true;
            poolLimitPerUser = _poolLimitPerUser;
            numberBlocksForUserLimit = _numberBlocksForUserLimit;
        }

        uint256 decimalsRewardToken = uint256(rewardToken.decimals());
        require(decimalsRewardToken < 30, "Must be less than 30");

        PRECISION_FACTOR = uint256(10**(uint256(30) - decimalsRewardToken));

        // Transfer ownership to the admin address who becomes owner of the contract
        transferOwnership(_admin);
    }

    /*
     * @notice Deposit staked tokens and collect reward tokens (if any)
     * @param _amount: amount to withdraw (in rewardToken)
     */
    function deposit(uint256 _amount, uint256 _stakeBlock) external nonReentrant {
        require(_stakeBlock > 0, "Deposit: Stake block is invalid"); // prevents errors when timestamp entered in milliseconds
        require(_amount > 0, "Deposit: Insufficient fund");
        require(isInitialized, "Not initialized");

        userLimit = hasUserLimit();
        uint256 totalStaked = userTotalStaked(msg.sender);

        require(!userLimit || ((_amount + totalStaked) <= poolLimitPerUser), "Deposit: Amount above limit");
        if(multiplyDependanceToken > 0){
            require((_amount + totalStaked) <= dependanceToken.userInfo(msg.sender).amount * multiplyDependanceToken, "Deposit: Dependance Token Amount above limit");
        }

        bool packageExists = false;
        Package memory package;
        for(uint256 i =0; i< packages.length; i++){
           if(packages[i].stakeBlockNumber == _stakeBlock){
              //emit event
              packageExists = true;
              package = packages[i];
           }
        }
        require(packageExists, "Invalid Package");

        stakedToken.safeTransferFrom(address(msg.sender), address(this), _amount);

        UserInfo memory userInfo;
        userInfo.amount = _amount;
        userInfo.rewardAmount = _amount.mul(package.apy).div(10000).mul(_stakeBlock).div(10512000);
        userInfo.stakeBlockNumber = block.number;
        userInfo.matureBlockNumber = block.number + _stakeBlock;
        userInfo.apy = package.apy;
        userInfo.balance = userInfo.amount;
        userInfo.rewardBalance = userInfo.rewardAmount;
        
        userInfos[address(msg.sender)].push(userInfo);

        emit Deposit(msg.sender, _amount, package.apy);
    }

    /*
     * @notice Withdraw staked tokens and collect reward tokens
     * @param _amount: amount to withdraw (in rewardToken)
     */
    function withdraw(uint256 _stakeBlockNumber) external nonReentrant {
        require(userInfos[address(msg.sender)].length > 0, "Stake not found");
        require(stakedToken.balanceOf(address(this)) > 0, "Insufficient fund");

        for(uint256 i =0; i< userInfos[address(msg.sender)].length; i++){
           if(userInfos[address(msg.sender)][i].stakeBlockNumber == _stakeBlockNumber){
                UserInfo storage userInfo = userInfos[address(msg.sender)][i];
                require(userInfo.balance > 0 , "This BlockNumber is Unstaked");
                require(userInfo.matureBlockNumber < block.number, "Not mature yet");

                uint256 _balance = userInfo.balance;
                userInfo.balance = userInfo.balance.sub(_balance);

                stakedToken.safeTransfer(address(msg.sender), _balance);

                emit Withdraw(msg.sender, _balance);

                if(userInfo.rewardBalance > 0){
                    uint256 _rewards = userInfo.rewardBalance;
                    userInfo.rewardBalance = userInfo.rewardBalance.sub(_rewards);

                    rewardToken.safeTransfer(address(msg.sender), _rewards);

                    emit Reward(address(msg.sender), _rewards);
                }

                return;
           }
        }
        revert("Stake not found");
    }

    function harvest(uint256 _stakeBlockNumber) external nonReentrant {
        require(userInfos[address(msg.sender)].length > 0, "Stake not found");
        require(rewardToken.balanceOf(address(this)) > 0, "Insufficient fund");

        for(uint256 i =0; i< userInfos[address(msg.sender)].length; i++){
           if(userInfos[address(msg.sender)][i].stakeBlockNumber == _stakeBlockNumber){
                UserInfo storage userInfo = userInfos[address(msg.sender)][i];
                require(userInfo.rewardBalance > 0 , "This BlockNumber is Harvested");
                require(userInfo.matureBlockNumber < block.number, "Not mature yet");
                // harvest
                uint256 _rewards = userInfo.rewardBalance;
                userInfo.rewardBalance = userInfo.rewardBalance.sub(_rewards);

                rewardToken.safeTransfer(address(msg.sender), _rewards);

                emit Reward(address(msg.sender), _rewards);

                return;
           }
       }
        revert("Stake not found");
    }

    /*
     * @notice Withdraw staked tokens without caring about rewards rewards
     * @dev Needs to be for emergency.
     */
    function emergencyWithdraw(uint256 _stakeBlockNumber) external nonReentrant {
        require(userInfos[address(msg.sender)].length > 0, "Stake not found");
        require(stakedToken.balanceOf(address(this)) > 0, "Insufficient fund");

        for(uint256 i =0; i< userInfos[address(msg.sender)].length; i++){
           if(userInfos[address(msg.sender)][i].stakeBlockNumber == _stakeBlockNumber){
                UserInfo storage userInfo = userInfos[address(msg.sender)][i];
                require(userInfo.balance > 0 , "This BlockNumber is Unstaked");
                require(userInfo.matureBlockNumber > block.number, "Is matured");

                uint256 _balance = userInfo.balance;
                uint256 _penalty = _balance.mul(penaltyFees).div(10000);
                userInfo.balance = userInfo.balance.sub(_balance);
                userInfo.rewardBalance = 0;

                stakedToken.safeTransfer(address(msg.sender), _balance.sub(_penalty));
                stakedToken.safeTransfer(adminAddr, _penalty);

                emit EmergencyWithdraw(msg.sender, _balance);

                return;
            }
        }
        revert("Stake not found");
    }

    /*
     * @notice Stop rewards
     * @dev Only callable by owner. Needs to be for emergency.
     */
    function recoverCoin(uint256 _amount) external onlyOwner {
        rewardToken.safeTransfer(address(msg.sender), _amount);
    }

    /**
     * @notice Allows the owner to recover tokens sent to the contract by mistake
     * @param _token: token address
     * @dev Callable by owner
     */
    function recoverToken(address _token) external onlyOwner {
        // require(_token != address(stakedToken), "Operations: Cannot recover staked token");
        // require(_token != address(rewardToken), "Operations: Cannot recover reward token");

        uint256 balance = IERC20Metadata(_token).balanceOf(address(this));
        require(balance != 0, "Operations: Cannot recover zero balance");

        IERC20Metadata(_token).safeTransfer(address(msg.sender), balance);

        emit TokenRecovery(_token, balance);
    }

    /*
     * @notice Extend rewards
     * @dev Only callable by owner
     */
    function extendReward(uint256 _blocknumber) external onlyOwner {
        bonusEndBlock = _blocknumber;
    }

    /*
     * @notice Update pool limit per user
     * @dev Only callable by owner.
     * @param _userLimit: whether the limit remains forced
     * @param _poolLimitPerUser: new pool limit per user
     */
    function updatePoolLimitPerUser(bool _userLimit, uint256 _poolLimitPerUser) external onlyOwner {
        require(userLimit, "Must be set");
        if (_userLimit) {
            require(_poolLimitPerUser > poolLimitPerUser, "New limit must be higher");
            poolLimitPerUser = _poolLimitPerUser;
        } else {
            userLimit = _userLimit;
            poolLimitPerUser = 0;
        }
        emit NewPoolLimit(poolLimitPerUser);
    }

    function getUserInfos(address _user) public view returns (
        uint256[] memory stakeBlockNumber
    ) {
        uint256[] memory _stakeBlockNumber = new uint256[](userInfos[_user].length);

        for(uint256 i =0; i< userInfos[_user].length; i++){
            _stakeBlockNumber[i] = userInfos[_user][i].stakeBlockNumber;
        }

        return (_stakeBlockNumber);
    }

    function getUserInfo(address _user, uint256 _stakeBlockNumber) public view returns (
        uint256 amount, 
        uint256 rewardAmount,
        uint256 stakeBlockNumber,
        uint256 matureBlockNumber,
        uint256 apy,
        uint256 balance,
        uint256 rewardBalance
    ) {
        for(uint256 i =0; i< userInfos[_user].length; i++){
           if(userInfos[_user][i].stakeBlockNumber == _stakeBlockNumber){
                UserInfo storage userInfo = userInfos[_user][i];
                //emit event
                return (
                    userInfo.amount,
                    userInfo.rewardAmount,
                    userInfo.stakeBlockNumber,
                    userInfo.matureBlockNumber,
                    userInfo.apy,
                    userInfo.balance,
                    userInfo.rewardBalance
                );
           }
       }
       revert("PACKAGE_NOT_FOUND");
    }

    function addPackage(bytes32 _name, uint256 _stakeBlockNumber, uint256 _apy) public onlyOwner {
        require(_stakeBlockNumber > 0, "Stake block number invalid");
        require(_apy > 0, "APY Invalid");

        for(uint256 i =0; i< packages.length; i++){
           if(packages[i].stakeBlockNumber == _stakeBlockNumber){
              //emit event
            revert("Package exists");
            }
        }

        Package memory package = Package(_name, _stakeBlockNumber, _apy);
        packages.push(package);
    }

    function removePackage(uint256 _stakeBlockNumber) public onlyOwner {
        require(packages.length > 0);
        for(uint256 i =0; i< packages.length; i++){
           if(packages[i].stakeBlockNumber == _stakeBlockNumber){
              packages[i] = packages[packages.length-1];
              delete packages[packages.length-1];
              packages.pop();
              return;
            }
        }
        revert("Package not exists");
    }

    function getPackagesCount() public view returns (uint256 count) {
        return packages.length;
    }

    function getPackages() public view returns (bytes32[] memory name , uint256[] memory stakeBlockNumber , uint256[] memory apy) {
        bytes32[] memory _name = new bytes32[](packages.length);
        uint256[] memory _stakeBlockNumber = new uint256[](packages.length);
        uint256[] memory _apy = new uint256[](packages.length);

        for(uint256 i =0; i< packages.length; i++){
            _name[i] = packages[i].name;
            _stakeBlockNumber[i] = packages[i].stakeBlockNumber;
            _apy[i] = packages[i].apy;
        }

        return (_name, _stakeBlockNumber, _apy);
    }

    /*
     * @notice Update Multiply Deposit based on depandance token
     * @dev Only callable by owner.
     * @param _multiply: multiply based on depandance
     */
    function updateMultiplyDependanceToken(uint256 _multiply) external onlyOwner {
        multiplyDependanceToken = _multiply;
        emit NewMultiplyDependanceToken(_multiply);
    }

    function updateAdminAddr(address _admin) external onlyOwner {
        adminAddr = _admin;
    }

    function updatePenaltyFees(uint256 _fees) external onlyOwner {
        penaltyFees = _fees;
    }

    /**
     * @notice It allows the admin to update start and end blocks
     * @dev This function is only callable by owner.
     * @param _startBlock: the new start block
     * @param _bonusEndBlock: the new end block
     */
    function updateStartAndEndBlocks(uint256 _startBlock, uint256 _bonusEndBlock) external onlyOwner {
        require(block.number < startBlock, "Pool has started");
        require(_startBlock < _bonusEndBlock, "New startBlock must be lower than new endBlock");
        require(block.number < _startBlock, "New startBlock must be higher than current block");

        startBlock = _startBlock;
        bonusEndBlock = _bonusEndBlock;

        emit NewStartAndEndBlocks(_startBlock, _bonusEndBlock);
    }

    function userTotalStaked(address _user) public view returns (uint256) {
        uint256 totalStaked = 0;
        for(uint256 i =0; i< userInfos[_user].length; i++){
            totalStaked = totalStaked.add(userInfos[_user][i].amount);
        }
        return totalStaked;
    }

    /*
     * @notice Return user limit is set or zero.
     */
    function hasUserLimit() public view returns (bool) {
        if (!userLimit || (block.number >= (startBlock + numberBlocksForUserLimit))) {
            return false;
        }

        return true;
    }
}