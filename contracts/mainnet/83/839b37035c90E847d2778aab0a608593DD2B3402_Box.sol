import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";

import "./interfaces/IProps.sol";
import "./interfaces/ICards.sol";
import "./interfaces/IStore.sol";

contract Box is Ownable, ReentrancyGuard, Pausable, ERC721Holder {
    ICards public cards;
    IProps public props;
    IStore public store;

    uint256[] public probabilitys;

    mapping(uint256 => uint256) public looksAmount;

    event CardsUpdated(address previousValue, address newValue);
    event PropsUpdated(address previousValue, address newValue);
    event StoreUpdated(address previousValue, address newValue);

    event ProbabilitiesUpdated(uint256[] previousValues, uint256[] newValues);

    event Opened(address indexed account, uint256 tokenId);

    constructor(address cards_, address props_,address store_) {
        cards = ICards(cards_);
        props = IProps(props_);
        store = IStore(store_);

        probabilitys = [98, 2];
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function setCards(address value) external onlyOwner {
        require(value != address(0), "Cannot be zero address");

        address previousValue = address(cards);
        cards = ICards(value);

        emit CardsUpdated(previousValue, value);
    }

    function setProps(address value) external onlyOwner {
        require(value != address(0), "Cannot be zero address");

        address previousValue = address(props);
        props = IProps(value);

        emit PropsUpdated(previousValue, value);
    }

    function setStore(address value) external onlyOwner {
        require(value != address(0), "Cannot be zero address");

        address previousValue = address(props);
        store = IStore(value);

        emit StoreUpdated(previousValue, value);
    }

    function updateProbabilities(uint256[] memory values) external onlyOwner {
        require(
            values.length >= 2 && values.length <= 5,
            "Invalid new array length"
        );
        
        uint256[] memory previousValues = probabilitys;
        probabilitys = values;

        emit ProbabilitiesUpdated(previousValues, values);
    }

    function open() external whenNotPaused nonReentrant() {
        
        uint256 randomNumber = _random(100);
        uint256 temp;
        uint256 quality;
        for (uint8 i = 0; i < probabilitys.length; i++) {
            temp += probabilitys[i];
            if (randomNumber < temp) {
                quality = i;
                break;
            }
        }

        //执行mint
        props.burn(_msgSender(), store.BOX(), 1);
        uint256 tokenId = cards.mint(_msgSender(),quality);

        emit Opened(_msgSender(),tokenId);
    }

    function _random(uint256 number) public view returns (uint256) {
        return
            uint256(
                keccak256(
                    abi.encodePacked(
                        block.timestamp,
                        block.difficulty,
                        msg.sender
                    )
                )
            ) % number;
    }
}

