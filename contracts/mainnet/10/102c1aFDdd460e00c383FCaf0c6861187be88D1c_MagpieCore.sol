import "../interfaces/IMagpieCore.sol";
import "../interfaces/IMagpieRouter.sol";
import "./LibBytes.sol";

library LibSwap {

  function getFromAssetId(IMagpieRouter.Route memory route, address[] memory assets) internal pure returns (address) {
    return assets[route.hops[0].path[0]];
  }
  
  function getToAssetId(IMagpieRouter.Route memory route, address[] memory assets) internal pure returns (address) {
    IMagpieRouter.Hop memory hop = route.hops[0];
    return assets[hop.path[hop.path.length - 1]];
  }

  function getAmountIn(IMagpieRouter.Route[] memory routes)  internal pure returns (uint256) {
    uint256 amountIn = 0;

    for (uint256 i = 0; i < routes.length; i++) {
      amountIn += routes[i].amountIn;
    }

    return amountIn;
  }

  function parsePayload(bytes memory encodedPayload) internal pure returns (IMagpieCore.ValidationOutPayload memory payload) {
    uint256 i = 0;

    payload.fromAssetId = LibBytes.toAddress(encodedPayload, i);
    i += 32;

    payload.toAssetId = LibBytes.toAddress(encodedPayload, i);
    i += 32;

    payload.to = LibBytes.toAddress(encodedPayload, i);
    i += 32;

    payload.recipientId = LibBytes.toAddress(encodedPayload, i);
    i += 32;

    payload.recipientChainId = LibBytes.toUint16(encodedPayload, i);
    i += 2;

    payload.amountOutMin = LibBytes.toUint256(encodedPayload, i);
    i += 32;

    require(encodedPayload.length == i, 'MagpieCore: payload is invalid');
  }

}

