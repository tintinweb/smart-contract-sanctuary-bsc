pragma solidity 0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./interfaces/IMagpieCore.sol";
import "./interfaces/IMagpieRouter.sol";
import "./interfaces/IWormhole.sol";
import "./interfaces/IWormholeCore.sol";
import "./lib/LibAsset.sol";
import "./lib/LibSwap.sol";

contract MagpieCore is ReentrancyGuard, Ownable, IMagpieCore {
  Config public config;

  constructor(Config memory _config) {
    config = _config;
  }

  function updateConfig(Config calldata _config) external onlyOwner {
    require(_config.weth != address(0), 'MagpieCore: invalid weth');
    require(_config.routerAddress != address(0), 'MagpieCore: invalid routerAddress');
    require(_config.tokenBridgeAddress != address(0), 'MagpieCore: invalid tokenBridgeAddress');
    require(_config.coreBridgeAddress != address(0), 'MagpieCore: invalid coreBridgeAddress');
    require(_config.consistencyLevel >= 1, 'MagpieCore: invalid consistencyLevel');

    config = _config;
    
    emit ConfigUpdated(config, msg.sender);
  }

  // TODO: Add swap function with native token swap, add intermediaries check
  function swapIn(SwapInArgs memory args) external payable override returns(uint256[] memory amountOuts, uint64, uint64) {
    address fromAssetId = LibSwap.getFromAssetId(args.swapArgs.routes[0], args.swapArgs.assets);
    address toAssetId = LibSwap.getToAssetId(args.swapArgs.routes[0], args.swapArgs.assets);
    uint256 amountIn = LibSwap.getAmountIn(args.swapArgs.routes);

    LibAsset.transferFromERC20(fromAssetId, msg.sender, address(this), amountIn);
    LibAsset.increaseERC20Allowance(fromAssetId, config.routerAddress, amountIn);

    amountOuts = IMagpieRouter(config.routerAddress).swap(args.swapArgs);
    uint256 amountOut = 0;
    for (uint256 i = 0; i < amountOuts.length; i++) {
      amountOut += amountOuts[i];
    }

    require(LibAsset.getOwnBalance(toAssetId) == amountOut, 'MagpieCore: invalid amountOut');

    LibAsset.increaseERC20Allowance(toAssetId, config.tokenBridgeAddress, amountIn);

    uint32 nonceValue = uint32(block.timestamp % 2**32);

    uint64 tokenSequence = IWormhole(config.tokenBridgeAddress).transferTokens(toAssetId, amountOut, args.payload.recipientBridgeChainId, args.payload.recipientId, 0, nonceValue);

    bytes memory payload = abi.encodePacked(
      args.payload.fromAssetId,
      args.payload.toAssetId,
      args.payload.to,
      args.payload.recipientId,
      args.payload.recipientChainId,
      args.payload.amountOutMin
    );

    uint64 coreSequence = IWormholeCore(config.coreBridgeAddress).publishMessage(nonceValue, payload, config.consistencyLevel);

    emit SwappedIn(args, amountOuts, coreSequence, tokenSequence, msg.sender);

    return (amountOuts, coreSequence, tokenSequence);
  }

  function swapOut(
    SwapOutArgs memory args
  ) external override returns(uint256[] memory amountOuts) {
    IWormhole(config.tokenBridgeAddress).completeTransfer(args.encodedVmBridge);
    (IWormholeCore.VM memory vm, bool valid, string memory reason) = IWormholeCore(config.coreBridgeAddress).parseAndVerifyVM(args.encodedVmCore);

    require(valid == true, 'MagpieCore: vmCore is invalid');

    IMagpieCore.ValidationOutPayload memory payload = LibSwap.parsePayload(vm.payload);

    address fromAssetId = LibSwap.getFromAssetId(args.swapArgs.routes[0], args.swapArgs.assets);
    address toAssetId = LibSwap.getToAssetId(args.swapArgs.routes[0], args.swapArgs.assets);

    require(payload.fromAssetId == fromAssetId, 'MagpieCore: invalid fromAssetId');
    require(payload.toAssetId == toAssetId, 'MagpieCore: invalid toAssetId');
    require(payload.to == args.swapArgs.to, 'MagpieCore: invalid to');
    require(payload.recipientId == address(this), 'MagpieCore: invalid recipientId');
    require(uint256(payload.recipientChainId) == block.chainid, 'MagpieCore: invalid recipientChainId');
    require(args.swapArgs.amountOutMin >= payload.amountOutMin, 'MagpieCore: invalid amountOutMin');

    uint256 amountIn = LibSwap.getAmountIn(args.swapArgs.routes);
    LibAsset.increaseERC20Allowance(fromAssetId, config.routerAddress, amountIn);

    amountOuts = IMagpieRouter(config.routerAddress).swap(args.swapArgs);

    emit SwappedOut(args, amountOuts, msg.sender);
  }

}

