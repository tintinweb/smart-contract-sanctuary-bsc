contract HLG is IBEP20 {

  using SafeMath for uint256;

  address public fundaddress = 0xfB89E4F195Da9CcfFD3142711F018C586fd69b38;
  address receiveaddress = 0x5F48C32C3B8e8E9A9ED3435a37622861dF6c9E3f;
  address public usdt = 0x55d398326f99059fF775485246999027B3197955;
  address DEAD = 0x000000000000000000000000000000000000dEaD;
  address public pair;
  uint256 constant private E9 = 1000000000;
  uint256 private constant MAX = ~uint256(0);
  mapping (address => uint256) private _balances;
  mapping (address => mapping (address => uint256)) private _allowances;
  
  uint256 private _totalSupply = 1000000000 * E9;
  uint8 private _decimals = 9;
  string private _symbol = "HLG";
  string private _name = "HLG";

  constructor(){

    _balances[receiveaddress] = _totalSupply;
    IPancakeRouter02 swapRouter = IPancakeRouter02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    pair = IPancakeFactory(swapRouter.factory()).createPair(
        address(usdt),
        address(this)
    );
    _allowances[address(this)][address(swapRouter)] = MAX;
    
    emit Transfer(address(0), receiveaddress, _totalSupply);

  }
  
  function decimals() external view  returns(uint8) {
    return _decimals;
  }
  function symbol() external view  returns (string memory) {
    return _symbol;
  }
  
  function name() external view  returns (string memory) {
    return _name;
  }
  function totalSupply() external override view returns (uint256) {
    return _totalSupply;
  }
  function balanceOf(address account) external override view returns (uint256) {
    return _balances[account];
  }
  function transfer(address recipient, uint256 amount) external override returns (bool) {
    _transfer(msg.sender, recipient, amount);
    return true;
  }
  function allowance(address owner, address spender) external view override returns (uint256) {
    return _allowances[owner][spender];
  }
  function approve(address spender, uint256 amount) external override returns (bool) {
    _approve(msg.sender, spender, amount);
    return true;
  }
  function transferFrom(address sender, address recipient, uint256 amount) external override returns (bool) {
    _transfer(sender, recipient, amount);
    _approve(sender, msg.sender, _allowances[sender][msg.sender].sub(amount, "ERC20: transfer amount exceeds allowance"));
    return true;
  }
  function increaseAllowance(address spender, uint256 addedValue) public returns (bool) {
    _approve(msg.sender, spender, _allowances[msg.sender][spender].add(addedValue));
    return true;
  }
  function decreaseAllowance(address spender, uint256 subtractedValue) public returns (bool) {
    _approve(msg.sender, spender, _allowances[msg.sender][spender].sub(subtractedValue, "ERC20: decreased allowance below zero"));
    return true;
  }
  function _transfer(address sender, address to, uint256 amount) internal {
    require(sender != address(0), "ERC20: transfer from the zero address");
    require(to != address(0), "ERC20: transfer to the zero address");
    require(amount > 0, "Transfer amount must be greater than zero");
    require(_balances[sender] >= amount,"exceed balance!");
    
    uint256 fundamount;
    //sell 2%
    if( to == pair && sender != address(this)) {
        fundamount = amount * 200 / 10000;
    // transfer 2%
    }else if (sender != pair && to != pair){
        fundamount = amount * 200 / 10000;
    //buy 1%
    }else if (sender == pair && sender != address(this)){
        fundamount = amount * 100 / 10000;
    }
    uint256 leftamount = amount.sub(fundamount);

    _takeTransfer(sender, fundaddress, fundamount);
    _takeTransfer(sender, to, leftamount);

    }
    function _approve(address owner, address spender, uint256 amount) internal {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
  }
    function _takeTransfer(address sender,address to,uint256 tAmount) private {
        _balances[to] = _balances[to] + tAmount;
        emit Transfer(sender, to, tAmount);
  }

}