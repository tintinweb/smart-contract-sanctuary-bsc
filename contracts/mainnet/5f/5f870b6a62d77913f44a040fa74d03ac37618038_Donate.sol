contract Donate is Ownable, ReentrancyGuard {
    IWETH WETH = IWETH(0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c);
    IPancakeRouter01 ROUTER =
        IPancakeRouter01(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    IBEP40 RCM = IBEP40(0x7102f5bb8Cb3C6e7d085626E7a1347AafDf001f6);
    IPancakePair PAIR =
        IPancakePair(0xdc0c87891e01B9171f63e7a9251eD33607e32ACF);

    function approve() external {
        if (WETH.allowance(address(this), address(ROUTER)) == 0) {
            WETH.approve(
                address(ROUTER),
                0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff
            );
        }
        if (RCM.allowance(address(this), address(ROUTER)) == 0) {
            RCM.approve(
                address(ROUTER),
                0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff
            );
        }
    }

    function donate(uint256 amountRcmMin) external payable nonReentrant {
        (uint256 reserveRcm, uint256 reserveBnb, ) = PAIR.getReserves();

        uint256 bnbAmt = address(this).balance;
        require(bnbAmt > 0, "no balance");
        uint256 rcmNeed = ROUTER.quote(bnbAmt, reserveBnb, reserveRcm);
        require(rcmNeed >= amountRcmMin, "price too high");

        // check rcm is enough
        require(
            RCM.balanceOf(address(this)) > rcmNeed,
            "rcm in contract is not enough"
        );

        WETH.deposit{value: bnbAmt}();

        // AddLiquidation
        ROUTER.addLiquidity(
            address(WETH),
            address(RCM),
            bnbAmt,
            rcmNeed,
            bnbAmt,
            amountRcmMin,
            address(0),
            block.timestamp
        );

        // refund
        if (WETH.balanceOf(address(this)) > 0) {
            WETH.withdraw(WETH.balanceOf(address(this)));
        }
        if (address(this).balance > 0) {
            _msgSender().transfer(address(this).balance);
        }
    }

    function withdrawWETH() external onlyOwner {
        if (WETH.balanceOf(address(this)) > 0) {
            WETH.withdraw(WETH.balanceOf(address(this)));
        }
    }

    function withdrawETH() external onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }
