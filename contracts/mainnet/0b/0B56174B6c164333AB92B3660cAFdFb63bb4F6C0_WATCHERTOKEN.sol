contract WATCHERTOKEN is ERC20, Ownable {

    uint256 public buyFee;
    uint256 public sellFee;
    uint256 public swapTokenPercentToLiquid_1000;
    bool public autoSwap = true;
    bool private swapping = false;

    // wallets
    uint256 private decimals_ = 18;
    address mktWallet;
    address devWallet;
    address bbWallet;

    // setting anti-bots
    uint256 private tradeCooldown;
    mapping(address => uint256) private lastTrade;

    // limit
    mapping(address => bool) private excludedFromLimits;

    IUniswapV2Router02 public uniswapV2Router;
    address public uniswapV2Pair;

    address private DEAD = 0x000000000000000000000000000000000000dEaD;

    mapping(address => bool) private _noFeeNeeded;
    mapping(address => bool) public isAMM;

    event ExcludeFromFees(address indexed account, bool isExcluded);
    event FeesUpdated(uint256 buyFee, uint256 sellFee);
    event marketingWalletChanged(address mktWallet);
    event devWalletChanged(address devWallet);
    event buybackWalletChanged(address bbWallet);
    event SetAutomatedMarketMakerPair(address indexed pair, bool indexed value);
    event UpdateUniswapV2Router(
        address indexed newAddress,
        address indexed oldAddress
    );

    constructor(
        address _mkt,
        address _dev,
        address _bb
    ) payable ERC20("The Watcher", "WATCHER") {
        // variables needed
        uint256 totalSupply_ = 97_000_000_000_000_000;
        buyFee = 8;
        sellFee = 8;
        decimals_ = 18;
        autoSwap = true;
        swapTokenPercentToLiquid_1000 = 20;

        mktWallet = _mkt;
        devWallet = _dev;
        bbWallet = _bb;
        //end

        tradeCooldown = 10; // seconds

        address router_pcs = 0x10ED43C718714eb63d5aA57B78B54704E256024E;

        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(router_pcs);

        address _uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
            .createPair(address(this), _uniswapV2Router.WETH());

        uniswapV2Router = _uniswapV2Router;
        uniswapV2Pair = _uniswapV2Pair;

        _approve(address(this), address(uniswapV2Router), type(uint256).max);

        _setAutomatedMarketMakerPair(_uniswapV2Pair, true);

        _noFeeNeeded[owner()] = true;
        _noFeeNeeded[DEAD] = true;
        _noFeeNeeded[address(this)] = true;

        excludedFromLimits[owner()] = true;
        excludedFromLimits[address(this)] = true;

        _mint(owner(), totalSupply_ * (10**decimals_));
    }

    receive() external payable {}

    function claimTokens(address token) external onlyOwner {
        require(token != address(this), "Owner cannot claim this tokens");
        if (token == address(0x0)) {
            payable(msg.sender).transfer(address(this).balance);
            return;
        }
        IERC20 ERC20token = IERC20(token);
        uint256 balance = ERC20token.balanceOf(address(this));
        ERC20token.transfer(msg.sender, balance);
    }

    function changeTradeCooldown(uint256 _tradeCooldown) external onlyOwner {
        require(_tradeCooldown < 61);
        tradeCooldown = _tradeCooldown;
    }

    function updateSwapTokenPercentToLiquid_1000(uint256 _percent_1000) external onlyOwner {
        require(_percent_1000 <= 1000);
        swapTokenPercentToLiquid_1000 = _percent_1000;
    }

    function updateAutoSwap(bool _auto) external onlyOwner {
        autoSwap = _auto;
    }

    function isContract(address account) internal view returns (bool) {
        return account.code.length > 0;
    }

    //=======Wallets=======//

    function changeMarketingWallet(address _marketingWallet)
        external
        onlyOwner
    {
        mktWallet = _marketingWallet;
        emit marketingWalletChanged(mktWallet);
    }

    function changeDevWallet(address _devWallet)
        external
        onlyOwner
    {
        devWallet = _devWallet;
        emit devWalletChanged(devWallet);
    }

    function changeBuyBackWallet(address _bbWallet)
        external
        onlyOwner
    {
        bbWallet = _bbWallet;
        emit buybackWalletChanged(bbWallet);
    }

    //=======Add Pair=======//

    function updateUniswapV2Router(address newAddress) external onlyOwner {
        require(
            newAddress != address(uniswapV2Router),
            "The router already has that address"
        );
        emit UpdateUniswapV2Router(newAddress, address(uniswapV2Router));
        uniswapV2Router = IUniswapV2Router02(newAddress);
        address _uniswapV2Pair = IUniswapV2Factory(uniswapV2Router.factory())
            .createPair(address(this), uniswapV2Router.WETH());
        uniswapV2Pair = _uniswapV2Pair;
    }

    function setAutomatedMarketMakerPair(address pair, bool value)
        public
        onlyOwner
    {
        require(
            pair != uniswapV2Pair,
            "The PancakeSwap pair cannot be removed from isAMM"
        );

        _setAutomatedMarketMakerPair(pair, value);
    }

    function _setAutomatedMarketMakerPair(address pair, bool value) private {
        require(
            isAMM[pair] != value,
            "Automated market maker pair is already set to that value"
        );
        isAMM[pair] = value;

        emit SetAutomatedMarketMakerPair(pair, value);
    }

    //=======Fee=======//

    function updateFees(uint256 _buyFee, uint256 _sellFee) external onlyOwner {
        require(_buyFee <= 10 && _sellFee <= 10, "Fees must be less than 10%");
        buyFee = _buyFee;
        sellFee = _sellFee;
        emit FeesUpdated(buyFee, sellFee);
    }

    function excludeFromFees(address account, bool excluded)
        external
        onlyOwner
    {
        require(
            _noFeeNeeded[account] != excluded,
            "Account is already the value of 'excluded'"
        );
        _noFeeNeeded[account] = excluded;

        emit ExcludeFromFees(account, excluded);
    }

    function isExcludedFromFees(address account) public view returns (bool) {
        return _noFeeNeeded[account];
    }
    
    //=======Swap=======//

    function sendBNB(address payable recipient, uint256 amount) internal {
        require(
            address(this).balance >= amount,
            "Address: insufficient balance"
        );

        (bool success, ) = recipient.call{value: amount}("");
        require(
            success,
            "Address: unable to send value, recipient may have reverted"
        );
    }

    function forceTransfer(uint256 _tokenAmount) external onlyOwner {
        uint256 contract_token = balanceOf(address(this));
        require(_tokenAmount <= contract_token);
        _doTransfer(_tokenAmount);
    }

    function _doTransfer(uint256 _tokenAmount) internal {
        uint256 initialBalance = address(this).balance;

        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = uniswapV2Router.WETH();

        uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
            _tokenAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );

        uint256 totalBalance = address(this).balance - initialBalance;

        uint256 mktAmount = totalBalance * 50 / 100;
        uint256 devAmount = totalBalance * 25 / 100;
        uint256 bbAmount = totalBalance - mktAmount - devAmount;
        sendBNB(payable(mktWallet), mktAmount);
        sendBNB(payable(devWallet), devAmount);
        sendBNB(payable(bbWallet), bbAmount);
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");
        require(amount > 0);

        bool takeFee = true;
        bool isBuy = isAMM[from];
        bool isSell = isAMM[to];

        if (_noFeeNeeded[from] || _noFeeNeeded[to]) {
            takeFee = false;
        }

        if (!isBuy && !isSell) {
            takeFee = false;
        }

        uint256 contract_token = balanceOf(address(this));
        uint256 liquidity_token = balanceOf(uniswapV2Pair);
        uint256 swapTokensAtAmount = liquidity_token * swapTokenPercentToLiquid_1000 / 1000;

        if (liquidity_token > 0 && contract_token >= swapTokensAtAmount && !swapping && autoSwap) {
            swapping = true;
            _doTransfer(swapTokensAtAmount);
            swapping = false;
        }

        if (takeFee) {
            uint256 _totalFees;

            if (isBuy) {
                _totalFees = buyFee;
            } else {
                require(
                    lastTrade[from] < (block.timestamp - tradeCooldown),
                    "No consecutive sells allowed. Please wait."
                );

                lastTrade[from] = block.timestamp;

                _totalFees = sellFee;
            }

            uint256 feeAmount = (amount * _totalFees) / 100;

            amount = amount - feeAmount;

            super._transfer(from, address(this), feeAmount);
        }

        super._transfer(from, to, amount);
    }   
}