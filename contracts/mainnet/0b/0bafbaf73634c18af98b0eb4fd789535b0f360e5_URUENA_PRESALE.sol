contract URUENA_PRESALE {
    using SafeMath for uint;
    
    address public URUENAToken;
    address public owner;
    address public URUENAOwnerAddress;
    mapping(address=>bool) public isWhiteListed;

    AggregatorV3Interface internal pricefeed;
    
    constructor (address _token, address ownerAddress){
        URUENAToken = _token;
        URUENAOwnerAddress = ownerAddress;
        owner = msg.sender;
        // pricefeed = AggregatorV3Interface(0x2514895c72f50D8bd4B4F9b1110F0D6bD2c97526); // Testnet
        pricefeed = AggregatorV3Interface(0x0567F2323251f0Aab15c8dFb1967E4e8A7D42aeE); // Mainnet
    }

    function setWhiteList(address _user) public onlyOwner() {
        isWhiteListed[_user] = true;
    }

    function setURUENAOwnerAddress(address ownerAddress) public onlyOwner() {
        URUENAOwnerAddress = ownerAddress;
    }

    // function purchase(uint256 _tokenNum) external view returns(uint256) {
    function purchase(uint256 _tokenNum) external payable {
        int data = getThePrice();
        uint256 bnbPrice = uint256(data);
        uint256 price = 700000; // $ 0.007 for normal users
        if(isWhiteListed[msg.sender]) {
            price = 1000; // $ 0.00001 for seed/partnerships
        }
        uint256 total = price.mul(_tokenNum);
        total = total.mul(10**18);
        total = total.div(bnbPrice);
        // return total;
        require(total <= msg.value , 'Please Send More Funds');
        payable(URUENAOwnerAddress).transfer(msg.value);
        IERC20(URUENAToken).transfer(msg.sender, _tokenNum * 10**18);
    }

    function transferOwnership(address _owner) public{
        require(msg.sender==owner);
        owner=_owner;
    }
    
    modifier onlyOwner(){
        require(msg.sender==owner);
        _;
    }

    function getThePrice() public view returns (int) {
        (
            uint80 roundID, 
            int price,
            uint startedAt,
            uint timeStamp,
            uint80 answeredInRound
        ) = pricefeed.latestRoundData();
        return price;
    }
    
}