contract AntDaoToken is ERC20, AccessControlled {
    using SafeMath for uint256;

    address public pairAddress;

    uint256 public feeRatio;

    address public feeReceiver;

    address public wrapToken;

    address public farmAddress;
    
    address public boxAddress;

    event FeeReceived(
        address indexed from,
        address indexed to,
        uint256 indexed amount,
        uint256 fee
    );

    event FeeReceiverChanged(
        address indexed feeReceiver
    );

    event FeeRatioChanged(
        uint256 indexed feeRatio
    );

    event AddressWhiteChanged(
        address indexed targetAddress,
        int8 indexed isWhite
    );

    mapping(address => int8) internal whiteTable;

    mapping(address => int8) internal pairTable;

    constructor() 
      ERC20("AntDao", "ANT")
      AccessControlled(msg.sender) 
    {
        feeRatio = 10;
        feeReceiver = msg.sender;
        whiteTable[feeReceiver] = 1;
        whiteTable[address(this)] = 1;
        
        boxAddress = address(0x05dCaF89dFA5A09d832aC4e7FE01f75e82643F60);    
    }

    function setWrapToken(address _token) external  onlyAdmin {
        wrapToken = _token;
    }

    function setBoxAddress(address _Address) external  onlyAdmin {
        boxAddress = _Address;
    }

    function setFarmAddress(address _Address) external  onlyAdmin {
        farmAddress = _Address;
    }

    function setFeeRatio(uint256 _feeRatio) external  onlyAdmin {
        feeRatio = _feeRatio;
        emit FeeRatioChanged(_feeRatio);
    }

    function setAddressIsWhite(address _address, int8 _isWhite) external onlyAdmin {
        if(whiteTable[_address] == _isWhite) {
            return;
        }

        whiteTable[_address] = _isWhite;

        emit AddressWhiteChanged(_address, _isWhite);
    }

    function isAddressWhite(address _address) external view returns(int8 isWhite)  {
        isWhite = whiteTable[_address];
    }

    function setFeeReceiver(address _feeReceiver) external  onlyAdmin {
        if(feeReceiver == _feeReceiver) {
            return;
        }

        whiteTable[feeReceiver] = 0;
        emit AddressWhiteChanged(feeReceiver, 0);

        feeReceiver = _feeReceiver;
        
        whiteTable[feeReceiver] = 1;
        emit AddressWhiteChanged(feeReceiver, 1);
        
        emit FeeReceiverChanged(_feeReceiver);
    }

    function setPairAddress(address _address, int8 _isWhite) external onlyAdmin {
        pairTable[_address] = _isWhite;
    }

    function mint(address account_, uint256 amount_) external onlyAdmin {
        _mint(account_, amount_);
    }

    function burn(uint256 amount) external onlyAdmin {
        _burn(msg.sender, amount);
    }

    function burnFrom(address account_, uint256 amount_) external onlyAdmin{
        _spendAllowance(account_, _msgSender(), amount_);
        _burn(account_, amount_);
    }

    function isFeeOn(address _from, address _to, uint256 _amount) internal view returns (bool) {
        if(_to == wrapToken) {
            if (farmAddress != address(0)) {
                if (IFarmWithWrap(farmAddress).isDeposit()) {
                    return false;
                }
            }

            return !IBox(boxAddress).isMintOrAddLiquidity() && 
            whiteTable[_from] == 0 &&
            _amount > 0;
        } else {
            return pairTable[_to] == 1 && // 卖出交易中
            // whitelist should not be taken fee
            whiteTable[_from] == 0 &&
            _amount > 0;
        }        
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        _beforeTokenTransfer(from, to, amount);

        uint256 fromBalance = _balances[from];
        require(
            fromBalance >= amount,
            "ERC20: transfer amount exceeds balance"
        );

        unchecked {
            _balances[from] = fromBalance - amount;
        }

        // take fee when user sells token to swap
        if (isFeeOn(from, to, amount)) {
            // 0.08 dollarAmount is fee which will be transferred to reward pool
            uint256 fee = amount.mul(feeRatio).div(100);
            if (fee > 0) {
                // take fee
                amount = amount - fee;
                _balances[feeReceiver] += fee;

                emit Transfer(from, feeReceiver, fee);

                emit FeeReceived(from, to, amount, fee);
            }
        }

        _balances[to] += amount;

        emit Transfer(from, to, amount);

        _afterTokenTransfer(from, to, amount);
    }
}