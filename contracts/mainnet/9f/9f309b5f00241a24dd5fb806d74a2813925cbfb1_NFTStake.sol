    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    address public RW_Token = 0x6383851Aa1378e571Da44d585d70A5c54d0d602C;
    
    uint256 public DURATION = 30 days;

    uint256 private _decimals = 9;
    
    uint256 public initreward = 100 * 10 ** _decimals;
    
    uint256 public totalReferralReward = 0;

    uint256 public _totalSupply;
    mapping(address => uint256) private _balances;

    uint256 public rewardRate = 0;
    uint256 public lastUpdateTime;
    uint256 public rewardPerTokenStored;

    mapping(address => uint256) public userRewardPerTokenPaid;

    mapping(address => uint256) public rewards;
    mapping(address => bool) isGoods;

    address public TsingLung_NFT = 0xFc6c261a583200dB15914aBa606Cd6aEFe858484;
    address public Dragon = 0xC1E8a654d9d59870bCD9C76e32c551720b20C390;
    mapping(uint256 => address) private _TLNFTList;
    mapping(uint256 => address) private _DGNFTList;

    mapping(address => mapping(uint256 => uint256)) private _TL_ownedTokens;
    mapping(uint256 => uint256) private _TL_index;
    mapping(address => uint256) private _TL_balances;

    mapping(address => mapping(uint256 => uint256)) private _DG_ownedTokens;
    mapping(uint256 => uint256) private _DG_index;
    mapping(address => uint256) private _DG_balances;

    event RewardPaid(address indexed user, uint256 reward);

    modifier updateReward(address account) {
        rewardPerTokenStored = rewardPerToken();
        lastUpdateTime = lastTimeRewardApplicable();
        if (account != address(0)) {
            rewards[account] = earned(account);
            userRewardPerTokenPaid[account] = rewardPerTokenStored;
        }
        _;
    }

    constructor () {
      rewardRate = initreward.div(DURATION);
      lastUpdateTime = block.timestamp;
    }

    function balanceOf(address account) public view returns (uint256) {
        return _balances[account];
    }

    function _TL_balancesOf(address account) public view returns (uint256) {
        return _TL_balances[account];
    }

    function _DG_balancesOf(address account) public view returns (uint256) {
        return _DG_balances[account];
    }

    function totalSupply() public view returns (uint256) {
        return _totalSupply;
    }

    function setRewardRate(uint256 _init) external onlyOwner{
        initreward = _init * 10 ** _decimals;
        rewardRate = initreward.div(DURATION);
    }

    function setRewardToken(address _address) external onlyOwner{
      RW_Token = _address;
    }

    function lastTimeRewardApplicable() public view returns (uint256) {
      return block.timestamp;
    }

    function getTLOwner(uint256 tokenid) public view returns (address) {
      return _TLNFTList[tokenid];
    }

    function getDGOwner(uint256 tokenid) public view returns (address) {
      return _DGNFTList[tokenid];
    }

    function getIsGoods(address _address) public view returns (bool) {
      return isGoods[_address];
    }


    function rewardPerToken() public view returns (uint256) {
        if (_totalSupply == 0) {
            return rewardPerTokenStored;
        }
        return
            rewardPerTokenStored.add(
                lastTimeRewardApplicable()
                    .sub(lastUpdateTime)
                    .mul(rewardRate)
                    .mul(1e18)
                    .div(_totalSupply)
            );
    }

    function earned(address account) public view returns (uint256) {
        return
            balanceOf(account)
                .mul(rewardPerToken().sub(userRewardPerTokenPaid[account]))
                .div(1e18)
                .add(rewards[account]);
    }

    function withdraw_TsingLung(uint256 tokenid) public updateReward(msg.sender){
      require(_TLNFTList[tokenid] == msg.sender,"Only the owner can call");
      _totalSupply = _totalSupply.sub(2000);
      _balances[msg.sender] = _balances[msg.sender].sub(2000);
      IERC721(TsingLung_NFT).safeTransferFrom(address(this), msg.sender, tokenid);
      _removeTsFromOwner(msg.sender, tokenid);
      delete _TLNFTList[tokenid];
    }

    function _removeTsFromOwner(address from, uint256 tokenId) private {
      uint256 lastTokenIndex = _TL_balances[from] - 1;
      uint256 tokenIndex = _TL_index[tokenId];

      if (tokenIndex != lastTokenIndex) {
          uint256 lastTokenId = _TL_ownedTokens[from][lastTokenIndex];

          _TL_ownedTokens[from][tokenIndex] = lastTokenId;
          // Move the last token to the slot of the to-delete token
          _TL_index[lastTokenId] = tokenIndex;
          // Update the moved token's index
      }
      // This also deletes the contents at the last position of the array
      delete _TL_index[tokenId];
      delete _TL_ownedTokens[from][lastTokenIndex];
    }

    function TL_tokenOfOwnerByIndex(address owner, uint256 index) public view returns (uint256) {
        require(index < _TL_balances[owner], "ERC721Enumerable: owner index out of bounds");
        return _TL_ownedTokens[owner][index];
    }

    function withdraw_Dragon(uint256 tokenid) public updateReward(msg.sender){
      require(_DGNFTList[tokenid] == msg.sender,"Only the owner can call");
      _totalSupply = _totalSupply.sub(400);
      _balances[msg.sender] = _balances[msg.sender].sub(400);
      IERC721(Dragon).safeTransferFrom(address(this), msg.sender, tokenid);
      _removeDGFromOwner(msg.sender, tokenid);
      delete _DGNFTList[tokenid];
    }

    function _removeDGFromOwner(address from, uint256 tokenId) private {
      uint256 lastTokenIndex = _DG_balances[from] - 1;
      uint256 tokenIndex = _DG_index[tokenId];

      if (tokenIndex != lastTokenIndex) {
          uint256 lastTokenId = _DG_ownedTokens[from][lastTokenIndex];

          _DG_ownedTokens[from][tokenIndex] = lastTokenId;
          // Move the last token to the slot of the to-delete token
          _DG_index[lastTokenId] = tokenIndex;
          // Update the moved token's index
      }
      // This also deletes the contents at the last position of the array
      delete _DG_index[tokenId];
      delete _DG_ownedTokens[from][lastTokenIndex];
    }

    function DG_tokenOfOwnerByIndex(address owner, uint256 index) public view returns (uint256) {
        require(index < _DG_balances[owner], "ERC721Enumerable: owner index out of bounds");
        return _DG_ownedTokens[owner][index];
    }

    function getReward() public updateReward(msg.sender) {
        uint256 reward = earned(msg.sender);
        if (reward > 0) {
          rewards[msg.sender] = 0;
          safeTransfer(msg.sender, reward);
          emit RewardPaid(msg.sender, reward);
          totalReferralReward = totalReferralReward.add(reward);
        }
    }

    function safeTransfer(address _to, uint256 _amount) internal {
        uint256 tokenBalance = IERC20(RW_Token).balanceOf(address(this));
        require(_amount <= tokenBalance, "no token");
        IERC20(RW_Token).transfer(_to, _amount);
    }
    
    function donateDust(address addr, uint256 amount) external onlyOwner {
        TransferHelper.safeTransfer(addr, _msgSender(), amount);
    }

    function donateEthDust(uint256 amount) external onlyOwner {
        TransferHelper.safeTransferETH(_msgSender(), amount);
    }

    function setGood(address goodAddress) external onlyOwner {
      isGoods[goodAddress] = true;
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) override external returns (bytes4) {
        require(isGoods[msg.sender], 'no good');
        if (msg.sender == TsingLung_NFT) {
          _totalSupply = _totalSupply.add(2000);
          _balances[from] = _balances[from].add(2000);

          _TLNFTList[tokenId] = from;
          uint256 length = _TL_balances[from];
          _TL_ownedTokens[from][length] = tokenId;
          _TL_index[tokenId] = length;

          _TL_balances[from] += 1;
        }
        if (msg.sender == Dragon) {
          _totalSupply = _totalSupply.add(400);
          _balances[from] = _balances[from].add(400);

          _DGNFTList[tokenId] = from;
          uint256 length = _DG_balances[from];
          _DG_ownedTokens[from][length] = tokenId;
          _DG_index[tokenId] = length;

          _DG_balances[from] += 1;
        }
        return 0x150b7a02;
    }

