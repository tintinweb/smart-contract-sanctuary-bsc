/**
 * @dev Staking contract that implements the ERC20 interface to act as a wrapped token for a foreign ERC20 token.
 *
 * It allows minting and redeeming wrapped tokens based on an APY rate that needs to be set manually by a trusted party.
 * Every time an account deposits tokens, it receives wrapped tokens based on the current APY rate.
 * Every time an account redeems wrapped tokens, it receives underlying tokens based on the current APY rate.
 * On every deposit and redeem, the staking contract can charge a deposit and redeem fees respectively.
 * In order to keep the staking contract collateralized, the trusted party must be controlling the current APY and
 * update it or re-collateralize the contract if necessary. For this reason a trusted party can withdraw any amount
 * of underlying tokens.
 *
 * Additionally, this implementation includes a whitelisting process. In case it is active, a trusted party can
 * decide which accounts are able to operate the staking contract by whitelisting each of them manually.
 * All the trusted parties mentioned above are implemented using OpenZeppelin's AccessControl module.
 */
contract Staking is AccessControl, ERC20 {
    using SafeMath for uint256;

    uint256 internal constant ONE = 1e18;
    uint256 internal constant YEAR = 365 days;

    bytes32 public constant SET_APY_ROLE = keccak256("SET_APY_ROLE");
    bytes32 public constant SET_MINT_FEE_ROLE = keccak256("SET_MINT_FEE_ROLE");
    bytes32 public constant SET_REDEEM_FEE_ROLE = keccak256("SET_REDEEM_FEE_ROLE");
    bytes32 public constant ACTIVATE_WHITELIST_ROLE = keccak256("ACTIVATE_WHITELIST_ROLE");
    bytes32 public constant DEACTIVATE_WHITELIST_ROLE = keccak256("DEACTIVATE_WHITELIST_ROLE");
    bytes32 public constant ADD_TO_WHITELIST_ROLE = keccak256("ADD_TO_WHITELIST_ROLE");
    bytes32 public constant REMOVE_FROM_WHITELIST_ROLE = keccak256("REMOVE_FROM_WHITELIST_ROLE");
    bytes32 public constant WITHDRAWER_ROLE = keccak256("WITHDRAWER_ROLE");

    // ERC20 token wrapped by the staking contract
    IERC20 public immutable token;

    // APY percentage expressed with 18 decimals (1e18 = 100%)
    uint256 public apy;

    // Timestamp when the apy was updated the last time
    uint256 public apyUpdatedAt;

    // Last computed rate of the staked token
    uint256 public lastRate;

    // Mint fee percentage expressed with 18 decimals (1e18 = 100%)
    uint256 public mintFee;

    // Redeem fee percentage expressed with 18 decimals (1e18 = 100%)
    uint256 public redeemFee;

    // Tells whether the whitelist is active or not
    bool public isWhitelistActive;

    // Tells whether an account is whitelisted or not
    mapping (address => bool) public isWhitelisted;

    /**
     * @dev Emitted every time a new APY is set
     */
    event ApySet(uint256 oldApy, uint256 newApy);

    /**
     * @dev Emitted every time a new mint fee is set
     */
    event MintFeeSet(uint256 oldMintFee, uint256 newMintFee);

    /**
     * @dev Emitted every time a new redeem fee is set
     */
    event RedeemFeeSet(uint256 oldRedeemFee, uint256 newRedeemFee);

    /**
     * @dev Emitted every time the whitelist is activated or deactivated
     */
    event WhitelistSet(bool active);

    /**
     * @dev Emitted every time an account is whitelisted or not
     */
    event WhitelistChanged(address indexed account, bool whitelisted);

    /**
     * @dev Emitted every time there is a new deposit
     */
    event Deposited(address indexed account, uint256 amount, uint256 aAmount, uint256 feeAmount);

    /**
     * @dev Emitted every time there is a new redeem
     */
    event Redeemed(address indexed account, uint256 aAmount, uint256 amount, uint256 feeAmount);

    /**
     * @dev Emitted every time underlying tokens are withdrawn
     */
    event Withdrawn(IERC20 indexed token, address indexed recipient, uint256 amount);

    /**
     * @dev Reverts only if the sender was not granted with the requested `role`
     */
    modifier auth(bytes32 role) {
        require(hasRole(role, _msgSender()), "SENDER_NOT_ALLOWED");
        _;
    }

    /**
     * @dev Reverts only if the whitelist is active and the sender is not whitelisted
     */
    modifier whitelist() {
        require(!isWhitelistActive || (isWhitelistActive && isWhitelisted[_msgSender()]), "SENDER_NOT_ALLOWED");
        _;
    }

    /**
     * @dev Creates a new staking instance
     * @param _token ERC20 token to be wrapped by the staking contract
     * @param _name Name to be used for the wrapped token
     * @param _symbol Symbol to be used for the wrapped token
     * @param _apy Initial APY to be used by the staking contract (1e18 = 100%)
     * @param _mintFee Initial minting fee to be used by the staking contract (1e18 = 100%)
     * @param _redeemFee Initial redeem fee to be used by the staking contract (1e18 = 100%)
     * @param _admin Address that will receive admin permissions
     */
    constructor(
        IERC20 _token,
        string memory _name,
        string memory _symbol,
        uint256 _apy,
        uint256 _mintFee,
        uint256 _redeemFee,
        address _admin
    ) ERC20(_name, _symbol) {
        token = _token;

        _setApy(_apy);
        _setMintFee(_mintFee);
        _setRedeemFee(_redeemFee);
        _activateWhitelist();
        _setupRole(DEFAULT_ADMIN_ROLE, _admin);
    }

    /**
     * @dev Tells the current APR.
     * Note this will always be greater than or equal to zero
     */
    function apr() public view returns (uint256) {
        return SafeCast.toUint256(LogExpMath.ln(SafeCast.toInt256(apy.add(ONE))));
    }

    /**
     * @dev Tells the staking token rate expressed in the underlying token
     */
    function rate() public view returns (uint256) {
        if (apyUpdatedAt == 0) return ONE;
        // solhint-disable-next-line not-rely-on-time
        uint256 diff = block.timestamp.sub(apyUpdatedAt);
        uint256 exp = apr().mul(diff).div(YEAR);
        uint256 power = SafeCast.toUint256(LogExpMath.exp(SafeCast.toInt256(exp)));
        return lastRate.mul(power).div(ONE);
    }

    /**
     * @dev Tells the current collateral supply
     */
    function collateralSupply() public view returns (uint256) {
        return token.balanceOf(address(this));
    }

    /**
     * @dev Tells how much collateral is required to be safely collateralized based on the current rate
     */
    function uncollateralizedSupply() external view returns (uint256) {
        uint256 actualCollateral = collateralSupply();
        uint256 expectedCollateral = totalSupply().mul(rate()).div(ONE);
        return actualCollateral >= expectedCollateral ? 0 : expectedCollateral - actualCollateral;
    }

    /**
     * @dev Tells the relation between the expected collateral based on the current rate and the actual collateral
     */
    function collateralizationRatio() external view returns (uint256) {
        uint256 actualCollateral = collateralSupply();
        if (totalSupply() == 0) return actualCollateral == 0 ? ONE : type(uint256).max;
        uint256 expectedCollateral = totalSupply().mul(rate()).div(ONE);
        return actualCollateral.mul(ONE).div(expectedCollateral);
    }

    /**
     * @dev Grants a list of roles to an account
     */
    function grantRoles(bytes32[] memory roles, address account) external {
        for (uint256 i = 0; i < roles.length; i++) {
            grantRole(roles[i], account);
        }
    }

    /**
     * @dev Revokes a list of roles to an account
     */
    function revokeRoles(bytes32[] memory roles, address account) external {
        for (uint256 i = 0; i < roles.length; i++) {
            revokeRole(roles[i], account);
        }
    }

    /**
     * @dev Sets a new APY rate. Caller must be granted with `SET_APY_ROLE`.
     * @param newApy New APY rate to be used, must be greater than or equal to 0% (1e18)
     */
    function setApy(uint256 newApy) external auth(SET_APY_ROLE) {
        _setApy(newApy);
    }

    /**
     * @dev Sets a new mint fee rate. Caller must be granted with `SET_MINT_FEE_ROLE`.
     * @param newMintFee New mint fee rate to be used, must be lower than or equal to 100% (1e18)
     */
    function setMintFee(uint256 newMintFee) external auth(SET_MINT_FEE_ROLE) {
        _setMintFee(newMintFee);
    }

    /**
     * @dev Sets a new redeem fee rate. Caller must be granted with `SET_REDEEM_FEE_ROLE`.
     * @param newRedeemFee New redeem fee rate to be used, must be lower than or equal to 100% (1e18)
     */
    function setRedeemFee(uint256 newRedeemFee) external auth(SET_REDEEM_FEE_ROLE) {
        _setRedeemFee(newRedeemFee);
    }

    /**
     * @dev Activates the accounts whitelist. Caller must be granted with `ACTIVATE_WHITELIST_ROLE`.
     */
    function activateWhitelist() external auth(ACTIVATE_WHITELIST_ROLE) {
        _activateWhitelist();
    }

    /**
     * @dev Deactivates the accounts whitelist. Caller must be granted with `DEACTIVATE_WHITELIST_ROLE`.
     */
    function deactivateWhitelist() external auth(DEACTIVATE_WHITELIST_ROLE) {
        if (!isWhitelistActive) return;
        isWhitelistActive = false;
        emit WhitelistSet(false);
    }

    /**
     * @dev Whitelists an account. Caller must be granted with `ADD_TO_WHITELIST_ROLE`.
     * @param account Account to be addeed to the whitelist
     */
    function addToWhitelist(address account) external auth(ADD_TO_WHITELIST_ROLE) {
        if (isWhitelisted[account]) return;
        isWhitelisted[account] = true;
        emit WhitelistChanged(account, true);
    }

    /**
     * @dev Removes an account from the whitelist. Caller must be granted with `REMOVE_FROM_WHITELIST_ROLE`.
     * @param account Account to be removed from the whitelist
     */
    function removeFromWhitelist(address account) external auth(REMOVE_FROM_WHITELIST_ROLE) {
        if (!isWhitelisted[account]) return;
        isWhitelisted[account] = false;
        emit WhitelistChanged(account, false);
    }

    /**
     * @dev Deposits tokens in the staking contract. Caller must be whitelisted if the whitelist is active.
     * @param amount Amount of tokens to be deposited in the staking contract
     */
    function deposit(uint256 amount) external whitelist {
        require(token.transferFrom(_msgSender(), address(this), amount), "TOKEN_TRANSFER_FROM_FAILED");
        uint256 feeAmount = amount.mul(mintFee).div(ONE);
        uint256 amountAfterFees = amount.sub(feeAmount);
        uint256 aAmount = amountAfterFees.mul(ONE).div(rate());
        _mint(_msgSender(), aAmount);
        emit Deposited(_msgSender(), amount, aAmount, feeAmount);
    }

    /**
     * @dev Redeems wrapped tokens in the staking contract. Caller must be whitelisted if the whitelist is active.
     * @param aAmount Amount of wrapped tokens to be redeemed in the staking contract
     */
    function redeem(uint256 aAmount) external whitelist {
        _burn(_msgSender(), aAmount);
        uint256 amount = aAmount.mul(rate()).div(ONE);
        uint256 feeAmount = amount.mul(redeemFee).div(ONE);
        uint256 amountAfterFees = amount.sub(feeAmount);
        require(token.transfer(_msgSender(), amountAfterFees), "TOKEN_TRANSFER_FAILED");
        emit Redeemed(_msgSender(), aAmount, amountAfterFees, feeAmount);
    }

    /**
     * @dev Withdraws tokens from the staking contract. Caller must be granted with `WITHDRAWER_ROLE`.
     * @param tokenOut Token to withdraw
     * @param amount Amount of tokens to be withdrawn
     * @param recipient Account that will receive the tokens
     */
    function withdraw(IERC20 tokenOut, uint256 amount, address recipient) external auth(WITHDRAWER_ROLE) {
        require(tokenOut.transfer(recipient, amount), "TOKEN_TRANSFER_FAILED");
        emit Withdrawn(tokenOut, recipient, amount);
    }

    /**
     * @dev Internal function to set the APY
     */
    function _setApy(uint256 newApy) internal {
        emit ApySet(apy, newApy);
        lastRate = rate();
        apy = newApy;
        apyUpdatedAt = block.timestamp;
        // solhint-disable-previous-line not-rely-on-time
    }

    /**
     * @dev Internal function to set the mint fee
     */
    function _setMintFee(uint256 newMintFee) internal {
        require(newMintFee <= ONE, "MINT_FEE_ABOVE_ONE");
        emit MintFeeSet(mintFee, newMintFee);
        mintFee = newMintFee;
    }

    /**
     * @dev Internal function to set the redeem fee
     */
    function _setRedeemFee(uint256 newRedeemFee) internal {
        require(newRedeemFee <= ONE, "REDEEM_FEE_ABOVE_ONE");
        emit RedeemFeeSet(redeemFee, newRedeemFee);
        redeemFee = newRedeemFee;
    }

    /**
     * @dev Internal function to activate whitelist
     */
    function _activateWhitelist() internal {
        if (isWhitelistActive) return;
        isWhitelistActive = true;
        emit WhitelistSet(true);
    }
}