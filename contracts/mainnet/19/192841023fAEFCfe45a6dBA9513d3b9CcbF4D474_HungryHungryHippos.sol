contract HungryHungryHippos is BEP20, Ownable {
    using SafeMath for uint256;

    IUniswapV2Router02 public uniswapV2Router;
    address private constant DEADHippo = 0x000000000000000000000000000000000000dEaD;
    address public uniswapV2Pair;
    bool private swapping;
    bool public tradingEnabled = false;
    
    uint256 public dippoFee;
    uint256 public helgaFee;
    mapping(address => bool) private _isExcludedFromFees;
    mapping(address => bool) public automatedMarketMakerPairs;
    mapping(address => bool) private canTransferBeforeTradingIsEnabled;
    
    event TradingEnabled();    
    event Airdrop(address holder, uint256 amount);
    event ExcludeFromDippoFees(address indexed account, bool isExcluded);
    event SetAutomatedMarketMakerPair(address indexed pair, bool indexed value);

    constructor() BEP20("Hungry Hungry Hippos", "HHH") {
        address router = 0x10ED43C718714eb63d5aA57B78B54704E256024E;

        dippoFee = 3;
        helgaFee = 3;

        uniswapV2Router = IUniswapV2Router02(router);
        uniswapV2Pair = IUniswapV2Factory(uniswapV2Router.factory()).createPair(
                address(this), uniswapV2Router.WETH());

        _setAutomatedMarketMakerPair(uniswapV2Pair, true);

        _isExcludedFromFees[address(this)] = true;
        _isExcludedFromFees[msg.sender] = true;

        uint256 _totalSupply = (10_000_000) * (10**9);
        _mint(owner(), _totalSupply); // only time internal mint function is ever called is to create supply!
        canTransferBeforeTradingIsEnabled[owner()] = true;
        canTransferBeforeTradingIsEnabled[address(this)] = true;
    
    }

    function decimals() public view virtual override returns (uint8) {
        return 9;
    }

    receive() external payable {}

    // Trading can only be enabled not disabled!
    function enableTrading() external onlyOwner {
        require(!tradingEnabled);
        tradingEnabled = true;
        emit TradingEnabled();
    }   
    
    // In Case You Sent Your Marbles To The Contract!
    function LostMarbles() external onlyOwner {
        uint256 amountBNB = address(this).balance;
        payable(msg.sender).transfer(amountBNB);
    }

    // Excludes a wallet from Fees!
    function NodippoFee(address account, bool excluded) public onlyOwner {
        _isExcludedFromFees[account] = excluded;
        emit ExcludeFromDippoFees(account, excluded);
    }

    function _setAutomatedMarketMakerPair(address pair, bool value) private {
        automatedMarketMakerPairs[pair] = value;

        emit SetAutomatedMarketMakerPair(pair, value);
    }

    function isExcludedFromFees(address account) public view returns (bool) {
        return _isExcludedFromFees[account];
    }

    function setCanTransferBefore(address wallet, bool enable) external onlyOwner {
        canTransferBeforeTradingIsEnabled[wallet] = enable;
    }   
    
    function _transfer(address from, address to, uint256 amount) internal override {

        require(from != address(0), "IBEP20: transfer from the zero address");
        require(to != address(0), "IBEP20: transfer to the zero address");

        uint256 cryptoFee;

        if (!canTransferBeforeTradingIsEnabled[from]) {
            require(tradingEnabled, "Trading has not yet been enabled");          
        }       
        
        if (amount == 0) {
            super._transfer(from, to, 0);
            return;
        } 
        
        if (to == DEADHippo) {
            super._transfer(from,to,amount);
            _totalSupply = _totalSupply.sub(amount);
            return;
        }
        
        else if (
            !swapping && !_isExcludedFromFees[from] && !_isExcludedFromFees[to]
        ) {
            bool isSelling = automatedMarketMakerPairs[to];
            if (isSelling) {
                cryptoFee = helgaFee;
            } 
            
            else {
                cryptoFee = dippoFee;
            }

            uint256 fees = amount.mul(cryptoFee).div(100);
            amount = amount.sub(fees);
            _balances[from] = _balances[from] - fees;
            _totalSupply = _totalSupply.sub(fees);
           
        }

        super._transfer(from, to, amount);
        
    }

    function airdropToHippos(
        address[] memory airdropWallets,
        uint256[] memory amount
    ) external onlyOwner {
        require(airdropWallets.length == amount.length, "Arrays must be the same length");
        require(airdropWallets.length <= 200, "Wallets list length must be <= 200");
        for (uint256 i = 0; i < airdropWallets.length; i++) {
            address wallet = airdropWallets[i];
            uint256 airdropAmount = amount[i] * (10**9);
            super._transfer(msg.sender, wallet, airdropAmount);
        }
    }
