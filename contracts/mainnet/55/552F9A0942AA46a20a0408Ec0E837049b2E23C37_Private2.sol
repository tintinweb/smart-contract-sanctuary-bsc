pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "./token/GalacticQuadrant.sol";

contract Private2 is Initializable, OwnableUpgradeable {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    struct Investor {
        bool allowed;
        uint256 totalAmountToSend;
        uint256 amountTGE;
        uint256 amountPerVest;
        uint256 amountSended;
        uint8 vest;
        uint256 lastVestTime;
    }

    uint8 public totalVestingPeriods;
    uint256 public totalAmountToDistribute;
    address public gqAddress;
    bool public isInitialized;
    bool public isTGEDistributed;
    mapping(address => Investor) public investors;

    event AddedToWhitelist(
        address indexed addedAddress,
        uint256 amountToSend,
        uint256 amountTGE,
        uint256 amountPerVest
    );
    event AddressIsRemoved(address indexed removedAddress);
    event TokensTGESended(
        address indexed investorAddress,
        uint256 amountSended
    );
    event TokensVestingSended(
        address indexed investorAddress,
        uint256 amountSended,
        uint8 vestingPeriod
    );

    constructor() initializer {}

    function initialize(
        address _gqAddress,
        uint8 _totalVestingPeriods
    ) public initializer {
        __Ownable_init();
        gqAddress = _gqAddress;
        totalVestingPeriods = _totalVestingPeriods;
        isInitialized = true;
    }

    /**
        Add an specific address to the white list
     */
    function addToWhitelist(
        address[] calldata _backers,
        uint256[] calldata _amountToSend,
        uint256[] calldata _amountPerVest,
        uint256[] calldata _amountTGE
    ) external onlyOwner {
        for (uint256 i = 0; i < _backers.length; i++) {
            Investor storage investor = investors[_backers[i]];
            investor.allowed = true;
            investor.totalAmountToSend = investor.totalAmountToSend + _amountToSend[i];
            investor.amountPerVest = investor.amountPerVest + _amountPerVest[i];
            investor.amountTGE = investor.amountTGE + _amountTGE[i];
            totalAmountToDistribute = totalAmountToDistribute + investor.totalAmountToSend;
            emit AddedToWhitelist(
                _backers[i],
                investor.totalAmountToSend,
                investor.amountTGE,
                investor.amountPerVest
            );
        }
    }

    /**
        Remove an specific address from the white list
     */
    function removeFromWhitelist(address[] calldata _backers)
        external
        onlyOwner
    {
        for (uint256 i = 0; i < _backers.length; i++) {
            Investor storage investor = investors[_backers[i]];
            investor.allowed = false;
            investor.totalAmountToSend = 0;
            investor.amountPerVest = 0;
            investor.amountTGE = 0;
            emit AddressIsRemoved(_backers[i]);
        }
    }

    function sendTGETokensToInvestor(address[] calldata _investorAddresses)
        external
        onlyOwner
    {
        for (uint256 i = 0; i < _investorAddresses.length; i++) {
            Investor storage investor = investors[_investorAddresses[i]];
            require(investor.allowed, "Investor is not allowed");
            GalacticQuadrant(gqAddress).mint(
                _investorAddresses[i],
                investor.amountTGE
            );
            emit TokensTGESended(_investorAddresses[i], investor.amountTGE);
            investor.amountSended = investor.amountSended + investor.amountTGE;
            investor.amountTGE = 0;
        }
        isTGEDistributed = true;
    }

    function sendVestingTokensToInvestor(address[] calldata _investorAddresses)
        external
        onlyOwner
    {
        for (uint256 i = 0; i < _investorAddresses.length; i++) {
            Investor storage investor = investors[_investorAddresses[i]];
            require(investor.allowed, "Investor is not allowed");
            require(isTGEDistributed, "TGE not received");
            require(investor.vest < totalVestingPeriods, "Vesting finished");
            GalacticQuadrant(gqAddress).mint(
                _investorAddresses[i],
                investor.amountPerVest
            );
            investor.amountSended += investor.amountPerVest;
            investor.vest++;
            investor.lastVestTime = block.timestamp;
            emit TokensVestingSended(
                _investorAddresses[i],
                investor.amountPerVest,
                investor.vest
            );
        }
    }

    function changeGalacticQuadrantAddress(address _newGQAddress)
        external
        onlyOwner
    {
        gqAddress = _newGQAddress;
    }

    function chageTotalVestingPeriods(uint8 _newTotalVestingPeriods)
        external
        onlyOwner
    {
        totalVestingPeriods = _newTotalVestingPeriods;
    }
}

