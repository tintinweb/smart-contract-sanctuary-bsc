    event Approval(
        address indexed owner,
        address indexed spender,
        uint256 value
    );
}

interface IStackingLock {
    function userInfos(address account)
        external
        view
        returns (uint256, uint256);
}

contract StakingLock {
    IStackingLock public lockContract;
    mapping(address => uint256) public withdrawedInfos;
    mapping(address => UserStakingInfo) public userPrivateInfos;
    struct UserStakingInfo {
        uint256 amount;
        uint256 stakedDate;
    }

    using SafeMath for uint256;

    // Contract owner
    address payable public owner;
    // boolean to prevent reentrancy
    bool internal locked;
    uint256 public timePeriod = 20;

    bool public isActive;

    uint256 public profit = 15000;
    uint256 profitDenominator = 10000;

    //LP or the token
    IBEP20 public bep20Token;
    address public bep20TokenAddress;

    // Events
    event TokensDeposited(address from, uint256 amount, uint256 totalAmount);
    event SettingChanged(uint256 newPeriod, bool status);
    event TokenUnstaked(address recipient, uint256 amount);

    constructor(
        address _bep20Token,
        uint256 _timePeriod,
        uint256 _profit,
        address _lockContract
    ) {
        owner = payable(msg.sender);
        bep20Token = IBEP20(_bep20Token);
        bep20TokenAddress = _bep20Token;
        timePeriod = _timePeriod;
        profit = _profit;
        lockContract = IStackingLock(_lockContract);
        isActive = true;
    }

    // Modifier
    /**
     * @dev Prevents reentrancy
     */
    modifier noReentrant() {
        require(!locked, "No re-entrancy");
        locked = true;
        _;
        locked = false;
    }

    // Modifier
    /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwner() {
        require(
            msg.sender == owner,
            "Message sender must be the contract's owner."
        );
        _;
    }

    modifier active() {
        require(
            isActive == true,
            "Message sender must be the contract's owner."
        );
        _;
    }

    function max(uint256 a, uint256 b) internal pure returns (uint256) {
        return a >= b ? a : b;
    }

    function userInfos(address account) public view returns (uint256, uint256) {
        (uint256 oAmount, uint256 oStakedDate) = lockContract.userInfos(
            account
        );
        uint256 stakedDate = userPrivateInfos[account].stakedDate;
        uint256 amount = userPrivateInfos[account].amount;
        uint256 withdrawedAmount = withdrawedInfos[account];

        return (
            amount + oAmount - withdrawedAmount,
            max(oStakedDate, stakedDate)
        );
    }

    function settings(uint256 _timePeriod, bool _isActive) public onlyOwner {
        timePeriod = _timePeriod;
        isActive = _isActive;
        emit SettingChanged(_timePeriod, _isActive);
    }

    function stake(uint256 amount) public {
        bep20Token.transferFrom(msg.sender, address(this), amount);
        userPrivateInfos[msg.sender].amount =
            userPrivateInfos[msg.sender].amount +
            amount;
        userPrivateInfos[msg.sender].stakedDate = block.timestamp;
        (uint256 stakedAmount, ) = userInfos(msg.sender);
        emit TokensDeposited(msg.sender, amount, stakedAmount);
    }

    function claimAll() public noReentrant {
        (uint256 amount, uint256 stakedDate) = userInfos(msg.sender);
        require(stakedDate + timePeriod <= block.timestamp, "Not yet!");
        uint256 amountToUnstake = amount;
        withdrawedInfos[msg.sender] =
            withdrawedInfos[msg.sender] +
            amountToUnstake;
        bep20Token.transfer(msg.sender, amountToUnstake);
        emit TokenUnstaked(msg.sender, amountToUnstake);
    }

    function getUserShare(address staker)
        external
        view
        returns (uint256 amount)
    {
        (uint256 stakedAmount, ) = userInfos(staker);
        amount = stakedAmount.mul(profit).div(profitDenominator);
    }

    function transferAccidentallyLockedTokens(IBEP20 token, uint256 amount)
        public
        onlyOwner
        noReentrant
    {
        require(address(token) != address(0), "Token address can not be zero");
        token.transfer(owner, amount);
    }

    function withdrawEth(uint256 amount) public onlyOwner noReentrant {
        require(amount <= address(this).balance, "Insufficient funds");
        owner.transfer(amount);
    }

    function changeOwner(address newOwner) public onlyOwner {
        owner = payable(newOwner);
    }

    function changeLock(address _lockContract) public onlyOwner {
        lockContract = IStackingLock(_lockContract);
    }
}