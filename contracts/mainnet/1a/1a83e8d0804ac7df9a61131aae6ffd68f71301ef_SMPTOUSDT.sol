contract SMPTOUSDT is Ownable,ReentrancyGuard {
    using Address for address;

    IBEP20 public immutable smpToken; 
    IBEP20 public immutable usdtToken; 

    uint256 public _swapRate;  // 1 SMP = 0.7 * USDT
    bool public _isDepositEnable;
    uint256 public _userSellLimit;
    uint256 public _waitTime;

    struct whiteList{
        bool isWhiteList;
        uint256 amount;
    }

    mapping(address => whiteList) public _whiteListAddress;
    mapping(address => uint256) private _lastDepositAddress;

    event DepositSmp(address indexed _account, uint256 _smpAmount, uint256 _usdtAmount);


    
    constructor(IBEP20 _smpToken, IBEP20 _usdtToken){
        smpToken=  _smpToken;
        usdtToken= _usdtToken;
        _swapRate= 70;
        _userSellLimit= 100*10**8;
        _isDepositEnable= true;
        _waitTime=24;
    }

    // onlyOwner
    function updateSwapRate(uint256 _newSwapRate) external onlyOwner{
        _swapRate= _newSwapRate;
    }
    function updateUserSellLimit(uint256 _amount) external onlyOwner{
        _userSellLimit= _amount;
    }
    function updateWaitTime(uint256 _hours) external onlyOwner {
        _waitTime=_hours;
    }

    function getSmpFromContract(uint256 _amount) external onlyOwner{
        require(smpToken.balanceOf(address(this))>=_amount,"Insufficient SMP Token");
        smpToken.transfer(owner(), _amount);

    }
    function getUsdtFromContract(uint256 _amount) external onlyOwner{
        require(usdtToken.balanceOf(address(this))>=_amount,"Insufficient USDT Token");
        usdtToken.transfer(owner(), _amount);
    }
    
    function setWhiteListAddress(address _account, uint256 _amount) external onlyOwner{
        whiteList storage w = _whiteListAddress[_account];
        w.isWhiteList= true;
        w.amount= _amount;
    }
    function toggleDeposit() external onlyOwner {
        _isDepositEnable = !_isDepositEnable;

    } 
    
    // public
    function depositSmp(uint256 _amount) external nonReentrant returns(bool){
        require(_isDepositEnable, "Deposit not enabled.");
        require(smpToken.balanceOf(msg.sender)>=_amount,"Insufficient SMP Token.");
        whiteList memory w = _whiteListAddress[msg.sender];
        bool checkWhiteList = w.isWhiteList;
        uint256 calUsdt = (_amount * _swapRate * 10**18)/10**10;


        if(checkWhiteList){
            uint256 lastDeposit= _lastDepositAddress[msg.sender];
            uint256 depositTime= lastDeposit + ((_waitTime) * 1 hours );
            require(block.timestamp >=  depositTime,"Block for 24 hours.");
            uint256 checkAmount = w.amount;
            require(_amount <= checkAmount,"Decrease the deposit amount." );
            smpToken.transferFrom(msg.sender, address(this),_amount);
            usdtToken.transfer(msg.sender,calUsdt);
            _lastDepositAddress[msg.sender]= block.timestamp;
            emit DepositSmp(msg.sender,_amount,calUsdt);
            return true;
        }

        uint256 lastDeposits= _lastDepositAddress[msg.sender];
        uint256 depositTimes= lastDeposits + ((_waitTime) * 1 hours );
        require(block.timestamp >=  depositTimes,"Wait for 24 hours.");
        require(_amount <= _userSellLimit,"Sell limit exceed.");

        _lastDepositAddress[msg.sender]= block.timestamp;
        smpToken.transferFrom(msg.sender, address(this),_amount);
        usdtToken.transfer(msg.sender,calUsdt);
        emit DepositSmp(msg.sender,_amount,calUsdt);
        return true;
    }
    
    function estimate(uint256 _amount) external view returns(uint256){
        return  (_amount * _swapRate * 10**18)/10**10;

    }
                                               
}