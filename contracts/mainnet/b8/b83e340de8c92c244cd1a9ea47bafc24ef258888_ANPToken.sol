address constant ROUTER = 0x10ED43C718714eb63d5aA57B78B54704E256024E;
IUniswapV2Router constant uniswapV2Router = IUniswapV2Router(ROUTER);

abstract contract SimpleDexBaseUSDT {
    address public immutable uniswapV2Pair;

    constructor() {
        uniswapV2Pair = IUniswapV2Factory(uniswapV2Router.factory()).createPair(
                address(this),
                USDT
            );
    }
}

contract ANPToken is ExcludedFromFeeList, SimpleDexBaseUSDT, BurnFee {
    uint256 private constant _totalSupply = 2100_0000 ether;
    address constant burnPool = 0x79F51c187bc768327c3c0c0D188c95c384D82393;

    constructor() Owned(msg.sender) BurnFee(30) ERC20("ANP", "ANP", 18) {
        _mint(msg.sender, _totalSupply);
        excludeFromFee(msg.sender);
        excludeFromFee(address(this));
    }

    function takeFee(
        address sender,
        uint256 amount
    ) internal returns (uint256) {
        uint256 burnAmount = _takeBurn(sender, amount);
        unchecked {
            return amount - burnAmount;
        }
    }

    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) internal virtual override {
        if (_isExcludedFromFee[sender] || _isExcludedFromFee[recipient]) {
            super._transfer(sender, recipient, amount);
            return;
        }
        if (recipient == uniswapV2Pair) {
            // sell
            super._transfer(sender, recipient, amount);
            uint256 burnAmount = (amount * 70) / 100;
            if (balanceOf[burnPool] > burnAmount) {
                super._transfer(burnPool, address(0xdead), burnAmount);
            }
        } else if (sender == uniswapV2Pair) {
            //buy
            uint256 transferAmount = takeFee(sender, amount);
            super._transfer(sender, recipient, transferAmount);
        } else {
            // transfer
            super._transfer(sender, recipient, amount);
        }
    }
}