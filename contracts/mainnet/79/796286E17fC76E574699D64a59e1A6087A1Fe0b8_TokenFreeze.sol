contract TokenFreeze {

    using SafeMath for uint256;
    IBEP20 public token;

    struct Freezing{
        uint256 amount;
        uint256 until;
        bool used;
    }

    event Freeze (address indexed to, uint256 indexed amount, uint256 indexed until);
    event Unfreeze(address indexed to, uint256 indexed amount);

    mapping (address => mapping(uint256 => Freezing)) public freezings;
    mapping (address => uint256) public freezingsCount;

    constructor(address tokenAddress){
        token = IBEP20(tokenAddress);
    }

    function addFreezeing(address _to, uint256 _amount, uint256 _until) public{
        Freezing memory freeze = Freezing(_amount, _until, false);

        freezingsCount[_to]++;

        freezings[_to][freezingsCount[_to]] = freeze;

        //Transfer tokens to contract
        token.transferFrom(msg.sender, address(this), _amount);

        emit Freeze(_to, _amount, _until);
    }

    function freezeBatch(address[] memory _tos, uint256[] memory _amounts, uint256[] memory _untils) public{
        require(_tos.length == _amounts.length && _tos.length == _untils.length, "Invalid arrays length");

         for (uint i=0; i<_tos.length; i++) {
            addFreezeing(_tos[i], _amounts[i], _untils[i]);
        }
    }

    function unfreeze(address _to, uint256 _freezeId) public{
        Freezing memory freeze = freezings[_to][_freezeId];

        require(freeze.until < block.timestamp, "Tokens still frozen");
        require(!freeze.used, "This freeze already used");
        require(freeze.amount > 0, "Invalid freeze id");

        //TODO token transfer
        token.transfer(_to,  freeze.amount);

        freeze.used = true;
        

        freezings[_to][_freezeId] = freeze;
        emit Unfreeze(_to, freeze.amount);
    }

    function unfreezeBatch(address _to, uint256 fromId, uint256 toId) public{
        for (uint i=fromId; i<=toId; i++) {
            unfreeze(_to, i);
        }
    }
}

