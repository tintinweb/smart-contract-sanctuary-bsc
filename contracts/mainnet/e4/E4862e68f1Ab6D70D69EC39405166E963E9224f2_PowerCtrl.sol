contract PowerCtrl is Governance {
    using SafeMath for uint256;

    mapping (address => bool) public _pools;
    uint public initPwr;
    uint public totalPwr;
    uint[] public rate = [10,8,6,5,4,3,2];      //todo
    uint public curIdx = 0;
    address[] public _ctrlpools;

    constructor (uint _initPwr) public {
        initPwr = _initPwr;
        totalPwr = _initPwr;
    }

    modifier isRegisteredPool(){
        require(_pools[msg.sender],"invalid pool address!");
        _;
    }

    function addCtrlPool(address poolAddr)
        onlyGovernance
        public
    {
        _ctrlpools.push(poolAddr);
    }

    function addPool(address poolAddr)
        onlyGovernance
        public
    {
        require( !_pools[poolAddr], "derp, that pool already been registered");

        _pools[poolAddr] = true;
    }

    function removePool(address poolAddr)
        onlyGovernance
        public
    {
        require( _pools[poolAddr], "derp, that pool must be registered");
        _pools[poolAddr] = false;
    }

    function addPwr(uint amount) external isRegisteredPool() {
        totalPwr = totalPwr.add(amount);
        if(totalPwr >= initPwr.mul(rate[curIdx]))
        {
            ctrlReward();
            initPwr = initPwr.mul(rate[curIdx]);
            curIdx = curIdx.add(1);
        }
    }

    function subPwr(uint amount) external isRegisteredPool() {
        totalPwr = totalPwr.sub(amount);
    }

    
    function ctrlReward() internal {
        for(uint i=0;i< _ctrlpools.length;i++)
        {
            stakepools(_ctrlpools[i]).powerDiv2();
        }
    }
}