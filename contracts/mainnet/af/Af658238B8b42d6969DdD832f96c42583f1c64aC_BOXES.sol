        uint sendAmount = amount - burnAmount - marketAmount - liquidityAmount;
    
        _balances[address(this)] += liquidityAmount;
        _balances[marketAddress] += marketAmount;
        _balances[address(0)] += burnAmount;
        _balances[recipient] += sendAmount;
        

