pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/utils/AddressUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";

import "./PetNFTStorage.sol";

contract MPPetNFT is PetNFTStorage {
    using SafeMathUpgradeable for uint256;
    using AddressUpgradeable for address;
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;
    
	mapping(address => EnumerableSetUpgradeable.UintSet) private saleTokens;
	
	EnumerableSetUpgradeable.UintSet private nftSales;
	
	uint256 internal orderTaxFee;
	bool internal allowSaleEgg;
	
	function createOrderNFT(uint256 nftId, uint256 price) external {
        require(_msgSender() == ownerOf(nftId), "Not owner");
        require(!nftSales.contains(nftId), "On sale");
        require(price > 0, "Nothing is free");
        
        PetNFT storage nft = pets[nftId];
        
		if(!allowSaleEgg) {
			require(nft.active == true, "Must crack egg first");
        }
		
        orderNFT(nftId, true, price);
    }
    
    function updatePriceOrderNFT(uint256 nftId, uint256 price) external {
       
        require(nftSales.contains(nftId), "Not Sale");
       
        PetNFT storage nft = pets[nftId];
        
        require(_msgSender() == nft.nftOwner, "Not owner");
        
        require(price > 0, "Nothing is free");
        
        nft.salePrice = price;
        
        emit UpdatePriceOrderNFT(nftId, price);
    }
    
    function cancelOrderNFT(uint256 nftId) external{
        
        require(nftSales.contains(nftId), "Not Sale");
        
        PetNFT storage nft = pets[nftId];
        
        require(_msgSender() == nft.nftOwner, "Not owner");
    
        _approve(_msgSender(), nftId);
        
        orderNFT(nftId, false, 0);
        
        emit CancelOrderNFT(nftId);
    }
    
    function buyOrderNFT(uint256 _nftId, uint256 price) external {
       require(nftSales.contains(_nftId),"Not Sale");
       
       PetNFT storage nft = pets[_nftId];
       
       address sender = _msgSender();
    
        address seller = nft.nftOwner;
    
        require(seller != address(0), "Invalid address");
        require(seller != sender, "Unauthorized user");
        require(nft.salePrice == price, "The price is not correct");
        require(seller == ownerOf(_nftId), "The seller is no longer the owner");
		
		_approve(_msgSender(), _nftId);
    
        nft.salePrice = 0;
        nft.isSale = false;
		
		saleTokens[nft.nftOwner].remove(_nftId);
        nftSales.remove(_nftId);

        uint256 tFee = calculateOrderTaxFee(price);
        require(
            ERC20Interface(hwoToken).transferFrom(sender, address(this), tFee * 10**9),
            "Transfering the tax fee failed"
        );
        
        price = price - tFee;

        // Transfer sale amount to seller
        require(
          ERC20Interface(hwoToken).transferFrom(sender, seller, price * 10**9),
          "Transfering the sale amount to the seller failed"
        );
    
        // Transfer asset owner
        safeTransferFrom(
          seller,
          sender,
          _nftId
        ); 
       
       emit BuyOrderNFT(_nftId);
    }
	
	function orderNFT(uint256 _nftId, bool sell, uint256 price) internal {
        
        PetNFT storage nft = pets[_nftId];
        
        if(sell){
            saleTokens[nft.nftOwner].add(_nftId);
            nftSales.add(_nftId);
            
            nft.salePrice = price;
            nft.isSale = true;
        }else{
            saleTokens[nft.nftOwner].remove(_nftId);
            nftSales.remove(_nftId);
            
            nft.salePrice = 0;
            nft.isSale = false;
        }
        
        nft.nftOwner = _msgSender();
    }
    
    function getOrders() public view returns (PetNFT[] memory) {
        PetNFT[] memory result = new PetNFT[](marketSize());
        uint256 counter = 0;

        for (uint256 i = 0; i < pets.length; i++) {
            PetNFT memory nft = pets[i];
            if (nft.isSale == true) {
                result[counter] = nft;

                counter++;
            }
        }

        return result;
    }
	
	function calculateOrderTaxFee(uint256 _amount) private view returns (uint256) {
        return _amount.mul(orderTaxFee).div(
            10**2
        );
    }
	
	function setOrderTaxFeePercent(uint256 _orderTaxFee) external onlyOwner() {
        orderTaxFee = _orderTaxFee;
    }
	
	function setAllowSaleEgg(bool _allowSaleEgg) external onlyOwner() {
        allowSaleEgg = _allowSaleEgg;
    }
	
	function getAllowSaleEgg() public view returns(bool){
        return allowSaleEgg;
    }
	
	function marketSize() public view returns(uint256){
        return nftSales.length();
    }
	
    function yourSaleSize(address yourAddress) public view returns(uint256) {
        return saleTokens[yourAddress].length();
    }
	
    function yourSaleByIndex(address yourAddress, uint256 index) public view returns(uint256) {
        return saleTokens[yourAddress].at(index);
    }
}

