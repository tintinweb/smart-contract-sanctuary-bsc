pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/utils/AddressUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "./MPPetNFT.sol";

contract PetNFT is Initializable, MPPetNFT, PausableUpgradeable {
    using SafeMathUpgradeable for uint256;
    using AddressUpgradeable for address;

    address public monsterToken;
    
    function initialize(
        address _hwoToken
    ) initializer public {
        __Context_init_unchained();
        __ERC721_init("PetNFT", "PET");
        __Ownable_init();

        hwoToken = _hwoToken;

        eggPrice = 25000;
        nextID = 0;

        maxLevel = 2;
        expBase = 100;
		
		orderTaxFee = 5;
		allowSaleEgg = false;
    }

    modifier onlyMonsterToken() {
        require(monsterToken == _msgSender(), "Caller is not the Monster Token");
        _;
    }

    function _createRandomNum(uint256 _mod) internal view returns (uint256) {
        uint256 randomNum = uint256(
            keccak256(abi.encodePacked(block.timestamp, msg.sender))
        );
        return randomNum % _mod;
    }

    function receiveEgg(uint256 _amount) external virtual whenNotPaused {
		address receiver = _msgSender();
		
        require(receiver != address(0));

        require(_amount >= eggPrice, "INVALID AMOUNT");
        require(ERC20Interface(hwoToken).transferFrom(msg.sender, address(this), _amount * 10**9));

        require(!_exists(nextID));
		
		_safeMint(receiver, nextID++);

        PetNFT memory nft = PetNFT(
			receiver,
            nextID - 1,
            0,
            1,
			0,
			0,
			0,
			false,
            false
        );
        
        pets.push(nft);
    }

    function openEgg(uint256 _nftId) external whenNotPaused {
        require(_msgSender() == ownerOf(_nftId), "not owner");

        require(!_exists(nextID));

        uint8 tribe = uint8(_createRandomNum(6));

        PetNFT storage nft = pets[_nftId];

        require(nft.active == false, "Egg cracked");

        nft.active = true;
        nft.tribe = tribe;
        
        emit OpenEgg(_nftId, tribe);
    }

    function mintPetByOwner(address _receiver, uint256 _tribe, bool _active) external onlyOwner() {
        require(_tribe < 6, "Tribe does not exist");
        require(!_exists(nextID));

        _safeMint(_receiver, nextID++);

        PetNFT memory nft = PetNFT(
			_receiver,
            nextID - 1,
            0,
            _tribe,
			0,
			0,
			0,
			false,
            _active
        );
        
        pets.push(nft);
    }

    function getOwnerPets() public view returns (PetNFT[] memory) {
        address _owner =  msg.sender;

        PetNFT[] memory result = new PetNFT[](balanceOf(_owner));
        uint256 counter = 0;

        for (uint256 i = 0; i < pets.length; i++) {
            if (ownerOf(i) == _owner) {
                result[counter] = pets[i];

                counter++;
            }
        }

        return result;
    }

    function getOwnerPet(uint256 _petId) public view returns (PetNFT memory) {
        require(ownerOf(_petId) == msg.sender);

        PetNFT memory nft = pets[_petId];

        return nft;
    }

    function getPet(uint256 _petId) public view returns (PetNFT memory) {
        PetNFT memory nft = pets[_petId];

        return nft;
    }

    function getTribePet(uint256 _petId, address _owner) external view returns (uint256) {
        require(ownerOf(_petId) == _owner);

        PetNFT memory nft = pets[_petId];

        return nft.tribe;
    }
    
    function isActive(uint256 _petId, address _owner) external view returns (bool) {
        require(ownerOf(_petId) == _owner);

        PetNFT memory nft = pets[_petId];

        return nft.active;
    }

    function setEndBlock(address _owner, uint256 _petId) external onlyMonsterToken returns (bool) {
        require(ownerOf(_petId) == _owner, "Not the owner");
        
        uint256 endBlock = block.timestamp + 14400;

        PetNFT storage nft = pets[_petId];
        nft.endBlock = endBlock;

        return true;
    }
    
    function isBlock(uint256 _petId, address _owner) external view returns(bool) {
        require(ownerOf(_petId) == _owner);

        PetNFT memory nft = pets[_petId];

        return nft.endBlock > block.timestamp;
    }

    function setPetExp(uint256 _petId, uint256 _exp) external {
        require(ownerOf(_petId) == msg.sender);

        PetNFT storage nft = pets[_petId];
        uint256 exp = nft.exp + _exp;
        uint256 level = nft.level;

        if(level < maxLevel && exp >= expBase * level) {
            nft.exp = exp - (expBase * level);
            nft.level = level + 1;
        } else {
            nft.exp = exp;
        }
    }

    function setMaxLevel(uint8 _maxLevel) external onlyOwner() {
        maxLevel = _maxLevel;
    }

    function getMaxLevel() public view returns(uint8){
        return maxLevel;
    }

    function setExpBase(uint256 _expBase) external onlyOwner() {
        expBase = _expBase;
    }

    function getExpBase() public view returns(uint256){
        return expBase;
    }

    function setEggPrice(uint256 _eggPrice) external onlyOwner() {
        eggPrice = _eggPrice;
    }

    function getEggPrice() public view returns(uint256){
        return eggPrice;
    }

    function setMonsterToken(address _monsterToken) public onlyOwner() {
        monsterToken = _monsterToken;
    }

    function getBalance() view public returns(uint256) {
        return ERC20Interface(hwoToken).balanceOf(address(this));
    }

    function withdraw() external payable onlyOwner() {
        ERC20Interface(hwoToken).transfer(owner(), getBalance());
    }

    /// @notice Returns the total number of pets currently in existence.
    function totalSupply() public view returns (uint) {
        return nextID;
    }

    uint256[49] private __gap;
}

