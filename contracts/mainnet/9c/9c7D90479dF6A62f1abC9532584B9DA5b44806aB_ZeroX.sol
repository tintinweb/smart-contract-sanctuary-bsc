pragma solidity ^0.8.13;

import "./interfaces/IZeroX.sol";
import "./models/TokenStandard.sol";

contract ZeroX is IZeroX, TokenStandard("ZeroX", "ZeroX", 2) {

    using SafeMath for uint;

    event ZeroXReleased( address to, uint256 amount );
    event ZeroXPeriod( uint oldValue, uint newValue );

    uint256 zeroXmax = 10_000_000_00;
    uint256 zeroXpercent = 10;

    uint blockTime = 3;
    uint blockPerDay = 1 days / 3;

    uint releasePeriod = 90 days * blockPerDay;
    uint lastReleased;

    constructor ( address root ) {
        _release( root );
    }

    function zeroXrelease( address from, address foundation ) external onlyOwner returns ( bool ) {
        require( msg.sender == owner(), "ZeroX: callable not zeroer" );
        require(lastReleased.add(releasePeriod) < block.number, "ZeroX: release period not reached1");
        require( totalSupply() < zeroXmax, "ZeroX: max supply reached" );
        _mint( from, foundation, zeroXmax.div(zeroXpercent) );
        lastReleased = block.number;
        emit ZeroXReleased(foundation, zeroXmax.div(zeroXpercent));
        return true;
    }

    function _release( address from ) internal returns ( bool ) {
        _mint(from, msg.sender, zeroXmax.div(zeroXpercent));
        lastReleased = block.number;
        emit ZeroXReleased(msg.sender, zeroXmax.div(zeroXpercent));
        return true;
    }

    function setReleasePeriod( uint value ) external onlyOwner returns ( bool ) {
        require( value >= 90 days, "ZeroX: value too low to set" );
        emit ZeroXPeriod(releasePeriod, value);
        releasePeriod = value;
        
        return true;
    }
}

