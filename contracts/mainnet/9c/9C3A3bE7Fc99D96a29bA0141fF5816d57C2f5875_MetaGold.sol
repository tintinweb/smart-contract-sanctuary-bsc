    struct SwapData {
        uint amountIn;
        uint amountOut;
        bool exactOutput;
    }

    uint256 public constant MAX_INT = 2**256 - 1;

    // role that can withdraw funds from the contract
    bytes32 public constant BENEFICIARY_ROLE = keccak256("BENEFICIARY_ROLE");
    // can pause minting and transfers
