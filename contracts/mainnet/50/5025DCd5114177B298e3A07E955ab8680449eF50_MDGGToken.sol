pragma solidity ^0.8.0;

import "SafeMath.sol";
import "AccessControl.sol";
import "ERC20Burnable.sol";
import "Strings.sol";
import "UStrings.sol";

contract MDGGToken is ERC20Burnable, AccessControl {
    using UStrings for string;
    using SafeMath for uint256;

    uint256 private immutable _cap;
    function cap() public view virtual returns (uint256) {
        return _cap;
    }
    bytes32 public constant BURNER_ROLE = keccak256("BURNER_ROLE");

    bytes32 public constant AIRDROP_ROLE = keccak256("AIRDROP_ROLE");
    uint public airdrop_total;
    uint public airdrop_released = 0;
    event AirdropReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant SEEDROUND_ROLE = keccak256("SEEDROUND_ROLE");
    uint public seedround_total;
    uint public seedround_released = 0;
    event SeedroundReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant PRIVATESALE_ROLE = keccak256("PRIVATESALE_ROLE");
    uint public privatesale_total;
    uint public privatesale_released = 0;
    event PrivatesaleReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant PUBLICSALE_ROLE = keccak256("PUBLICSALE_ROLE");
    uint public publicsale_total;
    uint public publicsale_released = 0;
    event PublicsaleReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant LAUNCHPAD_ROLE = keccak256("LAUNCHPAD_ROLE");
    uint public launchpad_total;
    uint public launchpad_released = 0;
    event LaunchpadReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant PARTNERSHIPS_ROLE = keccak256("PARTNERSHIPS_ROLE");
    uint public partnerships_total;
    uint public partnerships_released = 0;
    event PartnershipsReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant ADVISORS_ROLE = keccak256("ADVISORS_ROLE");
    uint public advisors_total;
    uint public advisors_released = 0;
    event AdvisorsReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant TEAM_ROLE = keccak256("TEAM_ROLE");
    uint public team_total;
    uint public team_released = 0;
    event TeamReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant DAO_ROLE = keccak256("DAO_ROLE");
    uint public dao_total;
    uint public dao_released = 0;
    event DaoReleased(bytes32 indexed role, address from, address to, uint amount);

    bytes32 public constant TREASURIES_ROLE = keccak256("TREASURIES_ROLE");
    uint public treasuries_total;
    uint public treasuries_released = 0;
    event TreasuriesReleased(bytes32 indexed role, address from, address to, uint amount);
    event Sacrifice(bytes32 indexed to, address from, uint amount);
    event TokenBurned(address from, uint amount);

    bytes32 public constant TRANSFER_ROLE = keccak256("TRANSFER_ROLE");


    event TransferEmission(bytes32 indexed from, bytes32 indexed to, uint amount);

    /**
     * @dev Transfers part of the possible emission from one direction to another.
     *
     * Requirements:
     *
     * - the caller must have the `TRANSFER_ROLE`.
     * - The transferred part should not exceed the "emission residues" of the direction from which the transfer takes place
     */
    function transfer_total(string memory from, string memory to, uint256 amount) public virtual onlyRole(TRANSFER_ROLE) {
        require(amount > 0, "Amount must not be null.");
        require(remain(from) >= amount, "Remain of emission must be more or equal amount for transfer.");
        emit TransferEmission(sha256(bytes(from)), sha256(bytes(to)), amount);
        string memory name = to.upper();
        if (name.compareTo("AIRDROP")) {
            airdrop_total = airdrop_total.add(amount);
        } else if (name.compareTo("SEEDROUND")) {
            seedround_total = seedround_total.add(amount);
        } else if (name.compareTo("PRIVATESALE")) {
            privatesale_total = privatesale_total.add(amount);
        } else if (name.compareTo("PUBLICSALE")) {
            publicsale_total = publicsale_total.add(amount);
        } else if (name.compareTo("LAUNCHPAD")) {
            launchpad_total = launchpad_total.add(amount);
        } else if (name.compareTo("PARTNERSHIPS")) {
            partnerships_total = partnerships_total.add(amount);
        } else if (name.compareTo("ADVISORS")) {
            advisors_total = advisors_total.add(amount);
        } else if (name.compareTo("TEAM")) {
            team_total = team_total.add(amount);
        } else if (name.compareTo("DAO")) {
            dao_total = dao_total.add(amount);
        } else if (name.compareTo("TREASURIES")) {
            treasuries_total = treasuries_total.add(amount);
        }
        string memory from_name = from.upper();
        if (from_name.compareTo("AIRDROP")) {
            airdrop_total = airdrop_total.sub(amount);
        } else if (from_name.compareTo("SEEDROUND")) {
            seedround_total = seedround_total.sub(amount);
        } else if (from_name.compareTo("PRIVATESALE")) {
            privatesale_total = privatesale_total.sub(amount);
        } else if (from_name.compareTo("PUBLICSALE")) {
            publicsale_total = publicsale_total.sub(amount);
        } else if (from_name.compareTo("LAUNCHPAD")) {
            launchpad_total = launchpad_total.sub(amount);
        } else if (from_name.compareTo("PARTNERSHIPS")) {
            partnerships_total = partnerships_total.sub(amount);
        } else if (from_name.compareTo("ADVISORS")) {
            advisors_total = advisors_total.sub(amount);
        } else if (from_name.compareTo("TEAM")) {
            team_total = team_total.sub(amount);
        } else if (from_name.compareTo("DAO")) {
            dao_total = dao_total.sub(amount);
        } else if (from_name.compareTo("TREASURIES")) {
            treasuries_total = treasuries_total.sub(amount);
        }
    }

    /**
     * @dev Returns the maximum number of tokens that can be created for the selected storage
     */
    function total(string memory name) public view returns (uint) {
        (bool success, bytes memory result) =  address(this).staticcall(
          abi.encodeWithSelector(
            bytes4(
              keccak256(
                abi.encodePacked(
                  name.lower(), "_total", "()"
                )
              )
            )
          )
        );
          (uint out) = abi.decode(result, (uint));
        return out;
    }
    /**
     * @dev Returns the number of unlocked tokens for the selected storage
     */
    function released(string memory name) public view returns (uint) {
        (bool success, bytes memory result) =   address(this).staticcall(
          abi.encodeWithSelector(
            bytes4(
              keccak256(
                abi.encodePacked(
                  name.lower(), "_released", "()"
                )
              )
            )
          )
        );
        (uint out) = abi.decode(result, (uint));
        return out;
    }
    /**
     * @dev Returns the number of tokens that can be created for the selected storage
     */
    function remain(string memory name) public view returns (uint) {
        return  total(name) - released(name);
    }

    function _get_role_by_name(string memory name) private view returns (bytes32) {
        (bool success, bytes memory result) =   address(this).staticcall(
          abi.encodeWithSelector(
            bytes4(
              keccak256(
                abi.encodePacked(
                  name.upper(), "_ROLE", "()"
                )
              )
            )
          )
        );
        (bytes32 out) = abi.decode(result, (bytes32));
        return out;
    }

    function _increment_released(string memory name, uint amount, address to) internal virtual {
        if (name.compareTo("AIRDROP")) {
            airdrop_released = airdrop_released.add(amount);
            emit AirdropReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("SEEDROUND")) {
            seedround_released = seedround_released.add(amount);
            emit SeedroundReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("PRIVATESALE")) {
            privatesale_released = privatesale_released.add(amount);
            emit PrivatesaleReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("PUBLICSALE")) {
            publicsale_released = publicsale_released.add(amount);
            emit PublicsaleReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("LAUNCHPAD")) {
            launchpad_released = launchpad_released.add(amount);
            emit LaunchpadReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("PARTNERSHIPS")) {
            partnerships_released = partnerships_released.add(amount);
            emit PartnershipsReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("ADVISORS")) {
            advisors_released = advisors_released.add(amount);
            emit AdvisorsReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("TEAM")) {
            team_released = team_released.add(amount);
            emit TeamReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("DAO")) {
            dao_released = dao_released.add(amount);
            emit DaoReleased(sha256(bytes(name)), _msgSender(), to, amount);
        } else if (name.compareTo("TREASURIES")) {
            treasuries_released = treasuries_released.add(amount);
            emit TreasuriesReleased(sha256(bytes(name)), _msgSender(), to, amount);
        }
    }

    function _release(address account, uint256 amount) internal virtual {
        _release_from(account, amount, "TREASURIES");
    }

    function _release_from(address account, uint256 amount, string memory name) internal virtual {
        // check max supply
        uint new_released = released(name) + amount;
        uint _total = total(name);
        require(account != address(0), "Address is not set!");
        // check TREASURIES vesting for
        require(new_released <= _total, string("MDGG: released exceeded for ").concat(name).concat(' storage. Maximum is ').concat(string(Strings.toString(remain(name)))).concat("."));
        // check for UnlockRules
        bytes32 role = _get_role_by_name(name);
        // check unlock supply
        UnlockRule memory unlockRule = unlockRules[role];
        if (unlockRule.exists) {
            // check unlockRules
            uint unlock_index = get_current_unlock_index(unlockRule.periods);
            uint unlocked = _total * unlockRule.unlock_per_period * unlock_index / 100;
            require(new_released <= unlocked, string(abi.encodePacked("UnlockRules: need ", Strings.toString(amount), " - index ", Strings.toString(unlock_index), " current unlocked cap for ", name, ' storage is ', Strings.toString(_total), ', ', Strings.toString(unlocked), ' is unlocked!')));
        }

        _increment_released(name.upper(), amount, account);

        _transfer(address(this), account, amount);
    }

    function release_from(address to, uint256 amount, string memory name) public virtual {
        // Check ROLE
        bytes32 role = _get_role_by_name(name);
        require(amount > 0, "Amount must not be null.");
        require(hasRole(role, _msgSender()), string("MDGG: must have releaser role to release").concat(" ").concat(name));
        _release_from(to, amount, name.upper());
    }

    /**
     * @dev Release `amount` new tokens for `to`.
     *
     * Requirements:
     *
     * - the caller must have the `TREASURIES_ROLE`.
     */
    function release(address to, uint256 amount) public virtual {
        release_from(to, amount, "TREASURIES");
    }
    function decimals() public view virtual override returns (uint8) {
        return 5;
    }
    function decimals_factor() public view virtual returns (uint256) {
        return 10 ** decimals();
    }

    /**
     * @dev Destroys `amount` tokens from the caller.
     *
     * See {ERC20-_burn}.
     */
    function burn(uint256 amount) public virtual override {
        super.burn(amount);
        emit TokenBurned(_msgSender(), amount);
    }
    /**
     * @dev Burns the specified `amount` of tokens in favor of one of the directions,
     * while increasing the number of possible token issuance for this direction
     *
     * See {ERC20-_burn}.
     *  emit Sacrifice event
     */
    function burnTo(string memory name, uint256 amount) public virtual {

        _burn(_msgSender(), amount);

        string memory to_name = name.upper();
        if (to_name.compareTo("AIRDROP")) {
            airdrop_total = airdrop_total.add(amount);
        } else if (to_name.compareTo("SEEDROUND")) {
            seedround_total = seedround_total.add(amount);
        } else if (to_name.compareTo("PRIVATESALE")) {
            privatesale_total = privatesale_total.add(amount);
        } else if (to_name.compareTo("PUBLICSALE")) {
            publicsale_total = publicsale_total.add(amount);
        } else if (to_name.compareTo("LAUNCHPAD")) {
            launchpad_total = launchpad_total.add(amount);
        } else if (to_name.compareTo("PARTNERSHIPS")) {
            partnerships_total = partnerships_total.add(amount);
        } else if (to_name.compareTo("ADVISORS")) {
            advisors_total = advisors_total.add(amount);
        } else if (to_name.compareTo("TEAM")) {
            team_total = team_total.add(amount);
        } else if (to_name.compareTo("DAO")) {
            dao_total = dao_total.add(amount);
        } else if (to_name.compareTo("TREASURIES")) {
            treasuries_total = treasuries_total.add(amount);
        }
        emit Sacrifice(sha256(bytes(name)), _msgSender(), amount);
        _mint(address(this), amount);
    }

    function get_current_unlock_index(uint[] memory rules_periods) private view returns (uint) {
        uint ts = getTime();
        uint index = 0;
        for (uint i=0; i < rules_periods.length; i++) {
            if (ts >= rules_periods[i]) {
                index++;
            } else {
                break;
            }
        }
        return index;
    }

    function getTime() private view returns (uint) {
        return block.timestamp;
    }

    uint[] private rules_2_periods = [1672531200, 1675209600, 1677628800, 1680307200, 1682899200, 1685577600, 1688169600, 1690848000, 1693526400, 1696118400, 1698796800, 1701388800, 1704067200, 1706745600, 1709251200, 1711929600, 1714521600, 1717200000, 1719792000, 1722470400, 1725148800, 1727740800, 1730419200, 1733011200, 1735689600];

    uint[] private rules_3_periods = [1696118400, 1698796800, 1701388800, 1704067200, 1706745600, 1709251200, 1711929600, 1714521600, 1717200000, 1719792000, 1722470400, 1725148800, 1727740800, 1730419200, 1733011200, 1735689600, 1738368000, 1740787200, 1743465600, 1746057600, 1748736000, 1751328000, 1754006400, 1756684800, 1759276800];

    struct UnlockRule {
        bytes32 role;
        uint unlock_per_period;
        uint[] periods;
        bool exists;
    }
    mapping (bytes32 => UnlockRule) public unlockRules;

    bool public is_released = false;

    function firstRelease() public {
        require(!is_released, "There can be only one first mint");
        _mint(address(this), _cap);
        is_released = true;
    }

    /**
     * @dev Setting the initial conditions for tokenomics
     */
    constructor(uint cap_, string memory name, string memory symbol) ERC20(name, symbol) {
        require(cap_ > 0, "MDGG: cap is 0");
        _cap = cap_ * decimals_factor();

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        seedround_total = _cap * 25 / 1000;
        privatesale_total = _cap * 5 / 100;
        publicsale_total = _cap * 45 / 1000;
        launchpad_total = _cap * 5 / 1000;
        treasuries_total = _cap * 275 / 1000;
        dao_total = _cap * 27 / 100;
        advisors_total = _cap * 2 / 100;
        partnerships_total = _cap * 10 / 100;
        airdrop_total = _cap * 3 / 100;
        team_total = _cap * 18 / 100;

        // Creating vesting conditions for different storages
        UnlockRule memory advisors_rule = UnlockRule(ADVISORS_ROLE, 4, rules_2_periods, true);
        unlockRules[ADVISORS_ROLE] = advisors_rule;

        UnlockRule memory team_rule = UnlockRule(TEAM_ROLE, 4, rules_3_periods, true);
        unlockRules[TEAM_ROLE] = team_rule;


        _setupRole(BURNER_ROLE, msg.sender);
    }
}

