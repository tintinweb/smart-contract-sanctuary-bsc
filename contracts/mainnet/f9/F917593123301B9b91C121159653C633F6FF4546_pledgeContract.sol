contract pledgeContract{
    using SafeMath for uint256;    
    address owner;
    uint256 private lock = 0;
    uint256 public rate = 0;
    IERC20 public pledgeToken; 
    mapping (address => uint256) public userPledge;  
    event pledgeEvent(address indexed sender, uint256 num, uint256 timestamp); 
    event removeEvent(address indexed sender, uint256 num, uint256 timestamp); 
    constructor(IERC20 _pledgeToken) {
        owner = msg.sender;
        pledgeToken = _pledgeToken;
    }  
    modifier checkOwner() {
        require(msg.sender == owner);
        _;
    }
    modifier checkLock() {
        require(lock == 0);
        lock = 1;
        _;
        lock = 0;
    }
    //质押
    function pledge(uint256 _num) public{
        require(_num > 0);
        pledgeToken.transferFrom(msg.sender, address(this),_num);

        userPledge[msg.sender] = userPledge[msg.sender].add(_num);
        
        emit pledgeEvent(msg.sender,_num, block.timestamp);
    }
    function remove(uint256 _num) checkLock public{
        require(_num > 0);
        require(userPledge[msg.sender] >= _num);
        uint256 num = _num.sub(_num * rate / 100);
        pledgeToken.transfer(msg.sender,num);
        userPledge[msg.sender] = userPledge[msg.sender].sub(_num);
        emit removeEvent(msg.sender,_num, block.timestamp);
    }
    function withdraw(IERC20 _a, uint256 num, address _to) checkOwner public {
        _a.transfer(_to, num);
    }
    function setOwner(address _a) checkOwner public {
        owner = _a;
    }
    function setRate(uint256 _n) checkOwner public {
        rate = _n;
    }
    function setPledgeToken(IERC20 _a) checkOwner public {
        pledgeToken = _a;
    }
}