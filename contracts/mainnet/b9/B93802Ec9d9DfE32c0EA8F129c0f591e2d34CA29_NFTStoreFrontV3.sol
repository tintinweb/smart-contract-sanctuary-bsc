        uint96 royaltyFee,
        bytes memory data
    ) external onlyMinter returns (uint256) {
        _mint(to, id, amount, data);
        _setURI(id, tokenURI);
        royaltyCal.setTokenRoyalty(id, to, royaltyFee);
        emit PlastikNFTMultiMinted(to, id, amount);
        return id;
    }

