contract ICO is Ownable,ReentrancyGuard {
    using Address for address;

    IBEP20 public immutable busd; 
    IBEP20 public immutable ssToken; 

    uint256 public _swapRate;  // 1 busd = 0.22 * SS
    bool public _isDepositEnable;
    uint256 public _userSellLimit;

    struct userSellDetails{
        uint256 _amount;
    }

    mapping(address => userSellDetails) public _userSell;

    event DepositBusd(address indexed _account, uint256 _busdAmount, uint256 _ssAmount);


    
    constructor(IBEP20 _busd, IBEP20 _ssToken){
        busd=  _busd;
        ssToken= _ssToken;
        _swapRate= 22;
        _userSellLimit= 10**17*10**18;  // 1 quadrillion = 10**15 so, 100 quadrillion= 10**17 and 18 decimals of busd token.
        _isDepositEnable= true;

    }
    // onlyOwner
    function updateSwapRate(uint256 _newSwapRate) external onlyOwner{
        _swapRate= _newSwapRate;
    }
    function updateUserSellLimit(uint256 _amount) external onlyOwner{
        _userSellLimit= _amount;
    }
 
    function getBusdFromContract(uint256 _amount) external onlyOwner{
        require(busd.balanceOf(address(this))>=_amount,"Insufficient busd Token");
        busd.transfer(owner(), _amount);

    }
    function getSSFromContract(uint256 _amount) external onlyOwner{
        require(ssToken.balanceOf(address(this))>=_amount,"Insufficient SS Token");
        ssToken.transfer(owner(), _amount);
    }
    
    function toggleDeposit() external onlyOwner {
        _isDepositEnable = !_isDepositEnable;

    } 
    
    // public
    function depositBusd(uint256 _amount) external nonReentrant returns(bool){
        
        require(_isDepositEnable, "Deposit not enabled.");
        require(busd.balanceOf(msg.sender)>=_amount,"Insufficient busd Token.");
        userSellDetails storage s = _userSell[msg.sender];
        uint256 calSs = (_amount * _swapRate)/100;

        uint256 prevBalance = s._amount;

        if( prevBalance + _amount > _userSellLimit){
            revert("Can't sell more than limit"); 
        }

        if(prevBalance+ _amount <= _userSellLimit){
            // Allow sell
            internalDeposit(msg.sender,_amount,calSs);
        }

        
        return true;
    }

    function internalDeposit(address _account, uint256 _busdAmount,uint256 _ssAmount) internal{
        userSellDetails storage s = _userSell[msg.sender];
        busd.transferFrom(_account, address(this),_busdAmount);
        ssToken.transfer(_account,_ssAmount);
        
        // Amount Update 
        uint256 prevBalance = s._amount;

        s._amount= _busdAmount + prevBalance;
        emit DepositBusd(msg.sender,_busdAmount,_ssAmount);
    }
    
    function estimate(uint256 _amount) external view returns(uint256){
        return  (_amount * _swapRate)/100;

    }
                                               
}