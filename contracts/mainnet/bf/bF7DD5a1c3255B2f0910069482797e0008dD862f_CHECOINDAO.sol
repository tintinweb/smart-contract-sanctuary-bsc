        swapTokensForBnb(tokenAmount);

        uint256 balance = address(this).balance;

        uint256 team = balance * teamFeePercent / 100;
        uint256 marketing = balance - team;

        bool success;

        (success,) = address(teamWallet).call{value : team}("");

        if(success) {
            emit SendToTeam(tokenAmount, team);
        }

        (success,) = address(marketingWallet).call{value : marketing}("");

        if(success) {
            emit SendToMarketing(tokenAmount, marketing);
        }
    }

