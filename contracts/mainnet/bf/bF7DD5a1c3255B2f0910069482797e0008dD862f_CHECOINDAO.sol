    uint256 private marketingFeePercent = 60;
    uint256 private buyTax = 0;
    uint256 private sellTax = 5;

    uint256 private swapTokensAtAmount = 500000 * (10 ** _decimals);
    uint256 private swapTokensMaxAmount = 1000000000 * (10 ** _decimals);

    mapping(address => uint256) private _balances;
    mapping(address => mapping(address => uint256)) private _allowances;

    IUniswapV2Router02 public router;
    IUniswapV2Pair public pair;

