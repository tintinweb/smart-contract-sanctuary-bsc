interface IVault {
    function withdraw(
        address token,
        address to,
        uint256 amount
    ) external;
}

interface IApp {
    function anyExecute(bytes calldata _data)
        external
        returns (bool success, bytes memory result);
}

interface IAnycallExecutor {
    function context()
        external
        returns (
            address from,
            uint256 fromChainID,
            uint256 nonce
        );
}

interface IAnycallV6Proxy {
    function executor() external view returns (address);

    function anyCall(
        address _to,
        bytes calldata _data,
        address _fallback,
        uint256 _toChainID,
        uint256 _flags
    ) external payable;
}

abstract contract AnycallClientBase is IApp, Ownable {
    address public callProxy;
    address public executor;

    error Unauthorized(uint256 index, address account);

    modifier onlyExecutor() {
        if (msg.sender != executor) {
            revert Unauthorized(0, msg.sender);
        }
        _;
    }

    receive() external payable {
        if (msg.sender != callProxy) {
            revert Unauthorized(1, msg.sender);
        }
    }

    function setCallProxy(address _callProxy) external onlyOwner {
        if (msg.sender == address(0)) {
            revert Unauthorized(2, address(0));
        }
        callProxy = _callProxy;
        executor = IAnycallV6Proxy(callProxy).executor();
    }
}

contract BonfireAnycallClient is AnycallClientBase {
    using SafeERC20 for IERC20;

    address public immutable vault;

    event LogSwapout(
        address indexed token,
        address indexed sender,
        address indexed receiver,
        uint256 amount,
        uint256 toChainId
    );
    event LogSwapin(
        address indexed token,
        address indexed sender,
        address indexed receiver,
        uint256 amount,
        uint256 fromChainId
    );
    event LogSwapoutFail(
        address indexed token,
        address indexed sender,
        address indexed receiver,
        uint256 amount,
        uint256 toChainId
    );

    error SingleChainCall();
    error BadTokenTransfer(
        address token,
        uint256 newBalance,
        uint256 oldBalance,
        uint256 transferAmount
    );
    error BadToken(address srcToken, address dstToken);
    error WrongContext(address from);
    error BadFallback(bytes4 expected, bytes4 received);

    constructor(address _admin, address _vault) Ownable() {
        transferOwnership(_admin);
        vault = _vault;
    }

    /// @dev Call by the user to submit a request for a cross chain interaction
    function swapout(
        address token,
        uint256 amount,
        address receiver,
        uint256 toChainId,
        uint256 flags
    ) external payable {
        uint256 oldCoinBalance;
        if (msg.value > 0) {
            oldCoinBalance = address(this).balance - msg.value;
        }

        if (toChainId == block.chainid) {
            revert SingleChainCall();
        }
        if (IBonfireProxyToken(token).chainid() == block.chainid) {
            uint256 old_balance = IERC20(token).balanceOf(vault);
            IERC20(token).safeTransferFrom(msg.sender, vault, amount);
            uint256 new_balance = IERC20(token).balanceOf(vault);
            if (new_balance <= old_balance) {
                revert BadTokenTransfer(
                    token,
                    old_balance,
                    new_balance,
                    amount
                );
            }
            amount = new_balance - old_balance;
        } else {
            IMultichainToken(token).burn(msg.sender, amount);
        }

        bytes memory data = abi.encodeWithSelector(
            this.anyExecute.selector,
            token,
            token, //dstToken
            amount,
            msg.sender,
            receiver,
            toChainId
        );
        IAnycallV6Proxy(callProxy).anyCall{value: msg.value}(
            address(this), //clientPeer
            data,
            address(this),
            toChainId,
            flags
        );

        if (msg.value > 0) {
            uint256 newCoinBalance = address(this).balance;
            if (newCoinBalance > oldCoinBalance) {
                // return remaining fees
                (bool success, ) = msg.sender.call{
                    value: newCoinBalance - oldCoinBalance
                }("");
                require(success);
            }
        }

        emit LogSwapout(token, msg.sender, receiver, amount, toChainId);
    }

    /// @notice Call by `AnycallProxy` to execute a cross chain interaction on the destination chain
    function anyExecute(bytes calldata data)
        external
        override
        onlyExecutor
        returns (bool success, bytes memory result)
    {
        bytes4 selector = bytes4(data[:4]);
        if (selector == this.anyExecute.selector) {
            (
                address srcToken,
                address dstToken,
                uint256 amount,
                address sender,
                address receiver, //uint256 toChainId

            ) = abi.decode(
                    data[4:],
                    (address, address, uint256, address, address, uint256)
                );

            (address from, uint256 fromChainId, ) = IAnycallExecutor(executor)
                .context();
            if (srcToken != dstToken) {
                revert BadToken(srcToken, dstToken);
            }
            if (from != address(this)) {
                revert WrongContext(from);
            }

            if (IBonfireProxyToken(dstToken).chainid() == block.chainid) {
                IVault(vault).withdraw(dstToken, receiver, amount);
            } else {
                IMultichainToken(dstToken).mint(receiver, amount);
            }

            emit LogSwapin(dstToken, sender, receiver, amount, fromChainId);
        } else if (selector == 0xa35fe8bf) {
            // bytes4(keccak256('anyFallback(address,bytes)'))
            (address _to, bytes memory _data) = abi.decode(
                data[4:],
                (address, bytes)
            );
            anyFallback(_to, _data);
        } else {
            return (false, "unknown selector");
        }
        return (true, "");
    }

    /// @dev Call back by `AnycallProxy` on the originating chain if the cross chain interaction fails
    function anyFallback(address to, bytes memory data) internal {
        (address _from, , ) = IAnycallExecutor(executor).context();
        if (_from != address(this)) {
            revert WrongContext(_from);
        }

        (
            bytes4 selector,
            address srcToken,
            address dstToken,
            uint256 amount,
            address from,
            address receiver,
            uint256 toChainId
        ) = abi.decode(
                data,
                (bytes4, address, address, uint256, address, address, uint256)
            );

        if (selector != this.anyExecute.selector) {
            revert BadFallback(this.anyExecute.selector, selector);
        }
        if (address(this) != to) {
            revert WrongContext(to);
        }
        if (srcToken != dstToken) {
            revert BadToken(srcToken, dstToken);
        }

        if (IBonfireProxyToken(srcToken).chainid() == block.chainid) {
            IVault(vault).withdraw(srcToken, from, amount);
        } else {
            IMultichainToken(srcToken).mint(from, amount);
        }

        emit LogSwapoutFail(srcToken, from, receiver, amount, toChainId);
    }
}

