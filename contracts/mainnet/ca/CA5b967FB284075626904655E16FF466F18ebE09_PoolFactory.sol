pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./TokenPoolRewardVault.sol";
import "./IBEP20.sol";
import "./SmartChefInitializable.sol";
import "./TokenPool.sol";
import "./IRewardPool.sol";

contract PoolFactory is Ownable, ReentrancyGuard {
    using SafeERC20 for IBEP20;

    enum PoolState {
        Submited,
        Validated,
        Rejected
    }

    struct PoolInfo {
        PoolState state;
        address poolAddress;
        address creator;
        address projectTaxAddress;
        address stakingToken;
        address rewardToken;
        uint256 rewardAmount;
        uint256 startBlock;
        uint256 duration;
        uint256 limitPerUser;
        uint256 projectTax;
    }

    uint256 public submissionFee;
    address public feeToken;

    uint256 public poolLength;
    mapping(uint256 => PoolInfo) public pools;

    uint256 public tax;
    address public taxAddress;

    event PoolSubmitted(uint256 poolId);
    event PoolRejected(uint256 poolId);
    event PoolCreated(uint256 poolId, address indexed poolAddress);

    event NewSmartChefContract(address indexed smartChef);

    function _paySubmission() private {
        if (feeToken == address(0)) {
            require(msg.value >= submissionFee, "Invalid payment");
        } else {
            IBEP20(feeToken).safeTransferFrom(msg.sender, address(this), submissionFee);
        }
    }

    function _createPool(uint256 poolId, uint256 startBlock) private returns (address) {
        bool isTokenPool = pools[poolId].stakingToken == pools[poolId].rewardToken;
        bytes memory bytecode = isTokenPool
            ? type(SmartChefInitializable).creationCode
            : type(SmartChefInitializable).creationCode;
        bytes32 salt = keccak256(abi.encodePacked(pools[poolId].stakingToken, pools[poolId].rewardToken, startBlock));
        address poolAddress;

        assembly {
            poolAddress := create2(0, add(bytecode, 32), mload(bytecode), salt)
        }

        return poolAddress;
    }

    function _deployPool(
        uint256 poolId,
        uint256 startBlock,
        address poolOwner
    ) private returns (address) {
        address poolAddress = _createPool(poolId, startBlock);

        PoolInfo memory pool = pools[poolId];
        IRewardPool rewardPool = IRewardPool(poolAddress);
        IBEP20 rewardToken = IBEP20(pool.rewardToken);
        address vaultAddress = rewardPool.vaultAddress();

        rewardToken.safeTransfer(vaultAddress, pool.rewardAmount);
        uint256 balance = rewardToken.balanceOf(vaultAddress);

        rewardPool.initialize(
            RewardPoolConfiguration({
                stakedToken: IBEP20(pool.stakingToken),
                rewardToken: IBEP20(pool.rewardToken),
                rewardPerBlock: balance / pool.duration,
                startBlock: startBlock,
                bonusEndBlock: startBlock + pool.duration,
                poolLimitPerUser: pool.limitPerUser,
                tax: tax,
                taxAddress: taxAddress,
                projectTax: pool.projectTax,
                projectTaxAddress: pool.projectTaxAddress,
                admin: poolOwner
            })
        );

        return poolAddress;
    }

    function submitPool(
        address stakingToken,
        address rewardToken,
        uint256 rewardAmount,
        uint256 startBlock,
        uint256 duration,
        uint256 limitPerUser,
        uint256 projectTax,
        address projectTaxAddress
    ) external payable nonReentrant {
        require(rewardAmount > 0, "Invalid reward amount");
        if (submissionFee > 0) {
            _paySubmission();
        }

        require(projectTax <= 100, "Invalid tax");
        require(projectTax == 0 || projectTaxAddress != address(0), "Invalid tax address");

        uint256 startBalance = IBEP20(rewardToken).balanceOf(address(this));
        IBEP20(rewardToken).safeTransferFrom(msg.sender, address(this), rewardAmount);
        uint256 endBalance = IBEP20(rewardToken).balanceOf(address(this));

        require(endBalance - startBalance > 0, "Invalid taxed reward amount");

        poolLength += 1;
        pools[poolLength] = PoolInfo({
            state: PoolState.Submited,
            poolAddress: address(0),
            creator: msg.sender,
            stakingToken: stakingToken,
            rewardToken: rewardToken,
            rewardAmount: endBalance - startBalance,
            startBlock: startBlock,
            duration: duration,
            limitPerUser: limitPerUser,
            projectTax: projectTax,
            projectTaxAddress: projectTaxAddress
        });

        emit PoolSubmitted(poolLength);
    }

    function rejectPool(uint256 poolId) external onlyOwner nonReentrant {
        require(poolId <= poolLength, "Invalid poolId");
        require(pools[poolId].state == PoolState.Submited, "Invalid pool state");

        pools[poolId].state = PoolState.Rejected;
        IBEP20(pools[poolId].rewardToken).safeTransfer(pools[poolId].creator, pools[poolId].rewardAmount);

        emit PoolRejected(poolId);
    }

    function validatePool(
        uint256 poolId,
        uint256 startBlock,
        address poolOwner
    ) external onlyOwner nonReentrant {
        require(poolId <= poolLength, "Invalid poolId");
        require(pools[poolId].state == PoolState.Submited, "Invalid pool state");

        pools[poolId].state = PoolState.Validated;
        pools[poolId].poolAddress = _deployPool(poolId, startBlock, poolOwner);
        pools[poolId].startBlock = startBlock;

        emit PoolCreated(poolId, pools[poolId].poolAddress);
    }

    function setDepositTax(address target, uint256 value) external onlyOwner {
        require(value <= 100, "Invalid tax");

        taxAddress = target;
        tax = value;
    }

    function _withdrawFees(address payable to, uint256 amount) private {
        require(amount > 0, "Withdraw 0!");
        if (feeToken == address(0)) to.transfer(amount);
        else IBEP20(feeToken).safeTransfer(to, amount);
    }

    function withdrawAllFees() external onlyOwner {
        uint256 balance;
        if (feeToken == address(0)) balance = address(this).balance;
        else balance = IBEP20(feeToken).balanceOf(address(this));

        _withdrawFees(payable(msg.sender), balance);
    }

    function withdrawFees(uint256 amount) external onlyOwner {
        _withdrawFees(payable(msg.sender), amount);
    }

    function setFees(address token, uint256 fee) external onlyOwner {
        feeToken = token;
        submissionFee = fee;
    }
}

