contract Transporter is Ownable, AccessControl, ERC1155Holder {
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    uint8 internal percentEndDecrease;
    address public market;

    IERC20Wrapper internal wrapper;

    mapping(address => mapping(address => uint256)) internal credits;

    event ChangeListingFee(uint16 newFee);
    event ChangePercentEndDecrease(uint8 newDecrease);

    function initialize(address wrapper_, address market_) external onlyOwner{
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(OPERATOR_ROLE, msg.sender);
        wrapper = IERC20Wrapper(payable(wrapper_));
        market = market_;
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC1155Receiver, AccessControl) returns (bool) {
        return
            interfaceId == type(IAccessControl).interfaceId || 
            super.supportsInterface(interfaceId);
    }

    function isERC1155(address checker) public view returns(bool){
        return IERC1155(checker).supportsInterface(type(IERC1155).interfaceId);
    }

    function setPercentEndDecrease(uint8 newPercentEndDecrease) external onlyRole(OPERATOR_ROLE) {
        percentEndDecrease = newPercentEndDecrease;

        emit ChangePercentEndDecrease(percentEndDecrease);
    }

    function getPercentEndDecrease() external view returns (uint256){
        return uint256(percentEndDecrease);
    }

    function getCredits(address receiver, address paymentMethod) external view returns (uint256){
        return credits[receiver][paymentMethod];
    }

    function transferItem(
        address from, 
        address to, 
        address[] memory nftAddress, 
        uint256[] memory tokenId
    ) internal{
        for (uint8 i; i < nftAddress.length; i ++){
            if (isERC1155(nftAddress[i])){
                IERC1155(nftAddress[i]).safeTransferFrom(from, to, tokenId[i], 1, abi.encodePacked(address(this)));
            }

            else{
                IERC721(nftAddress[i]).safeTransferFrom(from, to, tokenId[i], abi.encodePacked(address(this)));
            }
        }
    }

    function withdrawCredits(address paymentMethod) external {
        uint256 amount = credits[msg.sender][paymentMethod];
        require(
            amount != 0
        );
        
        credits[msg.sender][paymentMethod] = 0;

        wrapper.safeTransferFrom(
            address(this),
            msg.sender,
            wrapper.getTokenID(paymentMethod),
            amount,
            abi.encodePacked(address(this))
        );
    }
}

contract EBSMarketplace is Transporter {
    mapping (bytes32 => bool) public usedHash;

    event Purchase(
        address indexed buyer,
        address[] indexed nftAddress,
        uint256[] indexed tokenId
    );

    event Revoke(
        bytes32 indexed usedHash,
        address indexed revoker
    );

    function buyExternal (
        address[] memory nftAddress,
        address seller,
        address receiver,
        uint256[] memory tokenId,
        uint256 timestamp,
        bytes32 sellerMessage,
        bytes calldata marketSign
    ) external {
        require(nftAddress.length == tokenId.length, "Invalid length");

        bytes32 message = keccak256(abi.encodePacked(receiver, nftAddress, tokenId, seller, timestamp, sellerMessage));
        require(!usedHash[message], 'Already used hash');

        bytes32 signature = keccak256(abi.encodePacked('\x19Ethereum Signed Message:\n32', message));
        require(ECDSA.recover(signature, marketSign) == market, 'Invalid signature');

        usedHash[sellerMessage] = true;
        usedHash[message] = true;

        transferItem(seller, receiver, nftAddress, tokenId);

        emit Purchase(receiver, nftAddress, tokenId);
    }

    function buyInternal (
        address[] memory nftAddress,
        address paymentMethod,
        address seller,
        address specificBuyer,
        uint256[] memory tokenId,
        uint256 price,
        uint256 timestamp,
        bytes calldata sellerSign
    ) external {
        require(msg.sender != seller, "Invalid buyer");

        bytes32 message = keccak256(abi.encodePacked(nftAddress, tokenId, paymentMethod, price, seller, specificBuyer, timestamp));
        require(!usedHash[message], 'Already used hash');

        bytes32 signature = keccak256(abi.encodePacked('\x19Ethereum Signed Message:\n32', message));
        require(ECDSA.recover(signature, sellerSign) == seller, 'Invalid signature');

        usedHash[message] = true;

        purchase(paymentMethod, seller, msg.sender, price);
        transferItem(seller, msg.sender, nftAddress, tokenId);
        emit Purchase(msg.sender, nftAddress, tokenId);
    }

    function bidOnlyEnd (
        address[] memory nftAddress,
        address paymentMethod,
        address seller,
        address highestBidder,
        uint256[] memory tokenId,
        uint256 winningBid,
        uint256 timestamp,
        bytes calldata marketSign
    ) external {
        require(msg.sender != seller, "Invalid buyer");

        bytes32 sellerMessage = keccak256(abi.encodePacked(nftAddress, tokenId, paymentMethod, seller, timestamp));
        bytes32 marketMessage = keccak256(abi.encodePacked(highestBidder, winningBid, timestamp, sellerMessage));
        require(
            !usedHash[sellerMessage] &&
            !usedHash[marketMessage], 
            'Already used hash'
        );

        bytes32 marketSignature = keccak256(abi.encodePacked('\x19Ethereum Signed Message:\n32', marketMessage));
        require(ECDSA.recover(marketSignature, marketSign) == market, 'Invalid signature');

        usedHash[sellerMessage] = true;
        usedHash[marketMessage] = true;

        purchase(paymentMethod, seller, highestBidder, winningBid);
        transferItem(seller, msg.sender, nftAddress, tokenId);
        emit Purchase(msg.sender, nftAddress, tokenId);
    }

    function bidAndBuyEnd (
        address[] memory nftAddress,
        address paymentMethod,
        address seller,
        address highestBidder,
        uint256[] memory tokenId,
        uint256 winningBid,
        uint256 price,
        uint64 timestamp,
        bytes calldata marketSign
    ) external {
        require(msg.sender != seller, "Invalid buyer");

        bytes32 sellerMessage = keccak256(abi.encodePacked(nftAddress, tokenId, paymentMethod, price, seller, timestamp));
        bytes32 marketMessage = keccak256(abi.encodePacked(highestBidder, winningBid, timestamp, sellerMessage));
        require(
            !usedHash[sellerMessage] &&
            !usedHash[marketMessage], 
            'Already used hash'
        );

        bytes32 marketSignature = keccak256(abi.encodePacked('\x19Ethereum Signed Message:\n32', marketMessage));
        require(
            ECDSA.recover(marketSignature, marketSign) == market, 
            'Invalid signature'
        );

        usedHash[sellerMessage] = true;
        usedHash[marketMessage] = true;

        purchase(paymentMethod, seller, highestBidder, winningBid);
        transferItem(seller, msg.sender, nftAddress, tokenId);
        emit Purchase(msg.sender, nftAddress, tokenId);
    }

    function purchase(
        address paymentMethod,
        address seller,
        address buyer,
        uint256 price
    ) private {
        wrapper.safeTransferFrom(buyer, address(this), wrapper.getTokenID(paymentMethod), price, abi.encodePacked(address(this)));
        credits[seller][paymentMethod] += price;
    }

    function revokeItem(
        bytes32 message, 
        bytes calldata _signature
    ) external {
        require(!usedHash[message], 'Already used hash');
        bytes32 signature = keccak256(abi.encodePacked('\x19Ethereum Signed Message:\n32', message));

        require(ECDSA.recover(signature, _signature) == msg.sender, 'invalid signature');
        usedHash[message] = true;

        emit Revoke(message, msg.sender);
    }
}