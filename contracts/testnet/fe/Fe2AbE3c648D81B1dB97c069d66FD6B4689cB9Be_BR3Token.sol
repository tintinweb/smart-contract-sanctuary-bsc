    uint256 public sellFee = 4;
    uint256 public liquidityShare;
    uint256 public rewardShare = 50;
    uint256 public marketingShare = 25;
    uint256 public burnShare = 25;
    uint256 public totalSupply_ = 100000000;

    address public router_address = 0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3; //0x10ED43C718714eb63d5aA57B78B54704E256024E;
    address public rewardWallet = 0x27A2b2CE8aa4c169a58a788Bd66cA479c43242D5;
