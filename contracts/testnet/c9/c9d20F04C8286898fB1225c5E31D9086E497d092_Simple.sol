import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./SafeMathConversion.sol";

contract RewardShare is ERC20, Ownable {
    using SafeMath for uint256;
    using SafeMathConversion for uint256;
    using SafeMathConversion for int256;

    uint256 internal constant MAGNITUDE = 2**128;
    uint256 internal magnifiedPerShare;
    address internal rewardToken;
    mapping(address => int256) internal magnifiedCorrections;
    mapping(address => uint256) internal withdrawnReward;
    uint256 public totalDistributed;

    event RewardDistributed(address indexed receiver, uint256 indexed amount);
    event RewardWithdrawn(address indexed receiver, uint256 indexed amount);

    constructor(
        string memory _name,
        string memory _symbol,
        address _rewardToken
    ) ERC20(_name, _symbol) {
        require(
            _rewardToken != address(0),
            "RewardShare: rewards token cannot be the zero address"
        );
        rewardToken = _rewardToken;
    }

    function distributeReward(uint256 amount) public onlyOwner {
        require(totalSupply() > 0, "RewardShare: No share exist to distribute");

        if (amount > 0) {
            magnifiedPerShare =
                magnifiedPerShare +
                ((amount * MAGNITUDE) / totalSupply());
            emit RewardDistributed(msg.sender, amount);
            totalDistributed += amount;
        }
    }

    function getRewardToken() public view returns (address) {
        return rewardToken;
    }

    function withdrawReward() public virtual {
        _withdrawRewardOfUser(msg.sender);
    }

    function _withdrawRewardOfUser(address user) internal returns (uint256) {
        uint256 _withdrawableReward = withdrawableRewardOf(user);

        if (_withdrawableReward > 0) {
            withdrawnReward[user] += _withdrawableReward;
            emit RewardWithdrawn(user, _withdrawableReward);
            bool success = IERC20(rewardToken).transfer(
                user,
                _withdrawableReward
            );

            if (!success) {
                withdrawnReward[user] -= _withdrawableReward;
                return 0;
            }

            return _withdrawableReward;
        }

        return 0;
    }

    function rewardOf(address _owner) public view returns (uint256) {
        return withdrawableRewardOf(_owner);
    }

    function withdrawableRewardOf(address _owner)
        public
        view
        returns (uint256)
    {
        return (accumulativeRewardOf(_owner) - withdrawnReward[_owner]);
    }

    function withdrawnRewardOf(address _owner) public view returns (uint256) {
        return withdrawnReward[_owner];
    }

    function accumulativeRewardOf(address _owner)
        public
        view
        returns (uint256)
    {
        return
            ((magnifiedPerShare * balanceOf(_owner)).toInt256Safe() +
                magnifiedCorrections[_owner]).toUint256Safe() / MAGNITUDE;
    }

    function _transfer(
        address from,
        address to,
        uint256 value
    ) internal virtual override {
        require(false);

        int256 _magCorrection = (magnifiedPerShare * value).toInt256Safe();
        magnifiedCorrections[from] += _magCorrection;
        magnifiedCorrections[to] -= _magCorrection;
    }

    function _mint(address account, uint256 value) internal override {
        super._mint(account, value);

        magnifiedCorrections[account] -= (magnifiedPerShare * value)
            .toInt256Safe();
    }

    function _burn(address account, uint256 value) internal override {
        super._burn(account, value);

        magnifiedCorrections[account] += (magnifiedPerShare * value)
            .toInt256Safe();
    }

    function _setBalance(address account, uint256 newBalance) internal {
        uint256 currentBalance = balanceOf(account);

        if (newBalance > currentBalance) {
            uint256 mintAmount = newBalance - currentBalance;
            _mint(account, mintAmount);
        } else if (newBalance < currentBalance) {
            uint256 burnAmount = currentBalance - newBalance;
            _burn(account, burnAmount);
        }
    }
}

