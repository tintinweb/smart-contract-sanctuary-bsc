pragma solidity ^0.8.2;





contract PixelHubRewards is Ownable, ReentrancyGuard {    
    
    IERC20 public tokenAddress;
    IERC721 public nftAddress;
    mapping(address => uint256) public canClaimDate;     
    bytes32 private answer = 0x910ff9c72fdcad50b9b39f9d43a6282435166cc1d64ca24614c276aed6227c02;    
    event claimed(address player ,uint amount);
    uint256 public maxClaimAmount = 70 ether;

    constructor(address _tokenAddress, address _nftAddress)  {  
        tokenAddress = IERC20(_tokenAddress);  
        nftAddress = IERC721(_nftAddress);    
    }

    //claim amount to send in wei
    function claim(uint256 amount, string memory _pass) public nonReentrant {             
        require (amount <= maxClaimAmount, "suspicious amount detected");        
        require (keccak256(abi.encodePacked(_pass)) == answer, "keyword doesn't match, stop trying to cheat and do some good in the world");
        require (block.timestamp >= canClaimDate[msg.sender], "can only claim once every 24 hours");
        require (getContractTokenBalance() >= amount , "token supply exceeded");
        require (nftAddress.balanceOf(msg.sender) >=1 ,"you dont have Crane Miners NFTs, get at least one!");
        canClaimDate[msg.sender] = block.timestamp + 1 days;        
        tokenAddress.transferFrom(address(this), msg.sender, amount);
        emit claimed(msg.sender,amount);
    } 

    function checkHoursToClaim(address player) public view returns(int hoursLeft){
        
        int result;
        int nows = int(block.timestamp);
        int claimDate = int(canClaimDate[player]);

        result = (claimDate - nows) /60/60;

        if (result <= 0){
            return 0;
        }

        return result;        
    }  

    function updateAnswer(bytes32 newAnswer) public onlyOwner {
       answer = newAnswer;
    } 

    // new amount to claim in wei units
    function updateMaxClaimAmount(uint256 newAmount) public onlyOwner {
       maxClaimAmount = newAmount;
    } 

    //IERC20 functions
    function Approvetokens(uint256 _tokenamount) public onlyOwner returns(bool){
       tokenAddress.approve(address(this), _tokenamount);
       return true;
   }

    function getContractTokenBalance() public view returns (uint256){
       return tokenAddress.balanceOf(address(this));
    }      

    function updateBEP20TokenAddress (address _tokenAddress) public onlyOwner { 
        tokenAddress = IERC20(_tokenAddress); 
    } 

    function updateERC721TokenAddress (address _tokenAddress) public onlyOwner { 
        nftAddress = IERC721(_tokenAddress); 
    } 

    function withdrawBEP20 () public onlyOwner { 
        tokenAddress.transfer(msg.sender, getContractTokenBalance()); 
    }
}