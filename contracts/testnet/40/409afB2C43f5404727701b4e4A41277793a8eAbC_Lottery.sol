pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

import "./utils/SafeMath8.sol";
import "./utils/SafeMath24.sol";

contract Lottery is Ownable, Pausable, ReentrancyGuard {
  using SafeERC20 for IERC20Metadata;
  using SafeMath for uint256;
  using SafeMath24 for uint24;
  using SafeMath8 for uint8;
  using Address for address;

  uint8 public constant MAX_TICKETS = 50;

  uint8 public constant SPECIAL = 0;
  uint8 public constant MULTI_1 = 1;
  uint8 public constant MULTI_2 = 2;
  uint8 public constant MULTI_3 = 3;
  uint8 public constant MULTI_4 = 4;

  enum Status {
    Open,
    Closed
  }
  struct RoundInfo {
    Status status;
    uint256 totalTickets;
    uint24[] winningNumbers;
    uint256[] poolIds;
  }

  struct PoolTypeInfo {
    uint8 forTicketType; // SPECIAL, MULTI_1,...
    uint8 suffixLength;
    uint8 lottoLength;
    uint24 odds;
    uint8 startAt;
    uint8 endAt;
  }

  struct PoolInfo {
    uint256 poolTypeId;
    IERC20Metadata lpToken; // liquidity pool_roundId
    uint256 minStake;
  }

  struct TicketInfo {
    address owner;
    uint256 roundId;
    uint256 poolId;
    uint24[] numbers;
    uint256 points;
    bool claimed;
  }

  RoundInfo[] public roundInfo;
  PoolTypeInfo[] public poolTypeInfo;
  PoolInfo[] public poolInfo;

  // owner -> round -> tickets
  mapping(address => mapping(uint256 => uint256[])) public ownerToTickets;
  TicketInfo[] public ticketInfo;

  event RoundStatusChange(uint256 _roundId, Status _status);
  event AddPoolType(uint256 _poolTypeIds);
  event AddPool(uint256 _poolIds);
  event BuyTickets(
    address indexed _owner,
    uint256 _roundId,
    uint256 _poolId,
    uint24[] _numbers,
    uint256 _stakes
  );
  event ClaimTickets(address indexed _owner, uint256 _roundId, uint256[] _ticketIds);
  event Deposit(uint256 _poolId, uint256 _amount);

  function addPoolType(PoolTypeInfo memory _data) external onlyOwner {
    poolTypeInfo.push(_data);
    emit AddPoolType(poolTypeInfo.length - 1);
  }

  function addPool(
    uint256 poolTypeId,
    address lpToken,
    uint256 minStake
  ) external onlyOwner {
    poolInfo.push(PoolInfo(poolTypeId, IERC20Metadata(lpToken), minStake));
    emit AddPool(poolInfo.length - 1);
  }

  function getAllPools() public view returns (PoolInfo[] memory _data) {
    return poolInfo;
  }

  function startsRound(uint256[] memory _poolIds) external onlyOwner returns (uint256 roundId) {
    require(_poolIds.length > 0, "Require pools");

    uint256 prevRoundId = roundInfo.length;
    if (prevRoundId > 0) {
      RoundInfo memory prevRound = roundInfo[prevRoundId - 1];
      require(prevRound.status == Status.Closed, "Previous round not finished yet");
    }

    roundInfo.push(
      RoundInfo({
        status: Status.Open,
        winningNumbers: new uint24[](0),
        totalTickets: 0,
        poolIds: _poolIds
      })
    );

    uint256 newRoundId = roundInfo.length - 1;
    emit RoundStatusChange(newRoundId, Status.Open);
    return newRoundId;
  }

  function endsRound(uint256 _roundId, uint24[] calldata _winningNumbers) external onlyOwner {
    require(_winningNumbers.length == 27, "Result numbers length must equal 27");

    RoundInfo storage _round = roundInfo[_roundId];

    require(_round.status == Status.Open, "Round not closed yet");

    _round.status = Status.Closed;
    _round.winningNumbers = _winningNumbers;

    emit RoundStatusChange(_roundId, Status.Closed);
  }

  function withdraw(uint256 _poolId, uint256 _amount) external onlyOwner {
    poolInfo[_poolId].lpToken.transferFrom(address(this), _msgSender(), _amount);
  }

  function buyTickets(
    uint256 _roundId,
    uint256 _poolId,
    uint24[] calldata _numbers,
    uint256 _stakes
  ) external whenNotPaused returns (uint256[] memory _ticketIds) {
    RoundInfo memory _round = roundInfo[_roundId];
    PoolInfo memory _pool = poolInfo[_poolId];
    PoolTypeInfo memory _poolType = poolTypeInfo[_pool.poolTypeId];

    require(_numbers.length > 0, "Not ticket numbers");
    require(_stakes > 0 && _stakes >= _pool.minStake, "Insufficient stakes");
    require(_round.status == Status.Open, "Round not open yet");
    require(_matchPool(_roundId, _poolId), "Not found pool");

    uint256 _lottoLength = _poolType.lottoLength;
    require(_lottoLength != 0 && _numbers.length.mod(_lottoLength) == 0, "Invalid ticket type");

    uint256 _numberOfTickets = _numbers.length.div(_lottoLength);
    require(_numberOfTickets <= MAX_TICKETS, "Batch mint too large");

    address owner = _msgSender();
    uint256 roundId = _roundId;
    uint256 poolId = _poolId;
    uint24[] calldata numbers = _numbers;
    uint256 stakes = _stakes;

    uint256 points = stakes;

    if (_pool.minStake > 0) {
      points = stakes.mul(1e18).div(_pool.minStake);
    }

    _pool.lpToken.transferFrom(owner, address(this), stakes.mul(_numberOfTickets));

    uint256[] memory newTicketIds = new uint256[](_numberOfTickets);

    for (uint256 i = 0; i < _numberOfTickets; i++) {
      // split range of numbers for this ticket
      uint256 start = i.mul(_lottoLength);
      uint256 end = (i.add(1)).mul(_lottoLength);

      // Store a new ticket
      TicketInfo memory ticket = TicketInfo({
        owner: owner,
        roundId: roundId,
        poolId: poolId,
        numbers: numbers[start:end],
        points: points,
        claimed: false
      });

      ticketInfo.push(ticket);
      uint256 id = ticketInfo.length - 1;
      newTicketIds[i] = id;
      ownerToTickets[owner][roundId].push(id);
    }
    roundInfo[roundId].totalTickets += _numberOfTickets;

    emit BuyTickets(owner, roundId, poolId, numbers, stakes);

    return newTicketIds;
  }

  function claimTickets(uint256 _roundId) external nonReentrant returns (bool) {
    RoundInfo memory _roundInfo = roundInfo[_roundId];
    address owner = _msgSender();

    require(_roundInfo.status == Status.Closed, "Round not closed yet");

    uint256[] memory ticketIds = ownerToTickets[owner][_roundId];

    require(ticketIds.length > 0, "Not ticket to claim");

    for (uint256 i = 0; i < ticketIds.length; i++) {
      TicketInfo storage info = ticketInfo[ticketIds[i]];

      require(info.claimed == false, "Ticket already claimed");
      require(info.roundId == _roundId, "Ticket not for this round");

      _rewardPrizeForMatching(ticketIds[i], _roundId);
      info.claimed = true;
    }

    emit ClaimTickets(owner, _roundId, ticketIds);

    return true;
  }

  function _rewardPrizeForMatching(uint256 _ticketId, uint256 _roundId) private {
    TicketInfo memory _ticketInfo = ticketInfo[_ticketId];
    PoolInfo memory _poolInfo = poolInfo[_ticketInfo.poolId];
    PoolTypeInfo memory _poolType = poolTypeInfo[_poolInfo.poolTypeId];

    uint24[] memory _winningNumbers = roundInfo[_roundId].winningNumbers;
    uint24[] memory _userNumbers = _ticketInfo.numbers;

    uint8 start = _poolType.startAt;
    uint8 end = _poolType.endAt;

    uint8 _matchedCounter = 0;

    uint24 _x = uint24(10**_poolType.suffixLength);

    for (uint256 i = start; i < end; i++) {
      uint24 a = _winningNumbers[i].mod(_x);

      for (uint256 j = 0; j < _userNumbers.length; j++) {
        uint24 b = _userNumbers[j].mod(_x);

        if (a == b) {
          _matchedCounter = _matchedCounter.add(1);
          break;
        }
      }
    }

    uint8 multipler = _matchedCounter.div(_poolType.lottoLength);
    if (multipler > 0) {
      uint256 odds = _poolType.odds;
      address owner = _ticketInfo.owner;
      uint256 points = _ticketInfo.points;
      IERC20Metadata lpToken = _poolInfo.lpToken;

      uint8 decimals = lpToken.decimals();
      uint256 prize = points.mul(odds).mul(multipler).mul(10**decimals).div(1e18);

      if (prize > 0) {
        lpToken.safeTransfer(owner, prize);
      }
    }
  }

  function deposit(uint256 _poolId, uint256 _amount) external {
    poolInfo[_poolId].lpToken.transferFrom(_msgSender(), address(this), _amount);

    emit Deposit(_poolId, _amount);
  }

  function _matchPool(uint256 _roundId, uint256 _poolId) private view returns (bool) {
    RoundInfo memory target = roundInfo[_roundId];

    for (uint256 i = 0; i < target.poolIds.length; i++) {
      if (target.poolIds[i] == _poolId) return true;
    }

    return false;
  }
}

