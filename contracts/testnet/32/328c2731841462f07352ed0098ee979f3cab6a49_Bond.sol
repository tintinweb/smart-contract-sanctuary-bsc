    constructor() ERC1155("") {}

    function setURI(string memory newuri) public onlyOwner {
        _setURI(newuri);
    }

    function mint(address account, uint256 id, uint256 amount, bytes memory data) public {
        _mint(account, id, amount, data);
    }

    function mintBatch(address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data) public onlyOwner {
        _mintBatch(to, ids, amounts, data);
    }

    function _beforeTokenTransfer(address operator, address from, address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data) internal override(ERC1155, ERC1155Supply) {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }
}

contract CFGLocker is ERC1155Holder, ERC721Holder {

    struct BondInfo {
        uint256 unlockTime;
        address tokenAddress;
        uint256 tokenId; // NFT token ID   
        uint256 _amount;    
    }

    mapping(uint256 => BondInfo) public bonds; // Bond ID => Bond Info
    uint256 private currentId = 0;

    Bond public immutable bond;

    constructor() {
        bond = new Bond();
    }

    function _lock(address _to, address _token, uint256 _tokenId, uint256 _amount, uint256 _unlockTime) external {
        bond.mint(_to, currentId, _amount, "");
        bonds[currentId] = BondInfo(_unlockTime, _token, _tokenId, _amount);
        currentId = SafeMath.add(currentId, 1);
    }

    function _unlock(address _to, uint256 _id, uint256 _amount) external {
        bond.safeTransferFrom(_to, address(this), _id, _amount, "");
        bond.burn(address(this), _id, _amount);
    }

    function lockFT(address _token, uint256 _amount, uint256 _unlockTime) external {
        require(_amount > 0, "Error: Amount must be >0");
        IERC20(_token).transferFrom(msg.sender, address(this), _amount);
        this._lock(msg.sender, _token, 0, _amount, _unlockTime);
    }

    function unlockFT(uint256 _id, uint256 _amount) external {
        require(_amount > 0, "Error: Amount must be >0");
        BondInfo memory info = bonds[_id];
        require(block.timestamp >= info.unlockTime, "Error: Tokens not unlocked yet.");
        this._unlock(msg.sender, _id, _amount);
        IERC20(info.tokenAddress).transfer(msg.sender, _amount);
    }

    function lockNFT(address _token, uint256 _tokenId, uint256 _unlockTime) external {
        IERC721(_token).safeTransferFrom(msg.sender, address(this), _tokenId);
        this._lock(msg.sender, _token, _tokenId, 1, _unlockTime);
    }

    function unlockNFT(uint256 _id) external {
        BondInfo memory info = bonds[_id];
        require(block.timestamp >= info.unlockTime, "Error: Token not unlocked yet.");
        this._unlock(msg.sender, _id, 1);
        IERC721(info.tokenAddress).safeTransferFrom(address(this), msg.sender, info.tokenId);
    }

}