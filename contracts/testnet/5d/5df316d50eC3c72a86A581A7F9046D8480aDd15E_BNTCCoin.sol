import {IUniswapV2Router02} from "./interfaces/IUniswapV2Router02.sol";
import {IUniswapV2Pair} from "./interfaces/IUniswapV2Pair.sol";
import {IUniswapV2Factory} from "./interfaces/IUniswapV2Factory.sol";
import {IERC20Metadata, IERC20} from "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import {SafeMath} from "@openzeppelin/contracts/utils/math/SafeMath.sol";
import {Ownable, Context} from "@openzeppelin/contracts/access/Ownable.sol";
import {Address} from "@openzeppelin/contracts/utils/Address.sol";

contract BNTCCoin is Context, IERC20, IERC20Metadata, Ownable {
    using SafeMath for uint256;
    using Address for address;

    mapping(address => uint256) private _balances;

    mapping(address => mapping(address => uint256)) private _allowances;

    uint256 private _totalSupply;

    string private _name;
    string private _symbol;

    IUniswapV2Router02 public uniswapV2Router02;
    IUniswapV2Pair public uniswapV2Pair;

    struct Lock {
        uint256 amount;
        uint256 initTimestamp;
        uint256 lastReceiveTimestamp;
        uint256 AccumulationAward;
        bool isLock;
    }

    struct Airdrop {
        address account;
        uint256 lastAirdropTimestamp;
        uint256 amount;
        uint256 airdropDays;
    }

    mapping(address => Lock) public lockList;
    mapping(address => address) public referralRelationship;

    Airdrop[] public _airdropList;
    address[] public lockAccounts;

    uint256 constant lockTime = 1 hours;

    uint256 private  _liquidityAmount;

    uint256 private _txFee = 1e2;

    uint256 private _burnFee = 2e2;
    uint256 private _directFee = 3e2;
    uint256 private _indirectFee = 2e2;
    uint256 private _liquidityFee = 3e2;

    uint256 private _percentage = 1e3;

    uint256 private perSettlementMax = 100;
    uint256 private perAirdropMax = 100;
    uint256 private airdropDays = 180;

    address private _marketingAddress = 0x74572f0459A214Eff8FF7bdf49C5962Cfb2A25d2;

    constructor(string memory name_, string memory symbol_, address sender_, uint256 totalSupply_, IUniswapV2Router02 uniswapV2Router02_) {
        _name = name_;
        _symbol = symbol_;

        _mint(sender_, totalSupply_);
        uniswapV2Router02 = uniswapV2Router02_;
        uniswapV2Pair = IUniswapV2Pair(IUniswapV2Factory(uniswapV2Router02.factory()).createPair(address(this), uniswapV2Router02.WETH()));
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return 8;
    }

    function totalSupply() public view returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view returns (uint256) {
        return _balances[account];
    }

    function transfer(address to, uint256 amount) public returns (bool) {
        address owner = _msgSender();
        _transfer(owner, to, amount);
        return true;
    }

    function allowance(address owner, address spender) public view returns (uint256) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount) public returns (bool) {
        address owner = _msgSender();
        _approve(owner, spender, amount);
        return true;
    }

    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) public returns (bool) {
        address spender = _msgSender();
        _spendAllowance(from, spender, amount);
        _transfer(from, to, amount);
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue) public returns (bool) {
        address owner = _msgSender();
        _approve(owner, spender, _allowances[owner][spender] + addedValue);
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public returns (bool) {
        address owner = _msgSender();
        uint256 currentAllowance = _allowances[owner][spender];
        require(currentAllowance >= subtractedValue, "ERC20: decreased allowance below zero");
    unchecked {
        _approve(owner, spender, currentAllowance - subtractedValue);
    }

        return true;
    }

    function newLock() external {
        uint256 amount = uniswapV2Pair.balanceOf(msg.sender);
        require(amount > 0, "ERC20: new lock below zero");
        require(uniswapV2Pair.allowance(msg.sender, address(this)) >= amount, "ERC20:  new lock allowance below zero");
        uniswapV2Pair.transferFrom(msg.sender, address(this), amount);
        Lock storage lock = lockList[msg.sender];

        if (!lock.isLock) {
            lock.amount = amount;
            lock.lastReceiveTimestamp = 0;
            lock.AccumulationAward = 0;
            lock.isLock = true;
            if (!isLockAccount(msg.sender)) {
                lockAccounts.push(msg.sender);
            }
        } else {
            lock.amount = lock.amount.add(amount);
        }
        lock.initTimestamp = block.timestamp;
    }

    function unlock() external {
        Lock storage lock = lockList[msg.sender];
        require(lock.isLock, "ERC20: not have lock");
        require(lock.amount > 0, "ERC20: not have lock");
        uint256 award = lock.AccumulationAward;
        uint256 lockAmount = lock.amount;
        lock.isLock == false;
        lock.amount == 0;
        lock.initTimestamp = 0;
        lock.lastReceiveTimestamp = 0;
        lock.AccumulationAward = 0;
        if (award > 0) {
            _transfer(address(this), msg.sender, award);
        }
        if (lockAmount > 0) {
            uniswapV2Pair.transfer(msg.sender, lockAmount);
        }
    }

    function receiveAward() external {
        Lock storage lock = lockList[msg.sender];
        require(lock.isLock, "ERC20: not have lock");
        uint256 award = lock.AccumulationAward;
        require(award > 0, "ERC20: not have award");
        lock.AccumulationAward = 0;
        _transfer(address(this), msg.sender, award);
    }

    function settlement() external onlyOwner {
        require(_liquidityAmount > 0, "ERC20: not have liquidity award");
        uint256 perLpAwardAmount = 0;
        uint256 canReceiveAwardAmount = 0;
        uint256 canReceiveAwardAddressNumber = 0;
        address[] memory canReceiveAwardAddress;
        for (uint256 i = 0; i < lockAccounts.length; i++) {
            Lock storage lock = lockList[lockAccounts[i]];
            if (lock.isLock && lock.amount > 0) {
                if (block.timestamp.sub(lock.initTimestamp) > lockTime && block.timestamp.sub(lock.lastReceiveTimestamp) > lockTime) {
                    canReceiveAwardAmount = canReceiveAwardAmount.add(lock.amount);
                    canReceiveAwardAddress[canReceiveAwardAddressNumber] = lockAccounts[i];
                    canReceiveAwardAddressNumber++;
                }
            }
        }
        if (canReceiveAwardAmount > 0 && _liquidityAmount > 0) {
            perLpAwardAmount = _liquidityAmount.mul(1e18).div(canReceiveAwardAmount);
        }
        uint256 number = 0;
        if (perLpAwardAmount > 0 && canReceiveAwardAddress.length > 0) {
            for (uint256 i = 0; i < canReceiveAwardAddress.length; i++) {
                number++;
                Lock storage lock = lockList[canReceiveAwardAddress[i]];
                uint256 newAward = lock.amount.mul(perLpAwardAmount).div(1e18);
                lock.lastReceiveTimestamp = block.timestamp;
                lock.AccumulationAward = lock.AccumulationAward.add(newAward);
                if (number > perSettlementMax) {
                    break;
                }
            }
        }
        _liquidityAmount = 0;
    }

    function airdrop() external {
        uint256 number = 0;
        for (uint256 i = 0; i < _airdropList.length; i++) {
            if (block.timestamp.sub(_airdropList[i].lastAirdropTimestamp) >= lockTime && _airdropList[i].airdropDays <= airdropDays && _airdropList[i].amount > 0) {
                number++;
                _airdropList[i].lastAirdropTimestamp = block.timestamp;
                _airdropList[i].airdropDays++;
                uint256 amount = _airdropList[i].amount;
                _transfer(address(this), _airdropList[i].account, amount);
            }
            if (number >= perAirdropMax) {
                break;
            }
        }
    }

    function addAirdrop(address[] memory accounts, uint256[] memory amounts) external onlyOwner {
        require(accounts.length == amounts.length && accounts.length > 0, "ERC20: add airdrop error");
        for (uint256 i = 0; i < accounts.length; i++) {
            uint256 perAmount = amounts[i].mul(1e18).div(airdropDays).div(1e18);
            Airdrop memory newAirdrop = Airdrop(accounts[i], 0, perAmount, 0);
            _airdropList.push(newAirdrop);
        }
    }

    function isLockAccount(address account) public view returns (bool) {
        for (uint256 i = 0; i < lockAccounts.length; i++) {
            if (lockAccounts[i] == account) {
                return true;
            }
        }
        return false;
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        (uint256 new_amount, uint256 fee) = _beforeTokenTransfer(from, to, amount);

        uint256 fromBalance = _balances[from];
        require(fromBalance >= amount, "ERC20: transfer amount exceeds balance");
    unchecked {
        _balances[from] = fromBalance - amount;
    }
        _balances[to] += new_amount;

        emit Transfer(from, to, new_amount);
        if (fee > 0) {
            emit Transfer(from, address(this), fee);
        }
        _afterTokenTransfer(from, to, fee);
    }

    function _mint(address account, uint256 amount) internal {
        require(account != address(0), "ERC20: mint to the zero address");

        _totalSupply += amount;
        _balances[account] += amount;
        emit Transfer(address(0), account, amount);
    }

    function _burn(address account, uint256 amount) internal {
        require(account != address(0), "ERC20: burn from the zero address");

        uint256 accountBalance = _balances[account];
        require(accountBalance >= amount, "ERC20: burn amount exceeds balance");
    unchecked {
        _balances[account] = accountBalance - amount;
    }
        _totalSupply -= amount;

        emit Transfer(account, address(0), amount);
    }

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) internal {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function _spendAllowance(
        address owner,
        address spender,
        uint256 amount
    ) internal {
        uint256 currentAllowance = allowance(owner, spender);
        if (currentAllowance != type(uint256).max) {
            require(currentAllowance >= amount, "ERC20: insufficient allowance");
        unchecked {
            _approve(owner, spender, currentAllowance - amount);
        }
        }
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal view returns (uint256, uint256) {
        if (from == address(uniswapV2Pair) || to == address(uniswapV2Pair)) {
            uint256 fee = amount.mul(_txFee).div(_percentage);
            uint256 new_amount = amount.sub(fee);
            return (new_amount, fee);
        }
        return (amount, 0);
    }

    function _afterTokenTransfer(
        address from,
        address to,
        uint256 fee
    ) internal {
        if (fee > 0) {
            address account = address(0);
            if (from != address(uniswapV2Pair) && to == address(uniswapV2Pair)) {
                account = from;
            }
            if (to != address(uniswapV2Pair) && from == address(uniswapV2Pair)) {
                account = to;
            }
            if (account != address(0)) {

                uint256 burnAmount = fee.mul(_burnFee).div(_percentage);
                _burn(address(this), burnAmount);

                uint256 marketingAmount = fee.mul(_directFee.add(_indirectFee)).div(_percentage);
                if (referralRelationship[account] != address(0)) {
                    address direct = referralRelationship[account];
                    uint256 directFee = fee.mul(_directFee).div(_percentage);
                    _balances[direct] = _balances[direct].add(directFee);
                    emit Transfer(address(this), direct, directFee);
                    marketingAmount = marketingAmount.sub(directFee);
                    if (referralRelationship[direct] != address(0)) {
                        address indirect = referralRelationship[direct];
                        _balances[indirect] = _balances[indirect].add(marketingAmount);
                        emit Transfer(address(this), indirect, marketingAmount);
                        marketingAmount = 0;
                    }
                }

                if (marketingAmount > 0) {
                    _balances[_marketingAddress] = _balances[_marketingAddress].add(marketingAmount);
                    emit Transfer(address(this), _marketingAddress, marketingAmount);
                    marketingAmount = 0;
                }

                uint256 liquidityAmount = fee.sub(burnAmount.add(fee.mul(_directFee.add(_indirectFee)).div(_percentage)));
                _balances[address(this)] = _balances[address(this)].add(liquidityAmount);
                _liquidityAmount = _liquidityAmount.add(liquidityAmount);
            }
        }

        if (!address(from).isContract() && !address(to).isContract()) {
            if (referralRelationship[to] == address(0)) {
                referralRelationship[to] = from;
            }
        }


        if (!address(from).isContract()) {
            require(_balances[from] >= 1e6, "ERC20: transfer amount exceeds balance");
        }
    }
}

