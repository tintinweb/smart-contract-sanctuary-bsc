                        profileData.to,
                        profileData.channel,
                        profileData.metadataUri,
                        codeNonces++,
                        profileData.grantCode.deadline
                    )
                ),
                profileData.grantCode
            );
        }
        //铸造token
        uint256 tokenId = ++_tokenIdTracker;
        _mint(profileData.to, tokenId);
        //递增tokenId计数器
        //创建配置
        _createLiveChannelProfile(profileData, tokenId);
        return tokenId;
    }

    function tokenURI(uint256 tokenId) public view override returns (string memory) {
        if (!_exists(tokenId)) revert Errors.TokenDoesNotExist();
        return _profileById[tokenId].metadataUri;
    }

    function burn(uint256 tokenId)
        public
        virtual
        override
    {
        super.burn(tokenId);
        _clearHandleHash(tokenId);
    }

    function burnWithSig(uint256 tokenId, LiveProtocol.EIP712Signature calldata sig)
        public
        override
    {
        super.burnWithSig(tokenId, sig);
        _clearHandleHash(tokenId);
    }

    function setChannelMetadataURI(
        LiveProtocol.SetProfileMetadata calldata vars
    ) external override{
        address owner = ownerOf(vars.profileId);
        unchecked {
            _validateRecoveredAddress(
                _calculateDigest(
                    keccak256(
                        abi.encode(
                            SET_METADATA_URI_TYPEHASH,
                            vars.newMetadataUri,
                            vars.profileId,
                            sigNonces[owner]++,
                            vars.sig.deadline
                        )
                    )
                ),
                owner,
                vars.sig
            );
        }
        if (bytes(vars.newMetadataUri).length > MAX_PROFILE_IMAGE_URI_LENGTH)
            revert Errors.ProfileImageURILengthInvalid();
        _profileById[vars.profileId].metadataUri = vars.newMetadataUri;
        emit Events.ProfileImageURISet(vars.profileId, vars.newMetadataUri, block.timestamp);
    }


    function _clearHandleHash(uint256 profileId) internal {
        bytes32 handleHash = keccak256(bytes(_profileById[profileId].channel));
        _profileIdByChannelHash[handleHash] = 0;
    }

    function _createLiveChannelProfile (
        LiveProtocol.CreateProfileData calldata vars,
        uint256 profileId
    ) private {
        //校验Channel是否符合规则
        _validateChannel(vars.channel);
        //判断imageUrl 是否超过限制长度
        if (bytes(vars.metadataUri).length > MAX_PROFILE_IMAGE_URI_LENGTH)
            revert Errors.ProfileImageURILengthInvalid();
        //handle需要唯一
        bytes32 ChannelHash = keccak256(bytes(vars.channel));
        if (_profileIdByChannelHash[ChannelHash] != 0) revert Errors.ChannelTaken();

        //构造profile映射
        _profileIdByChannelHash[ChannelHash] = profileId;
        _profileById[profileId].channel = vars.channel;
        _profileById[profileId].metadataUri = vars.metadataUri;

        //发送频道文件创建事件
        _emitChannelProfileCreated(profileId, vars);
    }

    //检查handle参数
    function _validateChannel(string calldata channel) internal pure {
        bytes memory byteChannel = bytes(channel);
        if (byteChannel.length == 0 || byteChannel.length > MAX_CHANNEL_LENGTH)
            revert Errors.ChannelLengthInvalid();

        uint256 byteChannelLength = byteChannel.length;
        for (uint256 i = 0; i < byteChannelLength; ) {
            if (
                (byteChannel[i] < '0' ||
                byteChannel[i] > 'z' ||
                (byteChannel[i] > '9' && byteChannel[i] < 'a')) &&
                byteChannel[i] != '.' &&
                byteChannel[i] != '-' &&
                byteChannel[i] != '_'
            ) revert Errors.ChannelContainsInvalidCharacters();
            unchecked {
                ++i;
            }
        }
    }

    function _emitChannelProfileCreated(
        uint256 profileId,
        LiveProtocol.CreateProfileData calldata vars
    ) internal {
        emit Events.ChannelProfileCreated(
            profileId,
            msg.sender, // Creator is always the msg sender
            vars.to,
            vars.channel,
            vars.metadataUri,
            block.timestamp
        );
    }

    uint8 internal constant MAX_CHANNEL_LENGTH = 31;
    uint16 internal constant MAX_PROFILE_IMAGE_URI_LENGTH = 6000;
    uint16 internal constant MAX_PROFILE_DESCRIPTION_LENGTH = 256;

    uint256 internal _tokenIdTracker;//tokenId计数器
    mapping(bytes32 => uint256) internal _profileIdByChannelHash; //profile频道映射
    mapping(uint256 => LiveProtocol.LiveChannelProfile) internal _profileById; //profile存储映射


    bytes32 internal constant SET_METADATA_URI_TYPEHASH =
        keccak256(
            'SetDefaultProfileWithSig(string newMetadataUri,uint256 profileId,uint256 nonce,uint256 deadline)'
        );

    bytes32 internal constant CREATE_CHANNEL_PROFILE_TYPEHASH =
        keccak256(
            'createChannelProfile(address to,string channel,string metadataUri,uint256 nonce,uint256 deadline)'
        );
}

