        //only governance can upgrade contract
        if(msg.sender == address(0) || msg.sender != SYSTEM_ADDRESS) {
            revert Errors.NotGovernance();
        }
    }

    function getRevision() internal pure virtual override returns (uint256) {
        return REVISION;
    }
