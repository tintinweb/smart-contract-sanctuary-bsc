pragma solidity ^0.8.13;

contract Lottery {
    // lottery
    address public owner;
    address payable[] public players;
    uint public lotteryId;
    uint public ticketPrice;
    mapping (uint => address payable) public lotteryHistory;

    //swapping
    IUniswapV2Router02 public pancakeswapV2Router; // Formerly immutable
    address public _routerAddress = 0xD99D1c33F9fC3444f8101754aBC46c52416550D1; 
    address public ticketToken = 0x78867BbEeF44f2326bF8DDd1941a4439382EF2A7;
    address public marketingWallet = 0xa40F28B04E2387E3d7197Dd4A9A2558AF297a042;


    constructor() {
        owner = msg.sender;
        lotteryId = 1;
        ticketPrice = 1000000000000000;
        pancakeswapV2Router = IUniswapV2Router02(_routerAddress);
    }
    // swapping
    function setPancakeRouter(address newRouterAddress) public onlyowner {
        _routerAddress = newRouterAddress;
        pancakeswapV2Router = IUniswapV2Router02(_routerAddress);
    }

    function setTicketToken(address newTicketToken) public onlyowner {
        ticketToken = newTicketToken;
    }

    function setMarketingWallet(address newMarketingWallet) public onlyowner {
        marketingWallet = newMarketingWallet;
    }

    // lottery
    function getWinnerByLottery(uint lottery) public view returns (address payable) {
        return lotteryHistory[lottery];
    }

    function getBalance() public view returns (uint) {
        return IERC20(ticketToken).balanceOf(address(this));
    }

    function setTicketPrice(uint newTicketPrice) public onlyowner {
        ticketPrice = newTicketPrice;
    }

    function getPlayers() public view returns (address payable[] memory) {
        return players;
    }

    function enter() public payable {
        require(msg.value == ticketPrice, 'Lottery: WRONG_TICKET_PRICE');
        // TODO: swap to stratosphere
        address[] memory path = new address[](2);
        path[0] = pancakeswapV2Router.WETH();
        path[1] = address(ticketToken);
				
        pancakeswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: msg.value}(
            0,
            path,
            address(this),
            block.timestamp
        );

        // address of player entering lottery
        players.push(payable(msg.sender));
    }

    function getRandomNumber() public view returns (uint) {
        return uint(keccak256(abi.encodePacked(owner, block.timestamp)));
    }

    function pickWinner() public onlyowner {
        uint index = getRandomNumber() % players.length;
        uint256 balance = IERC20(ticketToken).balanceOf(address(this));
        
        uint256 winnerAmount = balance * 75 / 100;

        IERC20(ticketToken).transfer(players[index], winnerAmount);

        balance = IERC20(ticketToken).balanceOf(address(this));
        IERC20(ticketToken).transfer(marketingWallet, balance);

        lotteryHistory[lotteryId] = players[index];
        lotteryId++;
        

        // reset the state of the contract
        players = new address payable[](0);
    }

    modifier onlyowner() {
      require(msg.sender == owner);
      _;
    }
}