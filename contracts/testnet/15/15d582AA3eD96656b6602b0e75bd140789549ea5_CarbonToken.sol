    constructor(string memory name_, string memory symbol_) {
        _name = name_;
        _symbol = symbol_;
        _decimals = 18;
    }

    /**
     * @dev Modifier to make a function callable only when the
     * `caller` is owner or controller address only
     */
    modifier onlyOwnerAndController() {
        require(
            controller == _msgSender() || owner() == _msgSender(),
            "caller is not the owner or controller"
        );
        _;
    }

    /**
     * @notice Get owner's token address.
     * @return address: the address of the owner.
     * @dev  owner() function is from Ownable contract.
     */
    function getOwner() external view override returns (address) {
        return owner();
    }

    /**
     * @notice Get token name.
     * @return string: name of token.
     */
    function name() public view override returns (string memory) {
        return _name;
    }

    /**
     * @notice Get token decimals.
     * @return string: decimal of token.
     */
    function decimals() public view override returns (uint8) {
        return _decimals;
    }

    /**
     * @notice Get token symbol.
     * @return string: symbol of token.
     */
    function symbol() public view override returns (string memory) {
        return _symbol;
    }

    /**
     * @notice Get total supply.
     * @return uint256: total supply.
     */
    function totalSupply() public view override returns (uint256) {
        return _totalSupply;
    }

    /**
     * @notice Get total tokens of `caller`
     * @return uint256: total tokens.
     */
    function balanceOf(address account) public view override returns (uint256) {
        return _balances[account];
    }

    /**
     * @notice Get the allowance of `spender` from `owner`.
     */
    function allowance(address owner, address spender)
        public
        view
        override
        returns (uint256)
    {
        return _allowances[owner][spender];
    }

    /**
     * @notice Moves tokens `amount` from `caller` to `recipient`.
     * @param recipient: the address that receives the `amount` tokens.
     * @param amount: amount of tokens to assign to `recipient`.
     * @return bool: `true` value after the operation succeeded.
     * @dev the `caller` must have allowance for the `sender` of at least `amount`.
     */
    function transfer(address recipient, uint256 amount)
        public
        override
        returns (bool)
    {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    /**
     * @notice Sets `amount` as the allowance of `spender` over the `caller`s tokens.
     * @param spender: the address that will be allowed to spend the `amount` tokens.
     * @param amount: amount of tokens that `spender` is allowed to spend.
     * @return bool: `true` value after the operation succeeded.
     * @dev `spender` cannot be the zero address.
     */
    function approve(address spender, uint256 amount)
        public
        override
        returns (bool)
    {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    /**
     * @notice Moves tokens `amount` from `sender` to `recipient`.
     * @param sender: the address that allowed `caller` to spend `sender` tokens.
     * @param recipient: the address that receives the `amount` tokens.
     * @param amount: amount of tokens to assign to `recipient`.
     * @return bool: `true` value after the operation succeeded.
     * @dev the `caller` must have allowance for the `sender` of at least `amount`.
     */
    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(
            sender,
            _msgSender(),
            _allowances[sender][_msgSender()].sub(
                amount,
                "BEP20: transfer amount exceeds allowance"
            )
        );
        return true;
    }

    /**
     * @notice Atomically increases the allowance granted to `spender` by the caller.
     * @param spender: the address that will be allowed to spend the `caller` tokens.
     * @param addedValue: amount of tokens to increase allowance.
     * @return bool: `true` value after the operation succeeded.
     * @dev `spender` cannot be the zero address.
     */
    function increaseAllowance(address spender, uint256 addedValue)
        public
        returns (bool)
    {
        _approve(
            _msgSender(),
            spender,
            _allowances[_msgSender()][spender].add(addedValue)
        );
        return true;
    }

    /**
     * @notice Atomically decreases the allowance granted to `spender` by the caller.
     * @param spender: the address that will be allowed to spend the `caller` tokens.
     * @param subtractedValue: amount of tokens to decrease allowance.
     * @return bool: `true` value after the operation succeeded.
     * @dev `spender` must have allowance for the caller of at least `subtractedValue`.
