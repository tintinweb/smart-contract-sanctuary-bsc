import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./IBEP20Controller.sol";

contract BEP20Controller is IBEP20Controller, Context, Pausable, Ownable {
    using SafeMath for uint256;

    address public controller;
    mapping(address => uint256) private _balances;
    mapping(address => mapping(address => uint256)) private _allowances;

    uint256 private _totalSupply;
    string private _name;
    string private _symbol;
    uint8 private _decimals;

    /**
     * @notice Sets the values for {name} and {symbol},
     * initializes {decimals} with a default value of 18.
     * @param name_: the name of the token.
     * @param symbol_: the symbol of the token.
     * @dev  All three of these values are immutable,
     * they can only be set once during construction.
