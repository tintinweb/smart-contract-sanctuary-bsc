    function decreaseAllowance(address spender, uint256 subtractedValue)
        public
        returns (bool)
    {
        _approve(
            _msgSender(),
            spender,
            _allowances[_msgSender()][spender].sub(
                subtractedValue,
                "BEP20: decreased allowance below zero"
            )
        );
        return true;
    }

    /**
     * @notice Set new controller contract address.
     * @param _controller: the address that can control the tokens.
     * @dev Callable by owner or controller contract only.
     */
    function setControllerAddress(address _controller)
        external
        override
        onlyOwnerAndController
