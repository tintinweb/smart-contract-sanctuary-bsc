pragma solidity ^0.8.0;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import '@openzeppelin/contracts/utils/structs/EnumerableSet.sol';
import "../Common/SafeManager.sol";
import "../NFT/IGobbling.sol";

contract GblLauncher is SafeManager, ReentrancyGuard {

    using EnumerableSet for EnumerableSet.AddressSet;
    using EnumerableSet for EnumerableSet.Bytes32Set;
    // rarity max
    uint64 constant public rarityMax = 4;
    // gbl
    IGobbling public gbl;

    struct GblInfo {
        bytes32 name;
        uint64 pid;
        uint64 level;
        uint64 rarity;
        string uri;
    }
    // gbl names
    EnumerableSet.Bytes32Set gblNames;
    // gbl name => gbl info
    mapping(bytes32 => GblInfo) public gblInfos;

    struct LaunchInfo {
        bytes32 gblName;
        uint64 limit;
        uint64 mint;
        bool launching;
    }
    // launchpad minters
    EnumerableSet.AddressSet launchers;
    // launchpad minter => launch gbl names
    mapping(address => EnumerableSet.Bytes32Set) private launchNames;
    // launchpad minter => launch gbl name => launch info
    mapping(address =>  mapping(bytes32 => LaunchInfo)) public launchInfos;

    // event
    event LaunchMint(address launcher, address to, bytes32 gblName);

    /**
     * @dev set owners,required
     */
    constructor(IGobbling _gbl, address _owner) SafeManager("GblLauncher", "v1", _owner) {
        require(address(_gbl) != address(0), "invalid address");
        require(_owner != address(0), "invalid address");
        gbl = _gbl;
    }

    function kill() public onlyOwner {
        payable(owner()).transfer(address(this).balance);
        selfdestruct(payable(owner()));
    }

    receive() external payable {}

    // Gobbling Info Add
    function gblInfoAdd(GblInfo[] memory infos) public onlyRole(CEO) returns (bool) {
        require(infos.length > 0, "invalid infos");
        for (uint idx = 0; idx < infos.length; idx ++) {
            require(infos[idx].rarity <= rarityMax, "rarity out of range");
            gblInfos[infos[idx].name] = infos[idx];
            if (!gblNames.contains(infos[idx].name)) {
                gblNames.add(infos[idx].name);
            }
        }
        return true;
    }

    // Gobbling Info Removed
    function gblInfoRemove(bytes32 name) public onlyRole(CEO) returns (bool) {
        require(gblNames.contains(name) && gblInfos[name].pid > 0, "gbl info not found");
        gblNames.remove(name);
        delete gblInfos[name];
        return true;
    }

    function getGblInfos() public view returns (GblInfo[] memory) {
        GblInfo[] memory infos = new GblInfo[](gblNames.length());
        for (uint i = 0; i < gblNames.length(); i++) {
            infos[i] = gblInfos[gblNames.at(i)];
        }
        return infos;
    }

    // Launcher Add
    function launcherAdd(address launcher, bytes32[] memory names, uint64[] memory limits) public onlyRole(CEO) returns (bool) {
        require(launcher != address(0), "invalid address");
        require(!launchers.contains(launcher), "launcher already exist");
        require(names.length > 0 && names.length == limits.length, "invalid infos");
        // add
        launchers.add(launcher);
        for (uint idx = 0; idx < names.length; idx ++) {
            require(limits[idx] > 0, "invalid limit value");
            require(gblNames.contains(names[idx]), "gbl name not found");
            require(!launchNames[launcher].contains(names[idx]), "gbl name repeated");
            launchNames[launcher].add(names[idx]);
            launchInfos[launcher][names[idx]] = LaunchInfo({gblName:names[idx], limit:limits[idx], mint:0, launching:true});
        }
        return true;
    }

    // Launcher Removed
    function launcherRemove(address launcher) public onlyRole(CEO) returns (bool) {
        require(launchers.contains(launcher), "launcher not found");
        launchers.remove(launcher);
        return true;
    }

    // Launch Info Update
    function launchInfoUpdate(address launcher, bytes32[] memory names, uint64[] memory limits) public onlyRole(CEO) returns (bool) {
        require(launchers.contains(launcher), "launcher not found");
        require(names.length > 0 && names.length == limits.length, "invalid infos");
        for (uint idx = 0; idx < names.length; idx ++) {
            require(launchNames[launcher].contains(names[idx]), "gbl name not found in launching");
            launchInfos[launcher][names[idx]].limit = limits[idx];
            if (launchInfos[launcher][names[idx]].mint >= launchInfos[launcher][names[idx]].limit) {
                launchInfos[launcher][names[idx]].launching = false;
            }
        }
        return true;
    }

    function getLaunchInfos(address launcher) public view returns (LaunchInfo[] memory) {
        LaunchInfo[] memory infos = new LaunchInfo[](launchNames[launcher].length());
        for (uint i = 0; i < launchNames[launcher].length(); i++) {
            infos[i] = launchInfos[launcher][launchNames[launcher].at(i)];
        }
        return infos;
    }

    function mintTo(address to, bytes32 name) public whenNotPaused nonReentrant returns (uint256) {
        require(to != address(0), "invalid address");
        require(gblNames.contains(name), "nft name not found");
        require(launchers.contains(msg.sender), "no permission");
        require(launchInfos[msg.sender][name].launching, "launching paused");
        require(launchInfos[msg.sender][name].mint < launchInfos[msg.sender][name].limit, "launch finished");
        // update
        launchInfos[msg.sender][name].mint += 1;
        // mint
        IGobbling.Gobbling memory info = IGobbling.Gobbling({pid : gblInfos[name].pid, level : gblInfos[name].level, rarity : gblInfos[name].rarity, uri : gblInfos[name].uri});
        uint256 tokenId = gbl.mint(to, info);
        emit LaunchMint(msg.sender, to, name);
        return tokenId;
    }

    function mintToBatch(address to, bytes32[] memory names) public whenNotPaused nonReentrant returns (uint256[] memory) {
        require(to != address(0), "invalid address");
        require(names.length > 0, "invalid nft names");
        require(launchers.contains(msg.sender), "no permission");
        // check
        for (uint idx = 0; idx < names.length; idx ++) {
            require(gblNames.contains(names[idx]), "nft name not found");
            require(launchInfos[msg.sender][names[idx]].launching, "launching paused");
            require(launchInfos[msg.sender][names[idx]].mint < launchInfos[msg.sender][names[idx]].limit, "launch finished");
            launchInfos[msg.sender][names[idx]].mint += 1;
        }
        // mint
        IGobbling.Gobbling[] memory infos = new IGobbling.Gobbling[](names.length);
        for (uint idx = 0; idx < names.length; idx ++) {
            infos[idx] = IGobbling.Gobbling({pid : gblInfos[names[idx]].pid, level : gblInfos[names[idx]].level, rarity : gblInfos[names[idx]].rarity, uri : gblInfos[names[idx]].uri});
            emit LaunchMint(msg.sender, to, names[idx]);
        }
        return gbl.mintBatch(to, infos);
    }
}

