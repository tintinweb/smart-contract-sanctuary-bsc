import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import '@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol';

contract SafeManager is EIP712, Ownable, Pausable {

    using SafeERC20 for IERC20;

    bytes32 public constant CEO = keccak256("CEO");
    bytes32 public constant CFO = keccak256("CFO");
    bytes32 public constant COO = keccak256("COO");
    bytes32 public constant SIGNER = keccak256("SIGNER");
    bytes32 public constant RECEIPT = keccak256("RECEIPT");

    // RoleMembers
    mapping(bytes32 => address[]) public roleMembers;
    mapping(bytes32 => mapping(address => bool)) public isRoleMember;

    // Events
    event RoleMemberAddition(bytes32 indexed role, address indexed member, address[] approvedOwners);
    event RoleMemberRemoval(bytes32 indexed role, address indexed member, address[] approvedOwners);
    event RoleMemberReplace(bytes32 indexed role, address indexed oldMember, address indexed newMember, address[] approvedOwners);

    constructor(string memory _name, string memory _version, address _owner) EIP712(_name, _version) {
        require(_owner != address(0), "invalid owner address");
        _transferOwnership(_owner);
    }

    modifier onlyRole(bytes32 role) {
        require(isRoleMember[role][_msgSender()], "no permission");
        _;
    }

    modifier onlyRoleMember(bytes32 role, address member) {
        require(isRoleMember[role][member], string(
                abi.encodePacked(
                    "account ",
                    Strings.toHexString(uint160(member), 20),
                    " is missing role ",
                    Strings.toHexString(uint256(role), 32)
                )
            ));
        _;
    }

    function hasRole(bytes32 role, address member) public view returns (bool) {
        return isRoleMember[role][member];
    }

    function getRoleMembers(bytes32 role) public view returns (address[] memory) {
        return roleMembers[role];
    }

    function getRoleMemberId(bytes32 role, address member) public view returns (uint) {
        require(isRoleMember[role][member], "can not check for non exist member");
        for (uint index; index < roleMembers[role].length; index ++) {
            if (member == roleMembers[role][index]) {
                return index;
            }
        }
        return 0;
    }

    /// @dev Allows to add a new owner. Transaction has to be sent by wallet.
    /// @param role.
    /// @param newMember Address of new member.
    /// @param approvedOwners Address of approved owners.
    function addRoleMember(bytes32 role, address newMember, address[] memory approvedOwners) external onlyOwner {
        require(!isRoleMember[role][newMember], "the address is already owner");
        require(newMember != address(0), "the address can not be zero");

        isRoleMember[role][newMember] = true;
        roleMembers[role].push(newMember);
        emit RoleMemberAddition(role, newMember, approvedOwners);
    }

    /// @dev Allows to remove an owner. Transaction has to be sent by wallet.
    /// @param role.
    /// @param oldMember Address of removed member.
    /// @param approvedOwners Address of approved owners.
    function removeRoleMember(bytes32 role, address oldMember, address[] memory approvedOwners) external onlyOwner {
        require(isRoleMember[role][oldMember], "old owner already removed");
        isRoleMember[role][oldMember] = false;
        for (uint i = 0; i < roleMembers[role].length; i++) {
            if (roleMembers[role][i] == oldMember) {
                roleMembers[role][i] = roleMembers[role][roleMembers[role].length - 1];
                roleMembers[role].pop();
                break;
            }
        }
        emit RoleMemberRemoval(role, oldMember, approvedOwners);
    }

    /// @dev Allows to replace an owner with a new owner. Transaction has to be sent by wallet.
    /// @param role.
    /// @param oldMember Address of member to be replaced.
    /// @param newMember Address of new member.
    /// @param approvedOwners Address of approved owners.
    function replaceRoleMember(bytes32 role, address oldMember, address newMember, address[] memory approvedOwners) external onlyOwner {
        require(isRoleMember[role][oldMember], "old owner already removed");
        require(!isRoleMember[role][newMember], "new owner already exist");
        require(newMember != address(0), "the address can not be zero");
        for (uint i = 0; i < roleMembers[role].length; i++) {
            if (roleMembers[role][i] == oldMember) {
                roleMembers[role][i] = newMember;
                break;
