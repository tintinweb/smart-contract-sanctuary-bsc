/**
 * @title StratifiedBlox - Oddblox Minter
 * @notice The minter allows minting of Oddblox NFTs. 
 * The minting fees are split 50/50 between the two provided team wallets.
 * For potential future marketing campaigns, the minter has functions to add discounts 
 * based on ownership of specific NFT collections.
 * The minter also allows to specify addresses which can receive a commission on mint when refering users to it.
 */
contract StratifiedBlox is Commissions, Discounts, ReentrancyGuard {
	using Counters for Counters.Counter;
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    Counters.Counter internal tokenIds;

    IOddblox public oddblox;

    uint256 public price = 0.25 ether;
    uint256 public maxMintPerTx = 10;

    bool public mintActive = false;

    address public team1;
    address public team2;

    mapping(uint256 => bool) public mintedOutOfOrder;


    event StateChanged(bool active);
    event PriceChanged(uint256 price);


    constructor(address _oddblox, address _team1, address _team2) {
        oddblox = IOddblox(_oddblox);
        team1 = _team1;
        team2 = _team2;
        require(team1 != address(0) && team2 != address(0), "Invalid team wallets");
    }

    /**
     * @notice Mint `_amount` Oddblox for `_to`.
     * @param _amount: amount of Oddblox to mint
     * @param _to: user to mint Oddblox for
     * @param _discountId: discountId from {findBestDiscount}, 0 for no discount
     * @param _tokenId: tokenId from {findBestDiscount}, 0 for no discount
     * @param _referer: referer to receive commission for this mint, referers need to be added by owner, zero address for no commission
     */
    function mint(uint16 _amount, address _to, uint16 _discountId, uint16 _tokenId, address _referer) external nonReentrant payable {
        require(mintActive, "Sale not started yet.");
        require((oddblox.totalSupply() + _amount) < oddblox.maxSupply(), "Not enough tokens available.");
        require(_amount > 0 && _amount <= maxMintPerTx, "Invalid amount");

        uint256 cost = price.mul(_amount);

        if (_discountId > 0) {
            uint256 value = uint256(verifyDiscount(_to, _discountId, _tokenId));
            uint256 _discountBase = uint256(discountBase);
            cost = cost * (_discountBase - value) / _discountBase;
        }

        require(msg.value == cost, "Value sent does not match price.");

        if (_referer != address(0)) {
            uint256 commission = uint256(commissions[_referer]);
            require(commission > 0, "Not eligable for commission");
            payable(_referer).transfer(msg.value * commission / uint256(commissionBase));
        }

        oddblox.mint(_to, _nextTokenIds(_amount));
    }

    /**
     * @notice Reserve specified `tokenIds` by minting to `_to`. Only callable by owner.
     */
    function reserveSpecial(address _to, uint256[] memory _tokenIds) external onlyOwner {
        require(!mintActive, "Mint already started.");
        require((oddblox.totalSupply() + _tokenIds.length) < oddblox.maxSupply(), "Not enough tokens available.");

        uint256 tokenId;
        for (uint256 i = 0; i < _tokenIds.length; ++i) {
            tokenId = _tokenIds[i];
            require(tokenId > oddblox.totalSupply() && tokenId <= oddblox.maxSupply() && !mintedOutOfOrder[tokenId], "Invalid tokenId");
            mintedOutOfOrder[tokenId] = true;
        }

        oddblox.mint(_to, _tokenIds);
    }

    /**
     * @notice Reserve `amount` nfts by minting to `_to`. Only callable by owner.
     */
    function reserve(address _to, uint256 _amount) external onlyOwner {
        require(!mintActive, "Mint already started.");
        require((oddblox.totalSupply() + _amount) < oddblox.maxSupply(), "Not enough tokens available.");
        
        oddblox.mint(_to, _nextTokenIds(_amount));
    }

    /**
     * @notice Change price to `price` in WEI.
     */
    function setPrice(uint256 _price) external onlyOwner {
        require(_price > 0, "Invalid price");
        require(_price != price, "Same price");
        price = _price;
        emit PriceChanged(price);
    }

    /**
     * @notice Start minting. Only callable by owner.
     */
    function startMint() external onlyOwner {
        mintActive = true;
        emit StateChanged(mintActive);
    }

    /**
     * @notice Pause minting. Only callable by owner.
     */
    function pauseMint() external onlyOwner {
        mintActive = false;
        emit StateChanged(mintActive);
    }

    /**
     * @notice Withdraw BNB of held in contract to both team wallets, split 50/50. Only callable by owner, team1 or team2.
     */
    function withdraw() external {
        require(msg.sender == team1 || msg.sender == team2 || msg.sender == owner(), "Not authorized");
        payable(team1).transfer(address(this).balance / 2);
        payable(team2).transfer(address(this).balance);
    }

    /**
     * @notice Change wallet of team1. Only callable by team1.
     */
    function setTeam1(address _team1) external {
        require(msg.sender == team1, "Not authorized");
        require(team1 != address(0), "Invalid team wallets");
        team1 = _team1;
    }

    /**
     * @notice Change wallet of team2. Only callable by team2.
     */
    function setTeam2(address _team2) external {
        require(msg.sender == _team2, "Not authorized");
        require(_team2 != address(0), "Invalid team wallets");
        team2 = _team2;
    }

    /**
     * @notice Allows the owner to recover tokens sent to the contract by mistake
     * @param _token: token address
     * @dev Callable by owner
     */
    function recoverToken(address _token) external onlyOwner {
        uint256 balance = IERC20(_token).balanceOf(address(this));
        require(balance != 0, "Cannot recover zero balance"); 

        IERC20(_token).safeTransfer(address(msg.sender), balance);
    }

    function _nextTokenIds(uint256 _amount) internal returns (uint256[] memory _tokenIds) {
        _tokenIds = new uint256[](_amount);

        for (uint256 i = 0; i < _amount; ++i) {
            tokenIds.increment();
            while(mintedOutOfOrder[tokenIds.current()]) {
                tokenIds.increment();
            }
            _tokenIds[i] = tokenIds.current();
        }
    }

    // solhint-disable-next-line no-empty-blocks
    receive() external payable {}
}

