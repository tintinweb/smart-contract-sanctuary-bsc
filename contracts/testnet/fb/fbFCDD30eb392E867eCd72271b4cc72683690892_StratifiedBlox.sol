import "@openzeppelin/contracts/access/Ownable.sol";

/**
 * @dev Contract to store addresses which are eligable for commissions when refering minters.
 * 
 * Developed by Fab
 */
contract Commissions is Ownable {
    uint16 public immutable maxCommission = 2000; // 20%
    uint16 public immutable commissionBase = 10000;

    mapping(address => uint16) public commissions;

    event SetCommission(address indexed referer, uint16 commission);

    /**
     * @notice Add referer to receive commission for minting. Set to 0 to remove commission.
     * @param _referer: address of receiver of commission, passed in mint function
     * @param _commission: commission in base 10000, 1000 => 10%
     */
    function setCommission(address _referer, uint16 _commission) external onlyOwner {
        require(_commission <= maxCommission, "invalid commision");
        require(_referer != address(0), "ivalid referer");
        commissions[_referer] = _commission;

        emit SetCommission(_referer, _commission);
    }
}

