import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";

/**
 * @dev Contract to grant holders of NFT collections a discount.
 * The checked collections needs to implement {IERC721Enumerable}.
 *
 * Discounts can require to hold a specific tokenId or a minimum amount of NFTs.
 * 
 * Developed by Fab
 */
contract Discounts is Ownable {

    struct Discount {
        string label;
        uint16 value; // the discount, base is discountBase, so 1000 -> 10%
        IERC721Enumerable tokenAddress; // the collection to check
        uint16[] tokenIds; // user needs any of these tokenIds OR
        mapping(uint16 => bool) containsTokenId;
        uint16 amount; // user need this amount of any NFT from the collection, set to 0 if only allow specific
        bool active;
    }

    uint16 public immutable discountBase = 10000;
    Discount[] private discounts;

    event DiscountAdded(uint16 indexed discountId, string label, uint16 value, address indexed tokenAddress, uint16 amount);
    event DiscountChanged(uint16 indexed discountId, uint16 value, bool active);

    constructor() {
        // push empty discount to make valid discounts start at discountId 1
        discounts.push();
    }

    modifier validDiscountId(uint16 _discountId) {
        require(_discountId > 0 && _discountId < discounts.length, "Invalid discountId");
        _;
    }

    /**
     * @notice Add new discount.
     * @param _label: label
     * @param _value: discount value with base 10000, 1000 -> 10%
     * @param _tokenAddress: collection to grant holders a discount for, needs {IERC721Enumerable}
     * @param _tokenIds: tokenIds to grant holders a discount for, empty if using _amount
     * @param _amount: required amount of tokens of collection to grant holders a discount for, 0 if using _tokenIds
     */
    function addDiscount(string memory _label, uint16 _value, IERC721Enumerable _tokenAddress, uint16[] memory _tokenIds, uint16 _amount) external onlyOwner {
        require(_amount > 0 || _tokenIds.length > 0, "set _amount or _tokenIds");
        require(!(_amount > 0 && _tokenIds.length > 0), "set either _amount OR _tokenIds");
        require(_value <= discountBase, "invalid discount");

        uint16 discountId = uint16(discounts.length);
        Discount storage discount = discounts.push();       
        discount.label = _label;
        discount.tokenAddress = _tokenAddress;
        discount.amount = _amount;

        discount.tokenIds = _tokenIds;
        for (uint16 i = 0; i < _tokenIds.length; ++i) {
            discount.containsTokenId[(_tokenIds[i])] = true;
        }

        discounts[discountId].value = _value;
        discounts[discountId].active = true;
        
        // make sure interface is supported 
        discount.tokenAddress.tokenByIndex(0);

        emit DiscountAdded(discountId, discount.label, discount.value, address(discount.tokenAddress), discount.amount);
    }

    /**
     * @notice Change discount properties
     * @param _discountId: discountId of discount to change
     * @param _value: new discount value with base 10000, 1000 -> 10%
     * @param _active: new active state
     */
    function changeDiscount(uint16 _discountId, uint16 _value, bool _active) external onlyOwner validDiscountId(_discountId) {
        require(_value <= discountBase, "invalid discount");

        discounts[_discountId].value = _value;
        discounts[_discountId].active = _active;

        emit DiscountChanged(_discountId, _value, _active);
    }

    /**
     * @notice Get discount properties, use along with {totalDiscounts} to enumerate {Discount}s.
     * NOTE: discountIds are in inclusive range [1, {totalDiscounts}].
     * @param _discountId: discountId of discount to query
     */
    function getDiscount(uint16 _discountId) external view validDiscountId(_discountId) returns (string memory label, uint16 value, address tokenAddress, uint16[] memory tokenIds, uint16 amount, bool active) {
        Discount storage discount = discounts[_discountId];
        return (
            discount.label,
            discount.value,
            address(discount.tokenAddress),
            discount.tokenIds,
            discount.amount,
            discount.active
        );
    }

    /**
     * @notice Get number of discounts, use along with {getDiscount} to enumerate discounts
     */
    function totalDiscounts() external view returns (uint16) {
        return uint16(discounts.length - 1);
    }

    /**
     * @notice Get highest discount for the given `_user`
     * @param _user: user to check
     */
    function findBestDiscount(address _user) external view returns (uint16 discountId, uint16 tokenId, uint16 value) {
        discountId = 0;
        tokenId = 0;
        value = 0;

        for (uint16 _discountId = 1; _discountId < discounts.length; ++_discountId) {
            Discount storage discount = discounts[_discountId];

            if (!discount.active) {
                continue;
            }

            uint256 balance = discount.tokenAddress.balanceOf(_user);

            for (uint256 index = 0; index < balance; ++index) {
                uint16 _tokenId = uint16(discount.tokenAddress.tokenOfOwnerByIndex(_user, index));
                if ((discount.amount != 0 && balance >= discount.amount) || discount.containsTokenId[_tokenId]) {
                    if (discounts[_discountId].value > value) {
                        discountId = _discountId;
                        tokenId = _tokenId;
                        value = discounts[_discountId].value;
                    }
                    break;
                }
            }
        }
    }

    /**
     * @notice Validate and check value of given discount. Use this along with {getUserDiscount} to save gas.
     * @param _user: user to check
     * @param _discountId: discount to validate
     * @param _tokenId: tokenId to validate discount with
     */
    function verifyDiscount(address _user, uint16 _discountId, uint16 _tokenId) internal view validDiscountId(_discountId) returns (uint16 value) {
        Discount storage discount = discounts[_discountId];
        require(discount.active, "discount inactive");
        require(discount.tokenAddress.ownerOf(_tokenId) == _user, "user does not own tokenId");
        require(
            (discount.amount != 0 && discount.tokenAddress.balanceOf(_user) >= discount.amount)
            || discount.containsTokenId[_tokenId], 
            "user not eligable for discount"
        );
        return discount.value;
    }
}

