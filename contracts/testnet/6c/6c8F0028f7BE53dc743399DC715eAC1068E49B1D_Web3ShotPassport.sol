     * @dev See {IERC721-transferFrom}.
     */
    function transferFrom(
        address from,
        address to,
        uint256 tokenId
    ) public override {
        require(false, "Web3ShotPassport: passport is not transferrable");
    }

    /**
     * @dev See {IERC721-safeTransferFrom}.
