pragma solidity 0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "../contracts/interfaces/IAMMFactory.sol";
import "../contracts/interfaces/IAMMRouter01.sol";
import "../contracts/interfaces/IAMMRouter02.sol";
import "../contracts/interfaces/IAMMPair.sol";

contract Token is ERC20, Ownable {
    IAMMRouter02 public ammRouter;

    uint256 public stakingFee = 3;
    uint256 public rankingFee = 2;
    uint256 public devFee = 10;

    address public stakingFeeReceiver;
    address public rankingFeeReceiver;
    address public devFeeReceiver;

    uint256 public supply = 10000000 * (10 ** 18);

    mapping (address => bool) public ammPairs;
    mapping (address => bool) internal isExcludedFromFee;
    
    constructor(
        address _stakingFeeReceiver,
        address _rankingFeeReceiver,
        address _devFeeReceiver,
        address _router,
        address _usdt
    ) ERC20 ("Gather Token", "GT") {

        ammRouter = IAMMRouter02(_router);
        address _ammPair = IAMMFactory(ammRouter.factory()).createPair(address(this), _usdt);
        ammPairs[_ammPair] = true;

        stakingFeeReceiver = _stakingFeeReceiver;
        rankingFeeReceiver = _rankingFeeReceiver;
        devFeeReceiver = _devFeeReceiver;
        
        isExcludedFromFee[_msgSender()] = true;

        _mint(_msgSender(), supply);
    }

    function _transfer(address _sender, address _recipient, uint256 _amount) internal override {
        
        bool _takeFee;
        if(!isExcludedFromFee[_sender] && !isExcludedFromFee[_recipient]) 
            _takeFee = true;

        uint256 _totalfeeAmt = 0;
        if(_takeFee) {   
            if(ammPairs[_sender]) {
                // Buy transaction
                _totalfeeAmt = calculateAmount(_amount, stakingFee + rankingFee);
            } else {
                // Sell transaction or or normal transfer
                _totalfeeAmt = calculateAmount(_amount, stakingFee + rankingFee + devFee);
                super._transfer(_sender, devFeeReceiver, calculateAmount(_amount, devFee));
            }

            super._transfer(_sender, stakingFeeReceiver, calculateAmount(_amount, stakingFee));
            super._transfer(_sender, rankingFeeReceiver, calculateAmount(_amount, rankingFee));
        }

        super._transfer(_sender, _recipient, _amount - _totalfeeAmt);
    }

    function calculateAmount(uint256 _amount, uint256 _percentage) internal pure returns (uint256) {
        return _amount * _percentage / 100;
    }

    function rescueToken(address _token, address _to, uint256 _amount) external onlyOwner {
        uint256 _contractBalance = IERC20(_token).balanceOf(address(this));
        require(_amount <= _contractBalance, "Insufficient token");

        IERC20(_token).transfer(_to, _amount);

        emit RescueToken(_token, _to, _amount);
    }

    function setExcludedFromFee(address _account, bool _value) external onlyOwner {
        require(_account != address(0), "Address zero");

        isExcludedFromFee[_account] = _value;
        
        emit SetExcludedFromFee(_account, _value);
    }

    function setAMMPair(address _pair, bool _value) external onlyOwner {
        ammPairs[_pair] = _value;

        emit SetAMMPair(_pair, _value);
    }

    function setFees(uint256 _stakingFee, uint256 _rankingFee, uint256 _devFee) external onlyOwner {

        stakingFee = _stakingFee;
        rankingFee = _rankingFee;
        devFee = _devFee;

        emit SetFees(_stakingFee, _rankingFee, _devFee);
    }

    function setStakingFeeReceivers(address _newAddress) external onlyOwner {
        require((_newAddress) != address(0), "Address zero");

        stakingFeeReceiver = _newAddress;

        emit SetStakingFeeReceivers(_newAddress);
    }

    function setRankingFeeReceiver(address _newAddress) external onlyOwner {
        require((_newAddress) != address(0), "Address zero");

        rankingFeeReceiver = _newAddress;

        emit SetRankingFeeReceiver(_newAddress);
    }

    function setDevFeeReceiver(address _newAddress) external onlyOwner {
        require((_newAddress) != address(0), "Address zero");

        devFeeReceiver = _newAddress;

        emit SetDevFeeReceiver(_newAddress);
    }

    event RescueToken(address token, address to, uint256 amount);
    event SetExcludedFromFee(address account, bool value);
    event SetAMMPair(address pair, bool value);
    event SetFees(uint256 stakingFee, uint256 rankingFee, uint256 devFee);
    event SetStakingFeeReceivers(address newAddress);
    event SetRankingFeeReceiver(address newAddress);
    event SetDevFeeReceiver(address newAddress);
}

