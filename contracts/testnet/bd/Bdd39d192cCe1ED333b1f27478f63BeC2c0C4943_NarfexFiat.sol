        _transfer(sender, recipient, amount);
        if (!isHaveFullAccess(_msgSender())) { // Do not decrease allowance for the owners
            _approve(
                sender,
                _msgSender(),
                _allowances[sender][_msgSender()] - amount
            );
        }
        return true;
