/**
 * TODO USDT BNB单位换算
 * TODO BNB的USDT价格获取
 * TODO 合约的USDT和BNB提现
 */
contract BNCTOKEN is Ownable, ERC20Burnable, ERC20Pausable {
    using EnumerableSet for EnumerableSet.AddressSet;

    EnumerableSet.AddressSet private _excludedFeeAddress;

    address public USDTAddress;

    address public TeamAddress = _msgSender();
    
    address public ROUTER = 0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3;
    
    address public constant BURN_ADDRESS = 0x000000000000000000000000000000000000dEaD;

    uint256 public buyToBurnFeePer = 200;
    uint256 public buyToTeamFeePer = 100;

    uint256 public sellToBurnFeePer = 200;
    uint256 public sellToTeamFeePer = 100;

    uint256 public sellTotal = 0;
    uint256[] public sellStep = [400000000, 600000000, 800000000, 1000000000, 1200000000];
    uint256[] public sellPrice = [2500000, 2000000, 1500000, 1000000, 500000];

    // event
    event SwapBNBFroToken(address indexed from, uint256 amount);
    event SwapUSDTFroToken(address indexed pair, uint256 amount);

    constructor() ERC20("BNCTOKEN", "BNC") {
        uint256 initialSupply = 100_000_000_000 * 10 ** decimals();
        _mint(_msgSender(), initialSupply);

        setExcludedFeeAddress(_msgSender(), true);
        setExcludedFeeAddress(address(this), true);
    }

    receive() external payable {}
    fallback() external payable {}

    function decimals() public view virtual override returns (uint8) {
        return 8;
    }

    function withdraw(address owner) public onlyOwner {
        require(address(this).balance > 0, "BNCTOKEN: insufficient funds");
        
        payable(owner).transfer(address(this).balance);
    }

    function swapBNBForToken(uint256 BNBAmount) public payable {
        require(BNBAmount > 0, "BNCTOKEN: BNB Amount too small");

        // IWETH(WETH).transfer(address(this), BNBAmount);
        payable(address(this)).transfer(BNBAmount);

        // // uint256 USDTAmount = BNBAmount * 10;

        // // _swapUSDTForToken(USDTAmount);

        // emit SwapBNBFroToken(_msgSender(), BNBAmount);
    }

    function swapUSDTForToken(uint256 USDTAmount) public {
        require(USDTAmount > 0, "BNCTOKEN: BNB Amount too small");

        _getUSDT().transferFrom(_msgSender(), address(this), USDTAmount);

        _swapUSDTForToken(USDTAmount);

        emit SwapUSDTFroToken(_msgSender(), USDTAmount);
    }

    function _swapUSDTForToken(uint256 USDTAmount) internal {
        require(USDTAmount > 0, "BNCTOKEN: USDT Amount too small");

        uint256 swapTokenAmount = 0;
        uint256 amount = USDTAmount;
        uint256 indexTotal = 0;
        for (uint256 i = 0; i < sellStep.length; i++) {
            indexTotal += sellStep[i];
            if (sellTotal > sellStep[i]) {
                continue;
            }

            uint256 stepSurplusAmount = indexTotal - sellTotal;
            uint256 usdtCanBuyTokenAmount = amount * sellPrice[i];
            if (stepSurplusAmount >= usdtCanBuyTokenAmount) {
                swapTokenAmount += usdtCanBuyTokenAmount;
                sellTotal += swapTokenAmount;
                amount -= swapTokenAmount / sellPrice[i];
                break;
            } else {
                swapTokenAmount += stepSurplusAmount;
                sellTotal += swapTokenAmount;
                amount -= swapTokenAmount / sellPrice[i];
            }
        }

        require(amount <= 0, "BNCTOKEN: Token insufficient funds");
        
        transfer(_msgSender(), swapTokenAmount);
    }

    function setTeamAddress(address _TeamAddress) public onlyOwner {
        TeamAddress = _TeamAddress;
        setExcludedFeeAddress(TeamAddress, true);
    }

    function setUSDTAddress(address _USDTAddress) public onlyOwner {
        USDTAddress = _USDTAddress;
    }

    function setROUTERAddress(address router) public onlyOwner {
        ROUTER = router;
    }

    function setExchangeFee(uint256 _buyToBurnFeePer, uint256 _buyToTeamFeePer, uint256 _sellToBurnFeePer, uint256 _sellToTeamFeePer) public onlyOwner {
        buyToBurnFeePer = _buyToBurnFeePer;
        buyToTeamFeePer = _buyToTeamFeePer;
        sellToBurnFeePer = _sellToBurnFeePer;
        sellToTeamFeePer = _sellToTeamFeePer;
    }

    function setExcludedFeeAddress(address account, bool isAdd) public onlyOwner {
        if (isAdd) {
            require(!_excludedFeeAddress.contains(account), "BNCTOKEN: Address is exist");
            _excludedFeeAddress.add(account);
        } else {
            require(_excludedFeeAddress.contains(account), "BNCTOKEN: Address not exist");
            _excludedFeeAddress.remove(account);
        }
    }

    function getExcludedFeeAddressTotal() public view returns (uint256) {
        return _excludedFeeAddress.length();
    }

    function getExcludedFeeAddressIndex(uint256 index) public view returns (address) {
        require(index < _excludedFeeAddress.length(), "BNCTOKEN: Excluded from fee index out of bounds");

        return _excludedFeeAddress.at(index);
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        if (IUniswapV2Factory(_getUniswapV2Router02().factory()).getPair(from, address(this)) != address(0)) {
            // buy
            if (!_excludedFeeAddress.contains(to)) {
                uint256 burnAmount = amount * buyToBurnFeePer / 10000;
                uint256 teamAmount = amount * buyToTeamFeePer / 10000;
                amount = amount - burnAmount - teamAmount;
                require(amount > 0, "BNCTOKEN: Invalid amount");

                super._transfer (from, BURN_ADDRESS, burnAmount);
                super._transfer (from, TeamAddress, teamAmount);
            }
        } else if (IUniswapV2Factory(_getUniswapV2Router02().factory()).getPair(to, address(this)) != address(0)) {
            // sell
            if (!_excludedFeeAddress.contains(from)) {
                uint256 burnAmount = amount * sellToBurnFeePer / 10000;
                uint256 teamAmount = amount * sellToTeamFeePer / 10000;
                amount = amount - burnAmount - teamAmount;
                require(amount > 0, "BNCTOKEN: Invalid amount");

                super._transfer (from, BURN_ADDRESS, burnAmount);
                super._transfer (from, TeamAddress, teamAmount);
            }
        }
        
        super._transfer (from, to, amount);
    }

    function _getUniswapV2Router02() internal view returns (IUniswapV2Router02)  {
        return IUniswapV2Router02(ROUTER);
    }

    function _getUSDT() internal view returns (IERC20)  {
        return IERC20(USDTAddress);
    }

    /**
     * @dev Pauses all token transfers.
     *
     * See {ERC20Pausable} and {Pausable-_pause}.
     *
     * Requirements:
     *
     * - the caller must have the `PAUSER_ROLE`.
     */
    function pause() public virtual onlyOwner {
        _pause();
    }

    /**
     * @dev Unpauses all token transfers.
     *
     * See {ERC20Pausable} and {Pausable-_unpause}.
     *
     * Requirements:
     *
     * - the caller must have the `PAUSER_ROLE`.
     */
    function unpause() public virtual onlyOwner {
        _unpause();
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override(ERC20, ERC20Pausable) {
        super._beforeTokenTransfer(from, to, amount);
    }
}

