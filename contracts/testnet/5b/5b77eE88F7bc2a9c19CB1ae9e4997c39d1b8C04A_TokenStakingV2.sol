pragma solidity >=0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";

contract TokenStakingV2 is
    OwnableUpgradeable,
    PausableUpgradeable,
    ReentrancyGuardUpgradeable
{
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    using EnumerableSet for EnumerableSet.AddressSet;

    struct UserInfo {
        uint256 amount;
        uint256 shares;
        uint256[2] rewardDebt;
        uint256[2] pendingRewards;
        uint256 depositedAt;
        uint256 claimedAt;
        uint256 unlockedAt;
    }

    struct PoolInfo {
        uint256 allocPoint;
        uint256 lastRewardTime;
        uint256[2] accEulerPerShare;
        uint256 totalSupply;
        uint256[2] rewardsAmount;
        uint256 lockupDuration;
    }

    enum TokenType {
        NORMAL,
        REFLECTION,
        DIVIDEND
    }

    IERC20 public stakingToken;
    IERC20[2] public rewardTokens;
    IERC20 public dividendToken;
    TokenType public tokenType;

    PoolInfo[] public poolInfo;
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;
    EnumerableSet.AddressSet users;
    uint256 public totalAllocPoint;

    uint256[2] public rewardRates;
    uint256 public unlockDuration;
    uint256 public claimTimes;

    address public factory;

    uint256 public startTime;
    uint256 public endTime;

    event Deposit(uint256 pid, address indexed user, uint256 amount);
    event Unlock(uint256 pid, address indexed user, uint256 amount);
    event Withdraw(uint256 pid, address indexed user, uint256 amount);
    event Claim(
        uint256 pid,
        address indexed user,
        uint256 amount,
        uint256 amount2
    );

    modifier updateReward(uint256 pid) {
        PoolInfo storage pool = poolInfo[pid];
        UserInfo storage user = userInfo[pid][msg.sender];
        uint256 i;
        if (pool.lastRewardTime <= block.timestamp) {
            if (pool.totalSupply > 0) {
                uint256 multiplier = Math.min(block.timestamp, endTime).sub(
                    pool.lastRewardTime
                );
                for (i = 0; i < 2; i++) {
                    uint256 rewards = multiplier
                        .mul(rewardRates[i])
                        .mul(pool.allocPoint)
                        .div(totalAllocPoint);
                    pool.rewardsAmount[i] = pool.rewardsAmount[i].add(rewards);
                    pool.accEulerPerShare[i] = pool.accEulerPerShare[i].add(
                        rewards.mul(1e12).div(pool.totalSupply)
                    );
                }
            }
            pool.lastRewardTime = Math.min(block.timestamp, endTime);
            for (i = 0; i < 2; i++) {
                uint256 pending = user
                    .amount
                    .mul(pool.accEulerPerShare[i])
                    .div(1e12)
                    .sub(user.rewardDebt[i]);
                user.pendingRewards[i] = user.pendingRewards[i].add(pending);
            }
        }

        _;

        if (pool.lastRewardTime <= block.timestamp) {
            for (i = 0; i < 2; i++) {
                user.rewardDebt[i] = user
                    .amount
                    .mul(pool.accEulerPerShare[i])
                    .div(1e12);
            }
            if (user.claimedAt == 0) user.claimedAt = block.timestamp;
        }
    }

    modifier updateUserList() {
        _;
        bool staked = false;
        for (uint256 i = 0; i < poolInfo.length; i++) {
            if (userInfo[i][msg.sender].amount > 0) {
                _checkOrAddUser(msg.sender);
                staked = true;
                break;
            }
        }
        if (staked == false) _removeUser(msg.sender);
    }

    modifier onlyFactory() {
        require(msg.sender == owner() || msg.sender == factory, "p");
        _;
    }

    function initialize(
        address _token,
        address _reward1,
        address _reward2,
        uint256 _tokenType,
        address _dividendToken
    ) public initializer {
        __Ownable_init();
        __Pausable_init();
        __ReentrancyGuard_init();

        stakingToken = IERC20(_token);
        rewardTokens[0] = IERC20(_reward1);
        rewardTokens[1] = IERC20(_reward2);
        tokenType = TokenType(_tokenType);
        dividendToken = IERC20(_dividendToken);

        require(dividendToken != stakingToken, "invalid dividend");
        factory = msg.sender;
        _pause();
    }

    function init(uint256 _startTime, uint256 _endTime) external onlyOwner {
        require(_endTime > _startTime, "0");

        addPool(1, 0, _startTime);
        addPool(2, 20 minutes, _startTime);
        addPool(3, 25 minutes, _startTime);
        addPool(5, 30 minutes, _startTime);

        startTime = _startTime;
        endTime = _endTime;
    }

    function addPool(
        uint256 _allocPoint,
        uint256 _lockupDuration,
        uint256 _startTime
    ) public onlyOwner {
        require(_startTime >= block.timestamp, "0");

        poolInfo.push(
            PoolInfo({
                allocPoint: _allocPoint,
                lastRewardTime: _startTime,
                accEulerPerShare: [uint256(0), uint256(0)],
                totalSupply: 0,
                rewardsAmount: [uint256(0), uint256(0)],
                lockupDuration: _lockupDuration
            })
        );

        totalAllocPoint += _allocPoint;
    }

    function setPool(
        uint256 _pid,
        uint256 _allocPoint,
        uint256 _lockupDuration
    ) external onlyOwner {
        updateAllPools();
        PoolInfo storage pool = poolInfo[_pid];
        totalAllocPoint = totalAllocPoint - pool.allocPoint + _allocPoint;
        pool.lockupDuration = _lockupDuration;
        pool.allocPoint = _allocPoint;
    }

    function setStartTime(
        uint256 _pid,
        uint256 _startTimeInMins,
        bool _updateAcc
    ) external onlyOwner {
        PoolInfo storage pool = poolInfo[_pid];

        if (pool.totalSupply > 0 && _updateAcc) {
            uint256 multiplier = block.timestamp.sub(pool.lastRewardTime);
            for (uint256 i = 0; i < 2; i++) {
                uint256 rewards = multiplier
                    .mul(rewardRates[i])
                    .mul(pool.allocPoint)
                    .div(totalAllocPoint);
                pool.rewardsAmount[i] = pool.rewardsAmount[i].add(rewards);
                pool.accEulerPerShare[i] = pool.accEulerPerShare[i].add(
                    rewards.mul(1e12).div(pool.totalSupply)
                );
            }
        }
        pool.lastRewardTime = block.timestamp.add(
            _startTimeInMins.mul(1 minutes)
        );
    }

    function totalSupply() external view returns (uint256) {
        uint256 _totalSupply;
        for (uint256 i = 0; i < poolInfo.length; i++) {
            _totalSupply += poolInfo[i].totalSupply;
        }
        return _totalSupply;
    }

    function availableRewards()
        public
        view
        returns (uint256[2] memory remain, uint256[2] memory insuff)
    {
        uint256[2] memory pendings;
        for (uint256 i = 0; i < poolInfo.length; i++) {
            PoolInfo storage pool = poolInfo[i];
            pendings[0] += pool.rewardsAmount[0];
            pendings[1] += pool.rewardsAmount[1];
            if (pool.lastRewardTime >= block.timestamp) continue;
            uint256 multiplier = Math.min(block.timestamp, endTime).sub(
                pool.lastRewardTime
            );
            pendings[0] += multiplier
                .mul(rewardRates[0])
                .mul(pool.allocPoint)
                .div(totalAllocPoint);
            pendings[1] += multiplier
                .mul(rewardRates[1])
                .mul(pool.allocPoint)
                .div(totalAllocPoint);
        }

        if (address(rewardTokens[0]) != address(0)) {
            uint256 bal0 = rewardTokens[0].balanceOf(address(this));
            if (bal0 < pendings[0]) insuff[0] = pendings[0].sub(bal0);
            else remain[0] = bal0 - pendings[0];
        }

        if (address(rewardTokens[1]) != address(0)) {
            uint256 bal1 = rewardTokens[1].balanceOf(address(this));
            if (bal1 < pendings[1]) insuff[1] = pendings[1].sub(bal1);
            else remain[1] = bal1 - pendings[1];
        }
    }

    function getPoolCount() external view returns (uint256) {
        return poolInfo.length;
    }

    function userCount() external view returns (uint256) {
        return users.length();
    }

    function sendDividendBack() internal {
        if (address(dividendToken) != address(0)) {
            dividendToken.safeTransfer(
                msg.sender,
                dividendToken.balanceOf(address(this))
            );
        }
    }

    function deposit(uint256 _pid, uint256 _amount)
        external
        whenNotPaused
        nonReentrant
        updateReward(_pid)
        updateUserList
    {
        require(block.timestamp < endTime && _amount > 0, "0");
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];

        uint256 before = stakingToken.balanceOf(address(this));
        stakingToken.safeTransferFrom(msg.sender, address(this), _amount);
        _amount = stakingToken.balanceOf(address(this)).sub(before);

        sendDividendBack();

        pool.totalSupply += _amount;
        user.amount += _amount;
        user.depositedAt = block.timestamp;
        user.unlockedAt = 0;

        emit Deposit(_pid, msg.sender, _amount);
    }

    function expand(
        uint256 _from,
        uint256 _to,
        uint256 _amount
    )
        external
        whenNotPaused
        nonReentrant
        updateReward(_from)
        updateReward(_to)
    {
        require(block.timestamp < endTime && _amount > 0, "0");
        PoolInfo storage fromPool = poolInfo[_from];
        PoolInfo storage toPool = poolInfo[_to];
        UserInfo storage fromUser = userInfo[_from][msg.sender];
        UserInfo storage toUser = userInfo[_to][msg.sender];
        require(fromUser.amount >= _amount, "2");

        fromPool.totalSupply -= _amount;
        toPool.totalSupply += _amount;

        fromUser.amount -= _amount;

        toUser.amount += _amount;
        toUser.depositedAt = block.timestamp;
        toUser.unlockedAt = 0;
    }

    function withdraw(uint256 _pid, uint256 _amount)
        public
        nonReentrant
        updateReward(_pid)
        updateUserList
    {
        require(_amount > 0, "0");
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(
            block.timestamp.sub(user.depositedAt) > pool.lockupDuration,
            "1"
        );
        if (unlockDuration > 0) {
            require(
                user.unlockedAt > 0 &&
                    block.timestamp.sub(user.unlockedAt) > unlockDuration,
                "2"
            );
        }
        require(user.amount >= _amount, "3");

        user.amount -= _amount;
        pool.totalSupply -= _amount;
        stakingToken.safeTransfer(msg.sender, _amount);
        sendDividendBack();

        emit Withdraw(_pid, msg.sender, _amount);
    }

    function withdrawAll(uint256 _pid) external {
        UserInfo storage user = userInfo[_pid][msg.sender];
        withdraw(_pid, user.amount);
    }

    function claim(uint256 _pid)
        public
        updateReward(_pid)
        returns (uint256[2] memory)
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];

        uint256[2] memory claimedAmount = safeTransferRewards(
            msg.sender,
            user.pendingRewards
        );
        user.pendingRewards[0] = user.pendingRewards[0].sub(claimedAmount[0]);
        user.pendingRewards[1] = user.pendingRewards[1].sub(claimedAmount[1]);
        user.claimedAt = block.timestamp;
        pool.rewardsAmount[0] = pool.rewardsAmount[0].sub(claimedAmount[0]);
        pool.rewardsAmount[1] = pool.rewardsAmount[1].sub(claimedAmount[1]);

        emit Claim(_pid, msg.sender, claimedAmount[0], claimedAmount[1]);

        return claimedAmount;
    }

    function claimForAll() external nonReentrant {
        uint256 claimedAmount = 0;
        for (uint256 i = 0; i < poolInfo.length; i++) {
            uint256[2] memory _amounts = claim(i);
            claimedAmount = claimedAmount.add(_amounts[0]).add(_amounts[1]);
        }
        if (claimedAmount > 0) claimTimes++;
    }

    function claimable(uint256 _pid, address _user)
        public
        view
        returns (uint256[2] memory)
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];

        uint256[2] memory claimables;

        uint256[2] memory curAccPerShare = pool.accEulerPerShare;
        uint256 multiplier = Math.min(block.timestamp, endTime).sub(
            pool.lastRewardTime
        );
        for (uint256 i = 0; i < 2; i++) {
            if (totalAllocPoint > 0 && pool.totalSupply > 0) {
                uint256 reward = multiplier
                    .mul(rewardRates[i])
                    .mul(pool.allocPoint)
                    .div(totalAllocPoint);
                curAccPerShare[i] = pool.accEulerPerShare[i].add(
                    reward.mul(1e12).div(pool.totalSupply)
                );
                claimables[i] = user
                    .amount
                    .mul(curAccPerShare[i])
                    .div(1e12)
                    .sub(user.rewardDebt[i])
                    .add(user.pendingRewards[i]);
            }
        }

        return claimables;
    }

    function claimableForAll(address _user)
        external
        view
        returns (uint256[2] memory)
    {
        uint256[2] memory amount;
        for (uint256 i = 0; i < poolInfo.length; i++) {
            uint256[2] memory _amounts = claimable(i, _user);
            amount[0] += _amounts[0];
            amount[1] += _amounts[1];
        }
        return amount;
    }

    function safeTransferRewards(address _user, uint256[2] memory _amounts)
        internal
        returns (uint256[2] memory)
    {
        for (uint256 i = 0; i < 2; i++) {
            if (address(rewardTokens[i]) == address(0)) continue;

            uint256 curBal = rewardTokens[0].balanceOf(address(this));
            if (_amounts[i] > curBal) _amounts[i] = curBal;
            rewardTokens[i].safeTransfer(_user, _amounts[i]);
        }

        return _amounts;
    }

    function updateAllPools() internal {
        // Update pool infos with old reward rate before setting new one first
        for (uint256 i = 0; i < poolInfo.length; i++) {
            PoolInfo storage pool = poolInfo[i];
            if (pool.lastRewardTime >= block.timestamp) continue;

            if (pool.totalSupply > 0) {
                uint256 multiplier = block.timestamp.sub(pool.lastRewardTime);
                for (uint256 j = 0; j < 2; j++) {
                    uint256 reward = multiplier
                        .mul(rewardRates[j])
                        .mul(pool.allocPoint)
                        .div(totalAllocPoint);
                    pool.rewardsAmount[j] += reward;
                    pool.accEulerPerShare[j] += reward.mul(1e12).div(
                        pool.totalSupply
                    );
                }
            }
            pool.lastRewardTime = block.timestamp;
        }
    }

    function setRewardRate(uint256 _index, uint256 _rewardRate)
        public
        onlyFactory
    {
        require(_rewardRate > 0, "0");

        updateAllPools();
        rewardRates[_index] = _rewardRate;
    }

    function expandEndTime(uint256 _mins) external onlyFactory {
        require(_mins > 0, "0");

        if (endTime >= block.timestamp) {
            endTime += _mins.mul(1 minutes);
        } else {
            endTime = block.timestamp + _mins.mul(1 minutes);
        }

        (
            uint256[2] memory remain,
            uint256[2] memory insuff
        ) = availableRewards();
        require(insuff[0] == 0 && insuff[1] == 0, "1");
        setRewardRate(0, remain[0].div(endTime.sub(block.timestamp)));
        setRewardRate(1, remain[1].div(endTime.sub(block.timestamp)));
    }

    function _removeUser(address _user) internal {
        if (users.contains(_user) == true) {
            users.remove(_user);
        }
    }

    function _checkOrAddUser(address _user) internal {
        if (users.contains(_user) == false) {
            users.add(_user);
        }
    }

    function pause() external onlyFactory {
        _pause();
    }

    function unpause() external onlyFactory {
        _unpause();
    }
}