    event refund(address indexed user, uint256 refundedEth);
    event claim(address indexed user, uint256 claimedAmount);
    event whitelistEnabled(address indexed caller);
    event whitelistDisabled(address indexed caller);

    //Pool parameters

    /// @inheritdoc IMoonaV1PoolImmutables
    uint256 public immutable override minContribution;
    /// @inheritdoc IMoonaV1PoolImmutables
    uint256 public immutable override maxContribution;
    /// @inheritdoc IMoonaV1PoolImmutables
    uint256 public immutable override presaleStart;
    /// @inheritdoc IMoonaV1PoolImmutables
    uint256 public immutable override presaleEnd;
