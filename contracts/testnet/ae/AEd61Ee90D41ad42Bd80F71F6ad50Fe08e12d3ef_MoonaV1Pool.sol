    uint256 public tokensForPresale;

    // @boolean isWhitelisted Checks if pool owner decides to create a whitelist of contributors
    bool internal isWhitelisted;
    // @mapping whitelistedAddresses stores whitelisted contributors
    mapping(address => bool) public whitelistedAddresses;
    // @mapping returns ETH amount that was contributed by a wallet
    mapping(address => uint256) private userContributed;
    // @param contributorsCounter returns the number of contributors
    uint16 public contributorsCounter;

    // Project metadata
    string public description;
    string public website;
    string public twitter;
    string public telegram;
    string public youtubeLink;
    string public discord;
    string public gitHub;

    // @param weiRaised returns the total value if ETH raised in wei
    uint256 public weiRaised;
    // @param presaleIsConcluded checks if pool if filled and ended, or owner ended presale
    bool public presaleIsConcluded;
    // @param poolIsCancelled checks if pool owner cancelled the presale
    bool public poolIsCancelled;

    //@title modifiers parameters

    address private poolOwner;

    modifier onlyPoolOwner() {
        checkPoolOwenr();
        _;
    }

    modifier onlyWhitelisted() {
        if (isWhitelisted == true) {
            require(
                contributorWhitelisted(msg.sender) == true,
                "MoonaV1Pool: You must be whitelisted"
            );
        }
        _;
    }

    constructor() {
        (
            presaleToken,
            description,
            website,
            twitter,
            telegram,
            youtubeLink,
            discord,
            gitHub
        ) = IMoonaV1LaunchpadPoolDeployer(msg.sender).parameters();
        (
            minContribution,
            maxContribution,
            presaleStart,
            presaleEnd,
            softCap,
            hardCap,
            tokensForPresale,
            rate
        ) = IMoonaV1LaunchpadPoolDeployer(msg.sender).presaleParams();

        setPoolOwner(msg.sender);
    }

    // @dev view functions

    function isSoftCapReached() public view returns (bool) {
        if (weiRaised >= softCap) {
            return true;
        } else {
            return false;
        }
    }

    function isHardCapReached() public view returns (bool) {
        if (weiRaised == hardCap) {
            return true;
        } else {
            return false;
        }
    }

    function presaleIsLive() public view returns (bool) {
        if (
            presaleStart >= block.timestamp &&
            presaleEnd < block.timestamp &&
            isHardCapReached() != true &&
            presaleIsConcluded != true &&
            poolIsCancelled != true
        ) {
            return true;
        } else {
            return false;
        }
    }

    function contributorWhitelisted(address _whitelistedAddress)
        public
        view
        returns (bool)
    {
        bool userIsWhitelisted = whitelistedAddresses[_whitelistedAddress];
        return userIsWhitelisted;
    }

    function userContributionLimit(address user) public view returns (uint256) {
        uint256 remainingAllocation = maxContribution.sub(
            userContributed[user]
        );
        return remainingAllocation;
    }

    function userCanRefundContribution(address user)
        public
        view
        returns (bool)
    {
        if (userContributed[user] > 0 && presaleIsLive() != false) {
            return true;
        } else if (userContributed[user] > 0 && poolIsCancelled == true) {
            return true;
        } else {
            return false;
        }
    }

    function userCanClaimToken(address user) public view returns (bool) {
        if (
            userContributed[user] > 0 &&
            presaleEnd >= block.timestamp &&
            isSoftCapReached() == true &&
            poolIsCancelled != true &&
            presaleIsLive() == false
        ) {
            return true;
        } else if (presaleIsConcluded == true) {
            return true;
        } else {
            return false;
        }
    }

    function userClaimableTokenAmount(address user)
        public
        view
        returns (uint256)
    {
        uint256 amount = rate.mul(userContributed[user]);
        if (userContributed[user] > 0) {
            return amount;
        } else return 0;
    }

    // @title modifier functions

    function setPoolOwner(address _poolOwner) public {
        poolOwner = _poolOwner;
    }

    function _isPoolOwner() internal view virtual returns (address) {
        return poolOwner;
    }

    function checkPoolOwenr() public view virtual {
        require(
            _isPoolOwner() == _msgSender(),
            "MoonaV1Pool: caller is not the owner"
        );
    }

    // Investor functions
    function contribute(address payable user)
        external
        payable
        nonReentrant
        onlyWhitelisted
    {
        require(presaleIsLive() != false, "MoonaV1Pool: presale is not open");
        require(
            msg.value >= minContribution &&
                msg.value <= maxContribution &&
                msg.value <= userContributionLimit(user),
            "MoonaV1Pool: Amount is incorrect"
        );
        require(
            weiRaised.add(msg.value) <= hardCap,
            "MoonaV1Pool: Amount is too large"
        );
        if (isWhitelisted == true) {
            require(
                contributorWhitelisted(msg.sender) == true,
                "MoonaV1Pool: You are not in whitelist"
            );
        }

        uint256 contributionAmount = msg.value;

        userContributed[user] += contributionAmount;
        weiRaised += contributionAmount;
        contributorsCounter++;

        emit contributed(user, contributionAmount);
    }

    function refundEth(address payable user) external payable nonReentrant {
        require(user == msg.sender, "MoonaV1Pool: You are no investor");
        require(
            userCanRefundContribution(user) != false,
            "MoonaV1Pool: You can't refund"
        );

        uint256 amountToRefund = userContributed[user];

        (bool sent, bytes memory data) = user.call{value: amountToRefund}("");
        require(sent, "MoonaV1Pool: Failed to refund");

        userContributed[user] = 0;

        contributorsCounter--;

        weiRaised -= amountToRefund;

        emit refund(user, amountToRefund);
    }

    function claimToken(address user)
        public
        nonReentrant
        returns (bool success)
    {
        require(
            userCanClaimToken(user) != false,
            "MoonaV1Pool: Fail. You can't claim"
        );
        require(user == msg.sender, "MoonaV1Pool: You are not investor");

        uint256 amountOf = userClaimableTokenAmount(user);

        userContributed[user] = 0;

        SafeERC20.safeTransfer(IERC20(presaleToken), user, amountOf);

        emit claim(user, amountOf);

        return true;
    }

    // Manager functions
    function updatePoolInformation(string[7] memory poolInfo)
        public
        onlyPoolOwner
    {
        description = poolInfo[0];
        website = poolInfo[1];
        twitter = poolInfo[2];
        telegram = poolInfo[3];
        youtubeLink = poolInfo[4];
        discord = poolInfo[5];
        gitHub = poolInfo[6];
    }

    function enableWhitelist(address[] memory users) public onlyPoolOwner {
        isWhitelisted = true;
        for (uint256 i = 0; i < users.length; i++) {
            whitelistedAddresses[users[i]] = true;
        }
        emit whitelistEnabled(msg.sender);
    }

    function disableWhitelist() public onlyPoolOwner {
        isWhitelisted = false;
        emit whitelistDisabled(msg.sender);
    }
}