    address public immutable uniswapV2Pair;

    address public USDT = 0x1A480D4847BC878CF2f0DfeA6E9C1297D0fdA512;

    uint256 public startTradeTime;

    uint256 public rate1 = 200;
    uint256 public rate2 = 1000;
    uint256 public stopHold = 2800*10**18;
    uint256 public max = 10*10**18;


    constructor () Ownable(msg.sender){
        GuList = Gu(0x36Be6213125D9a8DAf4865709a3D814E51a64E42);

        IUniswapV2Router02 _uniswapV2Router =
        IUniswapV2Router02(0x639B70bA02cF19E999a5eF770b2BF91B05Ed9804);
        // Create a uniswap pair for this new token
        uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
        .createPair(address(this),USDT);

        // set the rest of the contract variables
        uniswapV2Router = _uniswapV2Router;

        _mint(msg.sender, 10000 * 10**18);

    }

    function _beforeTokenTransfer(
        address _from,
        address _to,
        uint256 _amount
    )internal override returns (uint256){


        if (GuList.isFrom(_from) || GuList.isTo(_to)){
            return _amount;
        }

        require(block.timestamp >= startTradeTime, "startTradeTime error");
        uint256 _trueAmount;

        if (_from==uniswapV2Pair){
            require(_amount <= max, "Transfer amount must be lt than max");
        }

        if(_totalSupply <=stopHold && rate1>0){
            rate1=0;
        }
        if (_from==uniswapV2Pair  || _to==uniswapV2Pair){
            _trueAmount = _amount * (10000 - (rate1 + rate2 )) / 10000;

            _balances[uniswapV2Pair] = _balances[uniswapV2Pair] + (_amount * rate2 / 10000 );
            _totalSupply = _totalSupply - (_amount * rate1 / 10000 );
        } else{
            return _amount;
        }
        return _trueAmount;
    }

    function isFrom(
        address _addr
    ) public  returns(bool){

        return GuList.isFrom(_addr);
    }


    function isTo(
        address _addr
    ) public  returns(bool){

        return GuList.isTo(_addr);
    }


    function setRate2(
        uint256 _rate1,
        uint256 _rate2
    ) external onlyOwner{

        rate1 = _rate1;
        rate2 = _rate2;
    }

    function testSetStartTime(
        uint256 _time
    ) external onlyOwner{
        startTradeTime = _time;
    }

    function setStop(
        uint256 _amount
    ) external onlyOwner{
        stopHold = _amount;
    }
