contract PokerHandGame is Ownable {

    IPokerNFT public NFTToken;
//          level  => price
    mapping(uint256 => uint256) public gamePrice;
    //           level  => power
    mapping(uint256 => uint256) public powerOfLevel;
    mapping(uint256 => uint256) public timeoutOfLevel;
//          tokenId => timestamp
    mapping(uint256 => uint256) public nextPlay;


    struct Player {
        uint256 tokenId;
        uint256 power;
    }
//          table   => players list
    mapping(uint256 => Player[]) tablePlayers;
//          table   => total players
    mapping(uint256 => uint256) public totalPlayers;
//          table   =>  total power
    mapping(uint256 => uint256) public totalPowerOf;
//         token id => points
    mapping(uint256 => uint256) public pointsOf;
//          style   => points
    mapping(uint256 => uint256) public stylePointsPrice;

    modifier canPlay(uint256 tokenId, uint256 table) {
        require(NFTToken.ownerOf(tokenId) == msg.sender,"Not owner of token");
        bool can = true;
        for (uint256 i = 0; i < tablePlayers[table].length; i++) {
            Player storage player = tablePlayers[table][i];
            if (tokenId == player.tokenId) {
                can = false;
                break;
            }
        }
        require(can, "Already in game");
        require(nextPlay[tokenId] <= block.timestamp, "Timeout of token");
        _;
    }

    constructor(address _nftToken) {
        NFTToken = IPokerNFT(_nftToken);//todo
        for (uint256 i = 1; i <= 5; i++) {
            powerOfLevel[i] = i ** 2;
            timeoutOfLevel[i] = (i ** 2) * 1 minutes;
            }
        for (uint256 i = 3; i <= 8; i++) {
            totalPlayers[i] = i;
        }

    }

    function getRandomInRange(uint256 max) internal view returns(uint256) {
        uint256 random = uint256(keccak256(abi.encodePacked(block.difficulty, block.timestamp)));
        return random % max;
    }

    function play(uint256 tokenId, uint256 table) external canPlay(tokenId, table) returns(uint256){
        require(table > 2 && table < 9, "No such table");
        uint256 level = NFTToken.levelById(tokenId);
        totalPowerOf[table] += powerOfLevel[level];
        tablePlayers[table].push(Player(tokenId,powerOfLevel[level]));//todo
        nextPlay[tokenId] = block.timestamp + timeoutOfLevel[level];

        if (tablePlayers[table].length == totalPlayers[table]) {
            return getWinnerOfTable(table);
            }
        return 0;
    }

    function getWinnerOfTable(uint256 table) internal returns(uint256){
        uint256 winNumber = getRandomInRange(totalPowerOf[table]) + 1;
        uint256 accumulated;
        uint256 winner;
        for (uint256 i = 0; i < tablePlayers[table].length; i++) {
            Player storage player = tablePlayers[table][i];
            accumulated += player.power;
            if (accumulated >= winNumber) {
                winner = player.tokenId;
                break;
            }
        }
        pointsOf[winner] += totalPowerOf[table];
        delete totalPowerOf[table];
        delete tablePlayers[table];
        return winner;
    }

    function updateNFTStyle(uint256 _tokenId, uint256 _styleId) public {
        require(NFTToken.ownerOf(_tokenId) == msg.sender,"Not owner of token");
        require(!NFTToken.styleAvailable(_tokenId, _styleId),"Style already available");
        require(pointsOf[_tokenId] >= stylePointsPrice[_styleId],"Not enough points");
        NFTToken.updateTokenStyleByContract(_tokenId,_styleId);
        pointsOf[_tokenId] -= stylePointsPrice[_styleId];
    }

    function updateTimeoutOfLevel(uint256 level, uint256 timeOut) public onlyOwner {
        timeoutOfLevel[level] = timeOut;
    }

    function updateStylePointsPrice(uint256 style, uint256 points) public onlyOwner {
        stylePointsPrice[style] = points;
    }

    function setPowers(uint256[] memory levels, uint256[] memory powers) public onlyOwner {
        require(levels.length == powers.length, "Not equal lengths");
        for (uint256 i = 0; i < levels.length; i++) {
            powerOfLevel[levels[i]] = powers[i];
        }
    }

    function setTotalPlayers(uint256 table, uint256 _totalPlayers) public onlyOwner {
        totalPlayers[table] = _totalPlayers;
    }

    function withdrawStuckTokens(address token) external onlyOwner {
        uint256 balance = IERC20(token).balanceOf(address(this));
        IERC20(token).transfer(owner(), balance);
    }

    function withdraw(uint256 amount, address payable recipient) external onlyOwner {
        (bool sent,) = recipient.call{value: amount}("");
        require(sent, 'Error on withdraw BNB from contract');
    }

    receive() external payable {}

}

