contract Carat is ERC20, Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // The SCADS TOKEN!
    address public scads;

    uint8 public _decimals = 18;

    uint8 public _taxPercentForBuy = 5;

    uint8 public _taxPercentForRedeem = 10;
    
    uint256 private _mutiplier = 1000000000000000000 * 0.000006;

    address public pulse; // pulse contract address

    address public scadsbusd; // master contract address

    address public caratpool; // caratpool contract address

    address public scadspool; // scadspool contract address

    uint256 public linearIndex = 0;

    uint256 private decimal_amount = 1000000000000000000;

    // Seniorage address
    // address public seniorageAddress;
   
    struct Holder {
        address accountAddress;
        uint256 balance;
    }

    Holder[] public holderList;

    event CaratMint(uint256 amount);

    event Redeem(uint256 amount);

    modifier onlyScads() {
        require(scads == msg.sender, "not scads");
        _;
    }

    constructor(
        address _scads
        // address _master,
        // address _scadspool,
        // address _caratpool
    ) ERC20("CARAT", "CARAT") {
        scads = _scads;
        // scadsbusd = _master;        
        // scadspool = _scadspool;
        // caratpool = _caratpool;

        // seniorageAddress = 0xA0eaFc2FE544dFB9A35f57AABEcC93d5350fdF37;
    }

    function decimals() public view override returns (uint8) {
        return _decimals;
    }

    function getLinearIndex() public view returns (uint256) {
        return linearIndex;
    }

    function calculateBuyAmount(uint256 amount) view public returns (uint256) {
        // this is carat amount
        return linearIndex.mul(_mutiplier).mul(amount).div(decimal_amount ** 2);

        // uint256 scadsTotalSupply = IERC20(scads).totalSupply();
        // uint256 caratTotalSupply = totalSupply().mul(2);
        // return amount.mul(caratTotalSupply).div(scadsTotalSupply);
    }

    function calculateMintAmount(uint256 amount) view public returns (uint256) {
        uint256 start = linearIndex + decimal_amount;
        uint256 end = linearIndex + amount;
        return amount.mul(start + end).div(2).div(decimal_amount);
    }

    function calculateRedeemAmount(uint256 amount) view public returns (uint256) {
        return linearIndex.mul(_mutiplier).mul(amount).div(decimal_amount ** 2);
        // uint256 scadsTotalSupply = IERC20(scads).totalSupply();
        // uint256 caratTotalSupply = totalSupply().mul(2);
        // return amount.mul(caratTotalSupply).div(scadsTotalSupply);
    }

    function mint(address _address, uint256 _amount) private  {
        _mint(_address, _amount);        
    }

    function sendRewardCarat(uint256 _amount, address to) public onlyScads {
        uint256 caratAmount = calculateMintAmount(_amount).mul(_mutiplier).div(decimal_amount);
        linearIndex += _amount;
        mint(to, caratAmount);
    }

    function setPulse(address _pulse) public onlyOwner {
        pulse = _pulse;
    }

    function caratMint(uint256 amount) public {
        // calculate scads amount to get amount of carat
        uint256 scadsAmount = calculateBuyAmount(amount);
        uint256 scadsBalance = IERC20(scads).balanceOf(address(msg.sender));
        //check scads balance of msg sender
        require(scadsBalance >= scadsAmount, "ERC20: lack scads in sender");  

        IERC20(scads).safeTransferFrom(address(msg.sender), address(this), scadsAmount);

        uint256 snackAmount = amount;
        uint256 feeAmount = snackAmount.mul(_taxPercentForBuy).div(100);
       
        // mint(scadsbusd, feeAmount.mul(30).div(100));
        // mint(caratpool, feeAmount.mul(15).div(100));
        // mint(scadspool, feeAmount.mul(5).div(100));
        mint(scads, feeAmount.mul(85).div(100));
        //calculate and give fee of carat to holders
        uint256 holderFeeAmount = feeAmount.mul(15).div(100);
        uint256 totalBalance = 0;

        for(uint32 i = 0; i < holderList.length;i ++){
            totalBalance += holderList[i].balance;
        }

        if(totalBalance == 0){ // if it is first buying
            mint(address(this), holderFeeAmount);
        }else{
            for(uint32 i = 0; i < holderList.length;i ++){
                mint(holderList[i].accountAddress, holderFeeAmount.mul(holderList[i].balance).div(totalBalance));
            }
        }
        
        //add msg.sender to holderList
        bool isExist = false;
        for(uint32 i = 0; i < holderList.length;i ++){
            if(holderList[i].accountAddress == msg.sender){
                holderList[i].balance = holderList[i].balance + snackAmount - feeAmount;
                isExist = true;
            }
        }
        if(!isExist){
            Holder memory buyer;
            buyer.accountAddress = msg.sender;
            buyer.balance = snackAmount - feeAmount;
            holderList.push(buyer);
        }     
           

        mint(address(msg.sender), snackAmount - feeAmount);

        emit CaratMint(snackAmount);
    }

    function redeem(uint256 amount) public {


        uint256 snackAmount = amount;
        uint256 feeAmount = snackAmount.mul(_taxPercentForRedeem).div(100);

        // calculate scads amount to get amount of carat
        uint256 scadsAmount = calculateRedeemAmount(snackAmount - feeAmount);

        //check scads balance of snack contract
        require(IERC20(scads).balanceOf(address(this)) >= scadsAmount, "ERC20: lack scads in contract");  
        
        //check snack balance of msg sender
        require(balanceOf(address(msg.sender)) >= snackAmount, "ERC20: lack carat");  

        IERC20(scads).transfer(address(msg.sender), scadsAmount);   
        
        // mint(pulse, feeAmount.mul(80).div(100));
        // mint(scadsbusd, feeAmount.mul(30).div(100));
        // mint(caratpool, feeAmount.mul(15).div(100));
        // mint(scadspool, feeAmount.mul(5).div(100));
        mint(scads, feeAmount.mul(85).div(100));
        //calculate and give fee of carat to holders
        uint256 holderFeeAmount = feeAmount.mul(15).div(100);
        uint256 totalBalance = 0;

        for(uint32 i = 0; i < holderList.length;i ++){
            totalBalance += holderList[i].balance;
        }
        
        //require(totalBalance > 0, "ERC20: not exist in holderList");     
        
        for(uint32 i = 0; i < holderList.length;i ++){
            mint(holderList[i].accountAddress, holderFeeAmount.mul(holderList[i].balance).div(totalBalance));
        }
        
        
        //add msg.sender to holderList
        bool isExist = false;
        for(uint32 i = 0; i < holderList.length;i ++){
            if(holderList[i].accountAddress == msg.sender){
                holderList[i].balance = holderList[i].balance - snackAmount;
                isExist = true;
            }
        }
        //require(isExist == true, "ERC20: not exist in holderList");     
           

        transfer(pulse, snackAmount);

        emit Redeem(snackAmount);
    }

    // Set seniorage address by owner
    // function setSeniorage(address seniorage) public onlyOwner {
    //     seniorageAddress = seniorage;
    // }
}