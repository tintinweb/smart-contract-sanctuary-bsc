            pause_B = move;
        }

        if ((pause_A == move) && (pause_B == move)) {
            
            if  (move == PAUSE_ON) {
                _pause();
            }

            if  (move == PAUSE_OFF) {
                _unpause();
            }

            pause_A = PAUSE_FREE;
            pause_B = PAUSE_FREE;
        }
    }



