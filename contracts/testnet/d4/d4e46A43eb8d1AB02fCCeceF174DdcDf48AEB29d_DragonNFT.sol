contract DragonNFT is ERC721URIStorage, Ownable {
    using Counters for Counters.Counter;
    Counters.Counter private _tokenIds;
    mapping(address=>uint256[]) public userInfo;
    uint8 public step = 1;
    uint256 public firstSaleMaxCnt = 2000;
    address public adminWallet;
    mapping(address => bool) public whiteList;

    VRFv2Consumer public shuffler;
    uint64 shuffleId;

    constructor() ERC721("DragonNFT", "VDSC") {
        adminWallet=0x86A2C457bA9562Feea660f978ab1eEA0026cfda9;
    }

    function mintToken(string memory uri) public payable returns (uint256) {
        require(step < 4, "No Mint step");
        if(step == 1) {
            require(msg.value == 10 ** 18 * 5 / 100, "Cannot pass cuz less price: step 1");
            require(userInfo[_msgSender()].length < 4, "already max count: step 1");
            require(whiteList[_msgSender()], "No whitelist: step 1");
            if (_tokenIds.current() > firstSaleMaxCnt) {
                return _tokenIds.current();
            }
        }
        
        if(step == 2) {
            require(msg.value == 10 ** 18 * 10 / 100, "Cannot pass cuz less price: step 2");
            require(userInfo[_msgSender()].length < 6, "already max count: step 2");
            require(whiteList[_msgSender()], "No whitelist: step 2");
            if (_tokenIds.current() > 6000) {
                return _tokenIds.current();
            }
        }

        if(step == 3) {
            require(msg.value == 10 ** 18 * 125 / 1000, "Cannot pass cuz less price: step 3");
            if (_tokenIds.current() > 10000) {
                return _tokenIds.current();
            }
        }

        payable(adminWallet).transfer(msg.value);
        _tokenIds.increment();
        uint256 newItemId = _tokenIds.current();
        _safeMint(address(this), newItemId);
        _setTokenURI(newItemId, uri);
        userInfo[_msgSender()].push(newItemId);
        return newItemId;
    }

    function claimNFT () public {
        require(step == 4, "not expired presale");
        for(uint256 i = 0; i < userInfo[_msgSender()].length; i++) {
            IERC721(address(this)).safeTransferFrom(address(this), _msgSender(), userInfo[_msgSender()][i]);
        }
    }

    function setFirstSaleMaxCnt (uint256 cnt) public onlyOwner {
        firstSaleMaxCnt = cnt;
    }

    function setStep (uint8 _step) public onlyOwner {
        require(_step < 5, "Invalid Step Range");
        step = _step;
    }

    function setAdminWallet(address admin) public onlyOwner {
        adminWallet = admin;
    }

    function setWhiteLists(address[] memory addressList) public onlyOwner {
        for(uint256 i = 0; i < addressList.length; i++) {
            whiteList[addressList[i]] = true;
        }
    }

    function setWhiteList(address whitelistAddress, bool flag) public onlyOwner {
        whiteList[whitelistAddress] = flag;
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual returns (bytes4) {
        return this.onERC721Received.selector;
    }
}

