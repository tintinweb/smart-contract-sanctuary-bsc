pragma solidity 0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "../../core/interface/IDinolandNFT.sol";

contract EvolveLab is Ownable, Pausable {
    using SafeMath for uint256;

    constructor() {
        isOldGenes[1111] = true;
        isOldGenes[1112] = true;
        isOldGenes[1113] = true;
        isOldGenes[1114] = true;
        isOldGenes[1115] = true;
        isOldGenes[1211] = true;
        isOldGenes[1212] = true;
        isOldGenes[1213] = true;
        isOldGenes[1214] = true;
        isOldGenes[1215] = true;
        isOldGenes[1311] = true;
        isOldGenes[1312] = true;
        isOldGenes[1313] = true;
        isOldGenes[1314] = true;
        isOldGenes[1315] = true;
        evolveFee = 200 * 1e18;
    }

    event Evolved(uint256 indexed dinoId, uint256 indexed newGenes);

    IDinolandNFT public nftContract;
    IERC20 public tokenContract;
    mapping(uint256 => bool) public isOldGenes;
    mapping(uint256 => uint256) public genesToId;
    mapping(uint256 => uint256[]) public oldGenesToNewGenes;
    mapping(uint256 => bool) public isEvolved;
    mapping(address => bool) public whitelistedAdmin;
    uint256 public blockTime = 3;
    uint256 public evolveFee;

    modifier onlyOwnerOrWhitelistedAdmin() {
        require(
            msg.sender == owner() || whitelistedAdmin[msg.sender],
            "Only owner or whitelisted admin can do this"
        );
        _;
    }

    function pause() external onlyOwner {
        require(!paused(), "Contract is paused");
        _pause();
    }

    function unpause() external onlyOwner {
        require(paused(), "Contract is not paused");
        _unpause();
    }

    function setAdmin(address _admin, bool _isAdmin) external onlyOwner {
        whitelistedAdmin[_admin] = _isAdmin;
    }

    function setEvolveFee(uint256 _evolveFee) external onlyOwner {
        evolveFee = _evolveFee;
    }

    function setBlockTime(uint256 _blockTime) external onlyOwner {
        blockTime = _blockTime;
    }

    function setOldGenesToNewGenes(
        uint256 _oldGenes,
        uint256[] memory _newGenes
    ) external onlyOwnerOrWhitelistedAdmin {
        oldGenesToNewGenes[_oldGenes] = _newGenes;
    }

    function setNftContract(address _address) external onlyOwner {
        nftContract = IDinolandNFT(_address);
    }

    function setTokenContract(address _address) external onlyOwner {
        tokenContract = IERC20(_address);
    }

    function setEvolved(uint256 _id, bool _isEvolved) external onlyOwnerOrWhitelistedAdmin {
        isEvolved[_id] = _isEvolved;
    }

    function evolveDino(uint256 _dinoId) external whenNotPaused {
        if (evolveFee > 0) {
            tokenContract.transferFrom(msg.sender, address(this), evolveFee);
        }
        (uint256 genes, uint256 bornAt, , , ) = nftContract.getDino(_dinoId);
        address owner = nftContract.ownerOf(_dinoId);
        uint256 newGenesArrLength = oldGenesToNewGenes[genes].length;
        require(owner == msg.sender, "Only owner can evolve dinos");
        require(isEvolved[_dinoId] == false, "Dino is already evolved");
        require(isOldGenes[genes], "Dino genes is not old genes");
        uint256 createdAtBlock = bornAt.div(blockTime);
        uint256 rand = ((
            uint256(
                keccak256(abi.encodePacked(blockhash(createdAtBlock), _dinoId))
            )
        ) % newGenesArrLength) + 1;

        nftContract.evolveDino(_dinoId, oldGenesToNewGenes[genes][rand]);
        isEvolved[_dinoId] = true;
        emit Evolved(_dinoId, genes);
    }
}

