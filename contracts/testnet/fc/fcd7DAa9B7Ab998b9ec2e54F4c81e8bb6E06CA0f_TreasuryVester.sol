pragma solidity 0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./libraries/Formula.sol";
import "./libraries/TransferHelper.sol";

contract TreasuryVester is Ownable {

    struct Lock {
        uint256 time;
        uint256 count;
        uint256 amountEach;
    }

    struct AddressPosition {
        address bdInvestor;
        address marketing;
        address technology;
    }

    address public token;
    AddressPosition public AP;

    mapping(address => uint256) private lastClaim;
    mapping(address => Lock) private lockData;
    uint256 public vestingCliff;

    event Claim(address sender, uint256 amount);

    constructor(address _owner, address _token, AddressPosition memory dataAP, uint256 cliff) {
        token = _token;
        vestingCliff = cliff;
        AP = dataAP;

        lockData[dataAP.bdInvestor] = Lock(30 days, 36, Formula.mulDiv(Constant.BD_INVESTOR_TOKEN_AMOUNT, Formula.SCALE, 36)); // 560M % 36 months
        lockData[dataAP.marketing]  = Lock(30 days, 36, Formula.mulDiv(Constant.MARKETING_TOKEN_AMOUNT,  Formula.SCALE, 36)); // 800M % 36 months
        lockData[dataAP.technology] = Lock(30 days, 36, Formula.mulDiv(Constant.TECH_TOKEN_AMOUNT,  Formula.SCALE, 36)); // 240M % 36 months
        transferOwnership(_owner);
    }

    function claim() external {
        Lock memory tmpLock = getLockData(_msgSender());
        require(tmpLock.count > 0, "Nothing to claim");
        uint256 lastClaimTime = lastClaim[_msgSender()];
        uint256 currentTime = block.timestamp;
        require(currentTime >= vestingCliff, "Not time yet");

        uint256 stepClaim;

        if (lastClaimTime == 0) {
            stepClaim = (currentTime - vestingCliff) / tmpLock.time;
        } else {
            require(currentTime - lastClaimTime >= tmpLock.time, "Not now");
            stepClaim = (currentTime - lastClaimTime) / tmpLock.time;
        }

        if (stepClaim >= tmpLock.count) {
            stepClaim = tmpLock.count;
        }

        uint256 amount = tmpLock.amountEach * stepClaim;
        require(amount > 0, "Invalid amount");

        lockData[_msgSender()].count -= stepClaim;
        lastClaim[_msgSender()] = currentTime;

        TransferHelper.safeTransfer(token, _msgSender(), amount);
        emit Claim(_msgSender(), amount);
    }

    function getLockData(address _addressPosition) public view returns (Lock memory){
        return lockData[_addressPosition];
    }
}

