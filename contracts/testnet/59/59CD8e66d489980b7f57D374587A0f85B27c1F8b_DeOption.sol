        address target, 
        uint32 duration,
        bool open,
        uint128 valitility,
        uint128 c,
        uint64 lambda,
        uint64 reducedRate,
        uint64 reduceTimeUnit,
        address priceFeedContract
    ) internal {
        bytes32 productId = keccak256(abi.encode(target, duration));
        require(productOf(productId).target == address(0), "exist product");
        if (getPriceFeed(target).priceFeedContract == address(0)) {
            require(priceFeedContract != address(0), "priceFeedContract couldn't be address 0");
            _setPriceFeedContract(target, priceFeedContract);
        }

        uint128 normalDistributionValue = Calculator.calculateNormalDistributionValue(duration, valitility, c);
        _products[productId] = Product(
            target,
            duration, 
            open,
            valitility, 
            c, 
            normalDistributionValue, 
            lambda, 
            reducedRate, 
            0, 
            reduceTimeUnit,
            0
        );

        if (isDurationExist(duration) == false) {
            _addDuration(duration);
        }

        emit ProductAdded(productId, target, duration, open, valitility, c, lambda, reducedRate, reduceTimeUnit, priceFeedContract);
    }

    function getLatestFeedPrice(address target) public view returns(uint80, int) {
        (
            uint80 roundID,
            int feedPrice
        ) = ChainlinkPriceFeed.getLatestPrice(AggregatorInterface(getPriceFeed(target).priceFeedContract));
        return (roundID, feedPrice);
    }

    function _setProductVolatility(address target, uint32 duration, uint128 newVolatility) internal {
        bytes32 productId = keccak256(abi.encode(target, duration));
        require(_products[productId].target != address(0), "non_exist product");

        uint128 c = _products[productId].c;
        uint128 normalDistributionValue = Calculator.calculateNormalDistributionValue(duration, newVolatility, c);
        _products[productId].volatility = newVolatility;
        _products[productId].normalDistributionValue = normalDistributionValue;
        emit ProductVolatilitySet(target, duration, newVolatility);
