        positionIdCounter++;
        uint32 duration = newPosition.duration;
        (uint128 head, uint128 tail) = _getHeadAndTail(duration);
        uint128 positionId = positionIdCounter;
        if (head == 0) {
            _changeHead(positionId, duration);
        } else {
            positionList[tail].rightPosition = positionId;
