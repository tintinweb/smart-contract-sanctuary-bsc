        _deOptionToken = deOptionTokenAddress;
    }

    function buyOption(
        address target,
        uint32 duration,
        uint256 optionCost, // base currency decimals
        int verifyingPrice, // chainlink decimals
        int tolerance // 10 decimals
    ) public {
        bytes32 productId = keccak256(abi.encode(target, duration));
        require(productOf(productId).target != address(0), "non_exist product");
        require(productOf(productId).open, "product is closed");
        PriceFeed memory priceFeed = getPriceFeed(target);
        (
            uint80 roundID,
            int feedPrice
        ) = ChainlinkPriceFeed.getLatestPrice(AggregatorInterface(priceFeed.priceFeedContract));
        require(Calculator.inTolerance(verifyingPrice, feedPrice, tolerance), "over slippage tolerance");
        require(optionCost >= minBaseCurrency(), "optionCost is too little");
        require(Calculator.inMaxOptionCostAmount(optionCost, lpFunds(), maxOptionCostRate()), "over optionCost limits");
        
        uint256 wrappedFeedPrice = uint256(feedPrice) * (10 ** baseDecimals()) / (10 ** priceFeed.decimals);
        SafeERC20.safeTransferFrom(baseCurrency() , msg.sender, address(this), optionCost);
        uint256 mintTokenAmount = optionCost * (1e18) / ( 10 ** baseDecimals());
        IDeOptionERC20(_deOptionToken).mint(msg.sender, mintTokenAmount);
        
        _buyOption(productId, optionCost, wrappedFeedPrice, roundID);
    }

    function _buyOption(bytes32 productId, uint256 optionCost, uint256 feedPrice, uint80 positionOpenedRound) internal {
        Product memory product = productOf(productId);
        MemoryParam memory memoryParam;
        uint256 timeUnits = (block.timestamp - product.lastHReducedTimeStamp) / product.reduceTimeUnit;
        if (timeUnits != 0) {
            product.lastHReducedTimeStamp += uint64(timeUnits) * product.reduceTimeUnit;
            _products[productId].lastHReducedTimeStamp = product.lastHReducedTimeStamp;
            product.acculatedCost = Calculator.calculateReducedH(
                product.acculatedCost, 
                timeUnits,
                product.reducedRate
            );
        }

        memoryParam.optionPrice = Calculator.calculateOptionPrice(
            feedPrice,
            product.normalDistributionValue,
            product.lambda,
            product.acculatedCost + uint128(optionCost / 2),
            lpFunds()
        );
        product.acculatedCost += uint128(optionCost);
        _products[productId].acculatedCost = product.acculatedCost;

        memoryParam.optionAmount = Calculator.calculateOptionAmount(optionCost, memoryParam.optionPrice);
        memoryParam.expiredTime = uint64(block.timestamp + product.duration);
        Position memory newPosition = Position(
            product.target,
            product.duration,
            memoryParam.expiredTime,
            msg.sender,
            uint96(feedPrice),
            uint128(optionCost),
            memoryParam.optionAmount,
            positionOpenedRound,
            0,
            0
        );
        
        _addPosition(newPosition);

        emit PositionOpened(
            positionIdCounter,
            productId,
            msg.sender,
            memoryParam.expiredTime,
            feedPrice,
            optionCost,
            memoryParam.optionPrice,
            memoryParam.optionAmount,
            product.acculatedCost,
            product.lastHReducedTimeStamp
        );
    }
    
