pragma solidity 0.8.0;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "./interfaces/IGameNFT.sol";

contract MintTest is OwnableUpgradeable {
    IGameNFT public itemToken;
    IGameNFT public heroToken;

    function initialize(
        address _itemNFT,
        address _heroNFT
    ) public initializer {
        __Ownable_init();
        itemToken = IGameNFT(_itemNFT);
        heroToken = IGameNFT(_heroNFT);
    }

    function mintHeroForTest(address[] calldata _owners, uint16[] calldata _classIds, uint _price, uint8 _level, uint _quantity, uint32 _experience, uint[3] calldata _skills) onlyOwner external {
        for (uint i = 0; i < _owners.length; i++) {
            for (uint j = 0; j < _classIds.length; j++) {
                for (uint k = 0; k < _quantity; k++) {
                    uint tokenId = heroToken.mintHero(_owners[i], _classIds[j], _price, k);
                    heroToken.updateHeroInfo(tokenId, _level, _experience, _skills);
                }
            }
        }
    }

    function mintItemForTest(address[] calldata _owners, uint16[] calldata _classIds, uint _price, uint _quantity) onlyOwner external {
        for (uint i = 0; i < _owners.length; i++) {
            for (uint j = 0; j < _classIds.length; j++) {
                for (uint k = 0; k < _quantity; k++) {
                    uint8 gene = uint8(_classIds[j] / 100);
                    itemToken.mintItem(_owners[i], gene, _classIds[j], _price, k);
                }
            }
        }
    }

    function updateHeroMainAdmin(address _mainAdmin) onlyOwner external {
        heroToken.transferOwnership(_mainAdmin);
    }

    function updateItemMainAdmin(address _mainAdmin) onlyOwner external {
        itemToken.transferOwnership(_mainAdmin);
    }

    function updateGameNFT(address heroContact, address itemContract) onlyOwner external {
        itemToken = IGameNFT(itemContract);
        heroToken = IGameNFT(heroContact);
    }
}

