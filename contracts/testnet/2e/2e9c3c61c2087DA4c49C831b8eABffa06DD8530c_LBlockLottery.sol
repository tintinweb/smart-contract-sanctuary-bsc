pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Timers.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";

interface ILuckyBlockLottery {
    function setTicketToken(address tokenAddress) external;

    function buyTicket(uint256 numberOftokens)
        external
        returns (uint256 ticketId);

    function getNoOfTicketsSold() external pure returns (uint256 ticketsSold);

    function getTicketsByAddress(address userAddress)
        external
        pure
        returns (uint256[] memory userPurchasedTickets);

    function isSaleOn() external pure returns (bool checkSale);

    function launchLottery() external returns (bool launch);

    function setLotteryDuration(uint256 timeInSeconds)
        external
        returns (uint256 launchedBlock);

    function timeLeftForJackPot() external pure returns (uint256 timeLeft);

    function pickWinner() external view returns (address winner);

    function setTicketPrice(uint256 ticketPrice) external returns (bool verify);

    function getTicketPrice(uint256 getTicketPrice)
        external
        view
        returns (uint256 ticketPrice);

    function getTicketToken()
        external
        view
        returns (address tokenSetForLottery);

    function totalBalance() external view returns (address totalJackpotAmount);
}

contract LBlockLottery is Context, Ownable, ReentrancyGuard, VRFConsumerBase {
    using SafeMath for uint256;
    ERC20 tokenForLottery;
    uint256 lotteryId;
    uint256 totalJackpotAmount;
    uint256 ticketPrice;
    address admin;
    address nftWinnerAddress;
    address winner = owner();
    uint16 jackpotPercentage;
    uint16 charityPercentage;
    uint16 tokenHolderPercentage;
    uint16 lotteryPoolPercentage;
    uint256 jackPotAmount;
    uint256 charityAmount;
    uint256 lotteryPoolAmount;
    uint256 holderDistributionAmount;
    uint256 nftWinnerAmount;
    address tokenWalletPoolAddress;
    address tokenWalletHolderAddress;
    uint256 timeLeft;
    bytes32 internal keyHash;
    uint256 internal fee;
    uint256 randomResult;
    address VRFCoordinator;
    address LINKTokenAddress;
    uint256 ticketId;
    uint256 nftWinner;
    uint256 endDateTime;
    uint256 startDateTime;

    struct LotteryTicketHolders {
        uint256 lotteryId;
        uint256 ticketId;
        address lotteryTicketHolderAddress;
        string status;
        string result;
    }
    LotteryTicketHolders[] public lotteryTicketHolders;

    struct LotteryDetails {
        uint256 lotteryId;
        ERC20 tokenForLottery;
        uint256 ticketPrice;
    }
    LotteryDetails lotteryDetails;

    struct Charities {
        address charityAddress;
        uint256 percentage;
    }
    Charities[] charities;

    event BuyTicket(
        uint256 lotteryId,
        uint256 ticketId,
        address lotteryTicketHolderAddress,
        uint256
    );
    event JacpotWinner(
        uint256 lotteryId,
        uint256 ticketId,
        address winnerAddress,
        uint256 totalJackpotAmount
    );

    enum TicketStatus {
        saleOn,
        saleOff,
        saleHold
    }
    TicketStatus ticketStatus;

    modifier onlyOwnerAndAdmin() {
        require(owner() == _msgSender() || _msgSender() == admin, "Ownable: caller is not the owner or admin");
        _;
    }

    constructor(
        bytes32 _keyHash,
        uint256 _fee,
        address _chainlinkAddress,
        address _vrfCoordinator,
        address _ticketToken,
        address _admin,
        uint256 _lotteryId
    ) VRFConsumerBase(_vrfCoordinator, _chainlinkAddress) {
        _transferOwnership(_msgSender());
        setAdmin(_admin);
        VRFCoordinator = _vrfCoordinator;
        LINKTokenAddress = _chainlinkAddress;
        keyHash = _keyHash;
        fee = _fee * 10**18;
        setSaleOff();
        setTicketToken(_ticketToken);
        lotteryId = _lotteryId;
    }

    //Setting Lottery Details (creating the new lottery)
    function setLottery(
        uint256 _startDateTime,
        uint256 _endDateTime,
        uint256 _ticketPrice
    ) public onlyOwnerAndAdmin {
        require(TicketStatus.saleOff == ticketStatus, "Sorry, there is a sale going on.");
        setTicketPrice(_ticketPrice);
        startDateTime = _startDateTime;
        endDateTime = _endDateTime;
        lotteryDetails = LotteryDetails(
            lotteryId,
            tokenForLottery,
            ticketPrice
        );
    }

    function setEndDate(uint256 _endDateTime) public onlyOwnerAndAdmin {
        require(TicketStatus.saleOff == ticketStatus, "Sorry, there is a sale going on.");
        endDateTime = _endDateTime;
    }    

    //Set charity Wallet
    function setCharity(
        address _charityOne,
        address _charityTwo,
        address _charityThree,
        address _charityFour,
        uint256 _charityOnePercentage,
        uint256 _charityTwoPercentage,
        uint256 _charityThreePercentage,
        uint256 _charityFourPercentage
    ) public onlyOwnerAndAdmin {
        charities.push(Charities(_charityOne, _charityOnePercentage));
        charities.push(Charities(_charityTwo, _charityTwoPercentage));
        charities.push(Charities(_charityThree, _charityThreePercentage));
        charities.push(Charities(_charityFour, _charityFourPercentage));
    }

    //get Charity Wallet
    function getCharity()
        public
        view
        returns (
            address _charityOne,
            address _charityTwo,
            address _charityThree,
            address _charityFour
        )
    {
        return (
            charities[0].charityAddress,
            charities[1].charityAddress,
            charities[2].charityAddress,
            charities[3].charityAddress
        );
    }

    // getting Lottery Id
    function getLotteryId() public view returns (uint256) {
        return lotteryId;
    }

    // function for getting ticket token address
    function getTicketToken() public view returns (ERC20) {
        return tokenForLottery;
    }

    // set ticket token address(admin)
    function setTicketToken(address _tokenAddress) public onlyOwner {
        require(
            TicketStatus.saleOff == ticketStatus,
            "Not allowed to change token while sale is running."
        );
        require(_tokenAddress != address(0), "Set Valid ERC20 or BEP20 Token");
        tokenForLottery = ERC20(_tokenAddress);
    }

    function getLotteryDetails() public view returns (LotteryDetails memory) {
        return lotteryDetails;
    }

    function getFundsRaisedForCharity() public view returns (uint256) {
        return totalJackpotAmount.mul(charityPercentage).div(100);
    }

    // launch/start lottery(admin)
    function launchLottery() public onlyOwnerAndAdmin {
        require(
            TicketStatus.saleOff == ticketStatus,
            "Lottery already launched."
        );
        setSaleOn();
    }

    function getJackpotAmount() public view returns (uint256) {
        return totalJackpotAmount;
    }

    // get lottery time left for this lottery(user)
    function getLotteryTimeLeft() private returns(uint256) {
        if (block.timestamp >= endDateTime) {
            setSaleOff();
            timeLeft = 0;
        } else {
            timeLeft = endDateTime - block.timestamp;
        }
        return timeLeft;
    }

    function getTimeLeft() public view returns (uint256, uint256) {
        require(
            TicketStatus.saleOn == ticketStatus,
            "Sorry, there is no sale going on."
        );
        return ((endDateTime - block.timestamp), (endDateTime - startDateTime));
    }

    // approve the ticket before buying(user)
    function approve(uint256 _noOfTickets) public {
        uint256 _amount = ticketPrice * _noOfTickets.mul(10**9);
        ERC20(tokenForLottery).approve(address(this), _amount);
    }

    function verifyAllowance(address userAddress)
        public
        view
        returns (uint256)
    {
        uint256 allowance = tokenForLottery.allowance(
            userAddress,
            address(this)
        );
        return allowance;
    }

    // buying the ticket(user)
    function buyTicket(uint256 _noOfTickets) public {
        getLotteryTimeLeft();
        require(
            TicketStatus.saleOn == ticketStatus,
            "Sorry, there is no sale going on."
        );
        require(_noOfTickets > 0, "Please select number of tickets.");
        uint256 _amount = ticketPrice * _noOfTickets.mul(10**9);
        ERC20(tokenForLottery).approve(address(this), _amount);
        uint256 allowance = verifyAllowance(_msgSender());
        require(allowance >= _amount, "Check the token allowance");
        ERC20(tokenForLottery).transferFrom(_msgSender(), address(this), _amount);
        totalJackpotAmount += _amount;
        for (uint256 i = 0; i < _noOfTickets; i++) {
            ticketId = uint(keccak256(abi.encodePacked(_msgSender(), lotteryTicketHolders.length+1, block.timestamp)));
            lotteryTicketHolders.push(LotteryTicketHolders(lotteryId, ticketId, _msgSender(), "VALID", "PENDING"));
            emit BuyTicket(lotteryId, ticketId, _msgSender(), block.timestamp);
        }
    }

    function getCurrentLotteryTicketSalesStatus() public view returns(string memory){
         if(TicketStatus.saleOn == ticketStatus){
            return("SaleOn");
        }
        if(TicketStatus.saleOff == ticketStatus){
            return("SaleOff");
        }
        if(TicketStatus.saleHold == ticketStatus){
            return("SaleHold");
        }
    }

    function setSaleOn() public onlyOwner {
        ticketStatus = TicketStatus.saleOn;
    }

    function setSaleHold() public onlyOwner {
        ticketStatus = TicketStatus.saleHold;
    }

    function setSaleOff() public onlyOwner {
        ticketStatus = TicketStatus.saleOff;
    }

    // set ticket price(admin)
    function setTicketPrice(uint256 _amount) public onlyOwnerAndAdmin {
        require(TicketStatus.saleOff == ticketStatus, "Not allowed to change the ticket price while sale is running.");
        ticketPrice = _amount;
    }

    // get ticket price(user)
    function getTicketPrice() public view returns (uint256) {
        return ticketPrice;
    }

    // set the admin address who can act as owner(admin)
    function setAdmin(address _adminAddress) public onlyOwner {
        admin = _adminAddress;
    }

    // get admin address(admin)
    function getAdmin() public view returns (address) {
        return admin;
    }

    // set lottery percentages to share lottery amount(admin)
    function setLotteryPercentages(
        uint16 _jackpot,
        uint16 _charity,
        uint16 _tokenHolders,
        uint16 _lotteryPool
    ) public {
        require(
            _jackpot + _charity + _tokenHolders + _lotteryPool == 100,
            "Make sure the percentage is always equal to 100"
        );
        jackpotPercentage = _jackpot;
        charityPercentage = _charity;
        tokenHolderPercentage = _tokenHolders;
        lotteryPoolPercentage = _lotteryPool;
    }

    function setNftWinnerAddress(address _nftWinnerAddress) public {
        nftWinnerAddress = _nftWinnerAddress;
    }

    function getNftWinnerAddress() public view returns(address) {
        return nftWinnerAddress;
    }

    // to get distributed addresses that which jackpot funds will be shared
    function getDistributeAddresses() public view returns (address, address) {
        return (tokenWalletHolderAddress, tokenWalletPoolAddress);
    }

    // get lottery percentages(admin)
    function getLotteryPercentages()
        public
        view
        returns (
            uint16 _jackpot,
            uint16 _charity,
            uint16 _tokenHolders,
            uint16 _lotteryPool
        )
    {
        return (
            jackpotPercentage,
            charityPercentage,
            tokenHolderPercentage,
            lotteryPoolPercentage
        );
    }

    function jackpotWinner(uint256[] memory charityPercentages) public onlyOwner {
        require(
            TicketStatus.saleOff == ticketStatus,
            "You can't pick winner when sale is running!"
        );
        randomResult = uint256(getRandomNumber());
        nftWinner = randomResult % 10000;
        payWinner(charityPercentages);
    }

    function pickNftWinner() public view returns(uint256) {
        return nftWinner;
    }

    function getRandomNumber() private returns (bytes32 requestId) {
        require(
            LINK.balanceOf(address(this)) >= fee,
            "Not enough LINK in contract"
        );
        return requestRandomness(keyHash, fee);
    }

    function fulfillRandomness(bytes32 requestId, uint256 _randomness) internal override {
        randomResult = _randomness;
    }

    function getNumberOfTicketsSold() public view returns (uint256) {
        return lotteryTicketHolders.length;
    }

    function setDistributeAddresses(
        address _tokenWalletHolderAddress,
        address _tokenWalletPoolAddress
    ) public onlyOwner {
        tokenWalletHolderAddress = _tokenWalletHolderAddress;
        tokenWalletPoolAddress = _tokenWalletPoolAddress;
    }

    function payWinner(uint256[] memory charityPercentages) internal onlyOwner {
        uint256 index = randomResult % lotteryTicketHolders.length;
        jackPotAmount = calculateAmount(jackpotPercentage);
        holderDistributionAmount = calculateAmount(tokenHolderPercentage);
        charityAmount = calculateAmount(charityPercentage);
        lotteryPoolAmount = calculateAmount(lotteryPoolPercentage);
        if (jackPotAmount > 0) {
            ERC20(tokenForLottery).transfer(
                lotteryTicketHolders[index].lotteryTicketHolderAddress,
                jackPotAmount
            );
        }
        if (holderDistributionAmount > 0) {
            ERC20(tokenForLottery).transfer(
                tokenWalletHolderAddress,
                holderDistributionAmount
            );
        }
        if (lotteryPoolAmount > 0) {
            ERC20(tokenForLottery).transfer(
                tokenWalletPoolAddress,
                lotteryPoolAmount * 98/100
            );
        }
        distributeCharityFunds(charityPercentages);
        emit JacpotWinner(
            lotteryId,
            lotteryTicketHolders[index].ticketId,
            lotteryTicketHolders[index].lotteryTicketHolderAddress,
            totalJackpotAmount
        );
    }

    function sendNftFunds() public onlyOwner {
        ERC20(tokenForLottery).transfer(nftWinnerAddress, lotteryPoolAmount * 2/100);
    }

    function distributeCharityFunds(uint256[] memory charityPercentages)
        private
    {
        if (charityPercentages.length > 0) {
            ERC20(tokenForLottery).transfer(
                charities[0].charityAddress,
                charityAmount.mul(charityPercentages[0]).div(100)
            );
            ERC20(tokenForLottery).transfer(
                charities[1].charityAddress,
                charityAmount.mul(charityPercentages[1]).div(100)
            );
            ERC20(tokenForLottery).transfer(
                charities[2].charityAddress,
                charityAmount.mul(charityPercentages[2]).div(100)
            );
            ERC20(tokenForLottery).transfer(
                charities[3].charityAddress,
                charityAmount.mul(charityPercentages[3]).div(100)
            );
        } else {
            ERC20(tokenForLottery).transfer(
                charities[0].charityAddress,
                charityAmount.mul(charities[0].percentage).div(100)
            );
            ERC20(tokenForLottery).transfer(
                charities[1].charityAddress,
                charityAmount.mul(charities[1].percentage).div(100)
            );
            ERC20(tokenForLottery).transfer(
                charities[2].charityAddress,
                charityAmount.mul(charities[2].percentage).div(100)
            );
            ERC20(tokenForLottery).transfer(
                charities[3].charityAddress,
                charityAmount.mul(charities[3].percentage).div(100)
            );
        }
    }

    function calculateAmount(uint256 percentage)
        internal
        view
        returns (uint256)
    {
        return totalJackpotAmount.mul(percentage).div(100);
    }
}

