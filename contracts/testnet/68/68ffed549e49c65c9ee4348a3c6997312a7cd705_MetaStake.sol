contract MetaStake is Ownable,ReentrancyGuard,Pausable {

    struct userDetails {
        uint256 depositAmount;
        uint256 stakePercent;
        uint256 reward;
        uint256 depositTime;
        uint256 unstakeTime;
    }

    IBEP20 public stakedToken;
  
    uint256 public duration = 1 days;
    uint256 public apyPercent = 12e18;
    uint256 public stakeDuration = 365 days;

    mapping (address => uint256) public userID;
    mapping (address => mapping(uint256 => userDetails)) public investDetails;

    event Stake(address indexed from,uint256 amount,uint256 id,uint256 time);
    event Withdraw(address indexed from,uint256 amount,uint256 id,uint256 time);
    event EmergencyWithdraw(address indexed from,address indexed to,uint256 amount,address token,uint256 time);

    constructor (IBEP20 _stake) {
         stakedToken = _stake;
    }

    function updatePlan (uint256 _percent,uint256 _duration) external onlyOwner {
        require (_percent > 0 && _duration > 0,"incorrect params");
        apyPercent = _percent;
        stakeDuration = _duration;
    }

    function updateTokens (IBEP20 _stake) external onlyOwner {
        stakedToken = _stake;
    }

    function updateDurations(uint256 _duration) external onlyOwner {
        duration = _duration;
    }

    function stake(uint256 _amount) public nonReentrant whenNotPaused {
        require(_amount > 0,"incorrect params");
        userID[msg.sender]++;
        userDetails storage user = investDetails[msg.sender][userID[msg.sender]];
        require(stakeDuration > 0,"invalid plan");
        tokenSafeTransferFrom(stakedToken,msg.sender,address(this),_amount);
        user.depositAmount = _amount;
        user.depositTime = block.timestamp;
        user.unstakeTime = user.depositTime + stakeDuration;
        user.stakePercent = apyPercent;
        emit Stake(msg.sender,_amount,userID[msg.sender],block.timestamp);
    }

    function unStake(uint256 _id) public nonReentrant whenNotPaused {
        userDetails storage user = investDetails[msg.sender][_id];
        require(user.depositTime > 0 && user.depositAmount > 0,"Invalid user");
        require(block.timestamp >= user.unstakeTime,"Not eligible to withdraw");
        uint _reward = this.viewReward(_msgSender(),_id);
        tokenSafeTransfer(stakedToken,msg.sender,user.depositAmount + _reward);
        user.reward += _reward;
        emit Withdraw(msg.sender,user.depositAmount + _reward,_id,block.timestamp);
        user.depositAmount = 0;
    }

