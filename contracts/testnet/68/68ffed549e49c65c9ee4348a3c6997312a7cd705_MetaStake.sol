        userDetails storage user = investDetails[_msgSender()][_id];
        require(user.depositTime > 0 && user.depositAmount > 0,"Invalid user");
        uint256 reward = this.viewReward(_msgSender(),_id);

        require(reward > 0,'NO_REWARD');
        tokenSafeTransfer(stakedToken,_msgSender(),reward);
        user.reward += reward;
    }

