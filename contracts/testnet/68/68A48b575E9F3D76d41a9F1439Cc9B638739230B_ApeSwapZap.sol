pragma solidity 0.8.6;

import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import './lib/IUniRouter02.sol';
import './lib/IApeFactory.sol';

contract ApeSwapZap {
    IUniRouter02 public router;
    IApeFactory public factory;

    constructor(address _router) {
        router = IUniRouter02(_router);
        factory = IApeFactory(router.factory());
    }

    function zap(
        address _inputToken,
        uint256 _inputAmount,
        address[] memory _lpTokens, //[tokenA, tokenB]
        address[] memory _path0,
        address[] memory _path1,
        uint256[] memory _minAmountsSwap, //[A, B]
        uint256[] memory _minAmountsLP, //[amountAMin, amountBMin]
        address _to,
        uint256 _deadline
    ) external {
        IERC20 inputToken = IERC20(_inputToken);
        inputToken.transferFrom(msg.sender, address(this), _inputAmount);
        inputToken.approve(address(router), _inputAmount);

        address lpToken0 = _lpTokens[0];
        address lpToken1 = _lpTokens[1];
        require(_lpTokens.length == 2, 'ApeSwapZap: 2 tokens form a LP');
        require(
            factory.getPair(lpToken0, lpToken1) != address(0),
            'ApeSwapZap: Pair doesnt exist'
        );

        if (lpToken0 != _inputToken) {
            IERC20(_lpTokens[0]).approve(address(router), _inputAmount / 2);
            router.swapExactTokensForTokens(
                _inputAmount / 2,
                _minAmountsSwap[0],
                _path0,
                address(this),
                _deadline
            );
        }

        if (lpToken1 != _inputToken) {
            IERC20(_lpTokens[1]).approve(address(router), _inputAmount / 2);
            router.swapExactTokensForTokens(
                _inputAmount / 2,
                _minAmountsSwap[1],
                _path1,
                address(this),
                _deadline
            );
        }

        router.addLiquidity(
            lpToken0,
            lpToken1,
            IERC20(lpToken0).balanceOf(address(this)),
            IERC20(lpToken1).balanceOf(address(this)),
            _minAmountsLP[0],
            _minAmountsLP[1],
            _to,
            _deadline
        );
    }
}

