import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";

import "./interfaces/ISwap.sol";
import "./interfaces/IPancakeRouter02.sol";
import "./interfaces/IPancakeRouter01.sol";

contract Aggregator is Initializable, OwnableUpgradeable, ReentrancyGuardUpgradeable {
    using SafeERC20 for IERC20;

    address[] public routers;
    mapping(address => bool) public isRouter;
    address public swap;
    address public wvlx;
    address public stVLX;

    event RouterAdded(address router);
    event RouterRemoved(address router);

    function initialize() public initializer {
        __Context_init_unchained();
        __Ownable_init_unchained();
        __ReentrancyGuard_init_unchained();
    }

    function buyStVLX(address router) external payable nonReentrant {
        if (router == swap) {
            ISwap(swap).depositFor{ value: msg.value }(msg.sender);
        } else {
            require(isRouter[router], "Not valid router");

            address[] memory path = new address[](2);
            path[0] = wvlx;
            path[1] = stVLX;

            IPancakeRouter01(router).swapExactETHForTokens{ value: msg.value }(0, path, msg.sender, block.timestamp);
        }
    }

    function sellStVLX(address router, uint256 amount) external nonReentrant {
        IERC20(stVLX).safeTransferFrom(msg.sender, address(this), amount);
        if (router == swap) {
            ISwap(swap).withdrawFor(amount, msg.sender);
        } else {
            require(isRouter[router], "Not valid router");

            address[] memory path = new address[](2);
            path[0] = stVLX;
            path[1] = wvlx;

            if (IERC20(stVLX).allowance(address(this), router) < amount) {
                IERC20(stVLX).approve(router, amount);
            }

            IPancakeRouter01(router).swapExactTokensForETH(amount, 0, path, msg.sender, block.timestamp);
        }
    }

    function getEstimatedStVLX(uint256 vlxAmount) external view returns (address[] memory, uint256[] memory) {
        address[] memory estRouters = new address[](routers.length + 1);
        uint256[] memory estValues = new uint256[](routers.length + 1);

        // swap
        estRouters[0] = swap;
        estValues[0] = ISwap(swap).getStVLXOfVLX(vlxAmount);

        address[] memory path = new address[](2);
        path[0] = wvlx;
        path[1] = stVLX;

        //
        for (uint256 index = 0; index < routers.length; index++) {
            estRouters[index + 1] = routers[index];

            uint256[] memory outAmounts = IPancakeRouter01(routers[index]).getAmountsOut(vlxAmount, path);

            estValues[index + 1] = outAmounts[1];
        }

        return (estRouters, estValues);
    }

    function getEstimatedVLX(uint256 stVlxAmount) external view returns (address[] memory, uint256[] memory) {
        address[] memory estRouters = new address[](routers.length + 1);
        uint256[] memory estValues = new uint256[](routers.length + 1);

        // swap
        estRouters[0] = swap;
        estValues[0] = ISwap(swap).getVLXOfStVLX(stVlxAmount);

        address[] memory path = new address[](2);
        path[0] = stVLX;
        path[1] = wvlx;

        //
        for (uint256 index = 0; index < routers.length; index++) {
            estRouters[index + 1] = routers[index];

            uint256[] memory outAmounts = IPancakeRouter01(routers[index]).getAmountsOut(stVlxAmount, path);

            estValues[index + 1] = outAmounts[1];
        }

        return (estRouters, estValues);
    }

    function setSwap(address _swap) external onlyOwner {
        require(_swap != address(0), "Invalid");
        swap = _swap;
    }

    function setWVLX(address _wvlx) external onlyOwner {
        require(_wvlx != address(0), "Invalid");
        wvlx = _wvlx;
    }

    function setStVLX(address _stVLX) external onlyOwner {
        require(_stVLX != address(0), "Invalid");
        stVLX = _stVLX;
    }

    function addRouter(address router) external onlyOwner {
        require(router != address(0), "Invalid");
        require(!isRouter[router], "Already added");

        routers.push(router);
        isRouter[router] = true;

        emit RouterAdded(router);
    }

    function removeRouter(address router) external onlyOwner {
        require(router != address(0), "Invalid");
        require(isRouter[router], "Not added");

        for (uint256 index = 0; index < routers.length; index++) {
            if (routers[index] == router) {
                if (index < routers.length - 1) {
                    routers[index] = routers[routers.length - 1];
                }
                routers.pop();
                break;
            }
        }

        isRouter[router] = false;

        emit RouterRemoved(router);
    }

    receive() external payable {}
}

