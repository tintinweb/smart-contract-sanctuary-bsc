pragma solidity >=0.7.0 <0.9.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract ScrRedemption is Pausable, Ownable {
    using Strings for uint256;
    using SafeMath for uint256;

    constructor(
        address _ownershipContractAddress,
        address _treasury,
        address _buybackWallet,
        address _scrContract
    ) {
        require(_ownershipContractAddress != address(0), "S_SRD_100");
        require(_treasury != address(0), "S_SRD_101");
        require(_buybackWallet != address(0), "S_SRD_102");
        require(_scrContract != address(0), "S_SRD_103");
        blucamonOwnershipContract = _ownershipContractAddress;
        setter = msg.sender;
        treasury = _treasury;
        buybackWallet = _buybackWallet;
        scrContract = _scrContract;
    }

    address blucamonOwnershipContract;
    address setter;
    string prefixTokenUri;
    address public treasury;
    address public buybackWallet;
    address public scrContract;
    uint256 buybackPercent = 20_00;
    uint256 redemptionPrice = 100 ether;

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function setOwner(address _address) external onlyOwner {
        require(_address != address(0), "S_SRD_200");
        transferOwnership(_address);
    }

    function setPrefixTokenUri(string memory _newPrefixTokenUri)
        external
        onlyOwner
    {
        prefixTokenUri = _newPrefixTokenUri;
    }

    function setBuybackPercent(uint256 _buybackPercent) external onlyOwner {
        require(_buybackPercent <= 10000, "S_SRD_300");
        buybackPercent = _buybackPercent;
    }

    function setRedemptionPrice(uint256 _price) external onlyOwner {
        require(_price > 0, "S_SRD_400");
        redemptionPrice = _price;
    }

    function redeemEgg() external whenNotPaused {
        uint256 buybackPrice = redemptionPrice.mul(buybackPercent).div(10000);
        uint256 treasuryPrice = redemptionPrice - buybackPrice;
        (bool transferResult, ) = scrContract.call(
            abi.encodeWithSignature(
                "transferFrom(address,address,uint256)",
                msg.sender,
                buybackWallet,
                buybackPrice
            )
        );
        require(transferResult, "S_SRD_500");
        (transferResult, ) = scrContract.call(
            abi.encodeWithSignature(
                "transferFrom(address,address,uint256)",
                msg.sender,
                treasury,
                treasuryPrice
            )
        );
        require(transferResult, "S_SRD_600");
        uint256 newBlucamonId = getBlucamonId().add(1);
        string memory tokenUri = getTokenUri(newBlucamonId);
        (bool mintResult, ) = blucamonOwnershipContract.call(
            abi.encodeWithSignature(
                "mintBlucamon(address,string,bool,uint8,uint256,uint8)",
                msg.sender,
                tokenUri,
                false,
                7,
                0,
                0
            )
        );
        require(mintResult, "S_SRD_700");
    }

    function getBlucamonId() private returns (uint256) {
        (bool result, bytes memory idData) = blucamonOwnershipContract.call(
            abi.encodeWithSignature("getBlucamonId()")
        );
        require(result, "S_SRD_800");
        return abi.decode(idData, (uint256));
    }

    function getTokenUri(uint256 _id) private view returns (string memory) {
        return string(abi.encodePacked(prefixTokenUri, _id.toString()));
    }
}

