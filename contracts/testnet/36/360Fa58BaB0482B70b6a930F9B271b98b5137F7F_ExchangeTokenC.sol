pragma solidity ^0.7.6;

import "./access/Ownable.sol";
import "./ERC20/SafeERC20.sol";
import "./math/SafeMath.sol";

contract ExchangeTokenC is Ownable {
  event Exchange(address indexed user, uint256 depositAmount, uint256 receivedAmount);
  event SetTokens(address tokenIn, address tokenVault);

  using SafeERC20 for IERC20;
  using SafeMath for uint256;

  IERC20 public tokenIn;
  IERC20 public tokenVault;
  
  uint public constant MAX_LENGTH = 5;

  address[] public blacklist;

  constructor() {
    tokenIn = IERC20(0x9262B157C60DDEf850FE7c082b9fc7e16748d15D); // Share
    tokenVault = IERC20(0xcD5dc972DBC4dF70F64871D87Ae8f64D32988279); // CIG
  }

  function exchangeToken(uint256 _amountTokenIn) external {
    uint256 tSupply = tokenIn.totalSupply(); // total Supply
    uint256 cSupply = tSupply.sub(tokenIn.balanceOf(address(this))); // circulating supply
    
    for (uint i = 0; i < blacklist.length; i++) {
      cSupply = cSupply.sub(tokenIn.balanceOf(blacklist[i]));
    }

    uint256 amountOut = tokenVault.balanceOf(address(this)).mul(_amountTokenIn).div(cSupply);
    tokenIn.safeTransferFrom(msg.sender, address(this), _amountTokenIn);
    tokenIn.burn(_amountTokenIn);
    tokenVault.safeTransfer(msg.sender, amountOut);
    emit Exchange(msg.sender, _amountTokenIn, amountOut);
  }

  function withdraw() external onlyOwner {
    msg.sender.transfer(address(this).balance);
  }

  function withdrawToken(address token) external onlyOwner {
    IERC20(token).safeTransfer(msg.sender, IERC20(token).balanceOf(address(this)));
  }

  function getBlacklist() public view returns(address[] memory) {
    return blacklist;
  }

  function setBlacklist(address[] memory _blackListAddresses) public onlyOwner {
    require(_blackListAddresses.length <= MAX_LENGTH, "Oversize array!");
    blacklist = _blackListAddresses;
  }

  function setTokens(address _tokenIn, address _tokenVault) external onlyOwner {
    require(_tokenIn != address(0) && _tokenVault != address(0), "Can not be address 0!");
    tokenIn = IERC20(_tokenIn);
    tokenVault = IERC20(_tokenVault);
    emit SetTokens(_tokenIn, _tokenVault);
  }
}

