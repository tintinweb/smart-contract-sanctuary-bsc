    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    address public projectOwner;
    address public tokenAddress;
    IERC20 public ERC20Interface;
    uint256 public tokens=0;

    /**
     * @notice The stakes for each stakeholder.
     */
    struct stakeData {
        address _address;
        uint256 _balance;
        uint256 _duration;
        uint256 _reward;
        uint256 _createdAt;
    }
    mapping(uint256 => stakeData) public stakes;
    mapping(address => uint256) public rewardDuration;

    /**
     * @notice The constructor for the Staking Token.
     * @param _owner The address to receive all tokens on construction.
     * @param _supply The amount of tokens to mint on construction.
     */
    constructor(address _tokenAddress, address _owner, uint256 _supply) 
        public
    { 
        _mint(_owner, _supply);
        projectOwner = _owner;
        tokenAddress = _tokenAddress;
        ERC20Interface = IERC20(tokenAddress);
    }

    // ---------- STAKES ----------

    /**
     * @notice A method for a stakeholder to create a stake.
     * @param _stake The size of the stake to be created.
     */
    function createStake(uint256 _stake, uint256 _days)
        public
    {
        tokens=tokens+1;
        uint256 rewardCount=0;
        if(_days==7){
            rewardCount=rewardCount+((_stake*5)/100);
        }
        if(_days==14){
            rewardCount=rewardCount+((_stake*11)/100);
        }
        if(_days==30){
            rewardCount=rewardCount+((_stake*25)/100);
        }
        if(_days==60){
            rewardCount=rewardCount+((_stake*40)/100);
        }
        if(_days==90){
            rewardCount=rewardCount+((_stake*55)/100);
        }
        if(_days==180){
            rewardCount=rewardCount+((_stake*75)/100);
        }
        stakes[tokens]=stakeData(msg.sender, _stake, _days, rewardCount, block.timestamp);
        ERC20Interface.safeTransferFrom(msg.sender, projectOwner, _stake);
    }

    function stakeOf(uint256 _token)
        public
        view
        returns(uint256)
    {
        return stakes[_token]._balance;
    }

    function totalStakes()
        public
        view
        returns(uint256)
    {
        uint256 _totalStakes = 0;
        for (uint256 s = 0; s <= tokens; s ++){
            _totalStakes = _totalStakes.add(stakes[s]._balance);
        }
        return _totalStakes;
    }

    function rewardOf(uint256 _token) 
