pragma solidity ^0.8.6;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";
import "./IERC721Minter.sol";
import "./IPriceManager.sol";

contract NFTAdminCrafting is AccessControl {
    error WrongItemLengths();
    error InvalidAddress();

    bytes4 public constant ERC721_MINTER_INTERFACE_ID = type(IERC721Minter).interfaceId;
    bytes4 public constant PRICE_MANAGER_INTERFACE_ID = type(IPriceManager).interfaceId;
    bytes32 public constant CRAFTER_ROLE = keccak256("CRAFTER_ROLE");

    IERC721Minter public nftContract;
    IPriceManager public priceManagerContract;

    event NFTCrafted(address indexed to, uint256 indexed craftItemId, uint256 tokenId);

    constructor(address _nftContract, address _priceManagerContract) {
        _updateNFTContract(_nftContract);
        _updatePriceManagerContract(_priceManagerContract);

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(CRAFTER_ROLE, msg.sender);
    }

    function updateNFTContract(address _nftContract) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _updateNFTContract(_nftContract);
    }

    function updatePriceManagerContract(address _priceManagerContract) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _updatePriceManagerContract(_priceManagerContract);
    }

    function craftMultipleNFT(address to, uint256[] calldata craftItemIds) external onlyRole(CRAFTER_ROLE) {
        for (uint256 i = 0; i < craftItemIds.length; i++) {
            craftNFT(to, craftItemIds[i]);
        }
    }

    function craftNFT(address to, uint256 craftItemId) public onlyRole(CRAFTER_ROLE) {
        if (!priceManagerContract.isCraftItemExists(craftItemId)) revert IPriceManager.ItemDoesNotExists();

        uint256 tokenId = nftContract.safeMint(to);

        emit NFTCrafted(to, craftItemId, tokenId);
    }

    function _updateNFTContract(address _nftContract) private {
        if (!ERC165Checker.supportsInterface(_nftContract, ERC721_MINTER_INTERFACE_ID)) revert InvalidAddress();

        nftContract = IERC721Minter(_nftContract);
    }

    function _updatePriceManagerContract(address _priceManagerContract) private {
        if (!ERC165Checker.supportsInterface(_priceManagerContract, PRICE_MANAGER_INTERFACE_ID)) revert InvalidAddress();

        priceManagerContract = IPriceManager(_priceManagerContract);
    }
}

