pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/token/ERC20/extensions/ERC20VotesUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "prb-math/contracts/PRBMathUD60x18.sol";
import "./interfaces/IERC20Burnable.sol";

contract RLND is UUPSUpgradeable, OwnableUpgradeable, ERC20VotesUpgradeable {

    using PRBMathUD60x18 for uint256;

    address public dao;
    address public reward;
    mapping(address => bool) public whitelist;
    uint256 public maxSupply;
    address public plnd;
    uint256 public burnPercent;
    uint256 public daoPercent;
    uint256 public rewardPercent;

    uint256 public swapUnit;
    uint256 public roundAmount;
    uint256 public currentRound;
    uint256 public currentRoundRate;
    uint256 public currentRoundBalance;

    event Swapped(address indexed account, uint256 amountIn, uint256 amountOut);
    event WhitelistUpdated(address indexed account, bool status);

    modifier onlyOwnerOrGovernor() {
        require(msg.sender == owner() || msg.sender == dao, "RLND: Only owner or governor!");
        _;
    }

    function initialize(uint256 _initialSupply, address _dao, address _reward, address _plnd) public initializer {
        OwnableUpgradeable.__Ownable_init();
        ERC20Upgradeable.__ERC20_init("Reward Land Token", "RLND");
        ERC20VotesUpgradeable.__ERC20Votes_init();
        
        _mint(owner(), _initialSupply);
        dao = _dao;
        reward = _reward;
        plnd = _plnd;
        burnPercent = 1000;
        daoPercent = 1000;
        rewardPercent = 1000;
        
        maxSupply = 1000000000e18;
        swapUnit = 10000e18;
        roundAmount = 1000000e18;
        currentRound = 1;
        currentRoundRate = 1e18;
        currentRoundBalance = roundAmount;
    }

    function _authorizeUpgrade(address newImplementation) internal view override onlyOwnerOrGovernor {}

    function _transfer(address from, address to, uint256 amount) internal override {
        if (whitelist[from] || whitelist[to]) {
            super._transfer(from, to, amount);
        } else {
            uint256 burnAmount = amount * burnPercent / 1e6;
            uint256 daoAmount = amount * daoPercent / 1e6;
            uint256 rewardAmount = amount * rewardPercent / 1e6;

            _burn(from, burnAmount);
            super._transfer(from, dao, daoAmount);
            super._transfer(from, reward, rewardAmount);
            super._transfer(from, to, amount - burnAmount - daoAmount - rewardAmount);
        }
    }

    function swap(address to, uint256 amount) public {
        require(IERC20Burnable(plnd).balanceOf(to) >= amount, "RLND: Swap amount exceeds PLND balance!");
        uint256 amountIn = amount / swapUnit * swapUnit;
        require(amountIn > 0, "RLND: Your PLND balance is not enough for minimum swap!");

        IERC20Burnable(plnd).burn(msg.sender, amountIn);
        uint256 amountOut = _calcAmountOut(amountIn, 0);
        require(totalSupply() + amountOut <= maxSupply, "RLND: Max supply reached!");

        _mint(to, amountOut);
        emit Swapped(to, amountIn, amountOut);
    }

    function _calcAmountOut(uint256 amountIn, uint256 amountOut) internal returns (uint256){

        uint256 out = amountIn * 1e18 / currentRoundRate;
        if (out < currentRoundBalance) {
            currentRoundBalance -= out;
            amountOut += out;
            return amountOut;
        } else if (out == currentRoundBalance) {
            // set next round
            currentRound += 1;
            currentRoundRate = currentRoundRate * ratio(currentRound) / 1e18;
            currentRoundBalance = roundAmount;
            amountOut += out;
            return amountOut;
        } else {
            // in- out+
            uint256 amountInSwapped = currentRoundBalance * currentRoundRate / 1e18;
            amountIn -= amountInSwapped;
            amountOut += currentRoundBalance;
            // go to next round
            currentRound += 1;
            currentRoundRate = currentRoundRate * ratio(currentRound) / 1e18;
            currentRoundBalance = roundAmount;
            return _calcAmountOut(amountIn, amountOut);
        }
    }

    function ratio(uint256 round) public pure returns (uint256 result){
        if (round == 1)
            return 1e18;
        uint256 round_d18 = round * 1e18;
        uint256 base = 15e17;
        result = 1e18 + 5e35 / (round_d18.log2() * 1e18 / base.log2() * 3);
    }

    function setDao(address _dao) external onlyOwnerOrGovernor {
        dao = _dao;
    }

    function setReward(address _reward) external onlyOwnerOrGovernor {
        reward = _reward;
    }
    
    function setWhitelist(address _address, bool _status) external onlyOwnerOrGovernor {
        require(_address != address(0), "PLND: Address can not be zero!");
        whitelist[_address] = _status;
        emit WhitelistUpdated(_address, _status);
    }

    function setMaxSupply(uint256 _maxSupply) external onlyOwnerOrGovernor {
        maxSupply = _maxSupply;
    }

    function setPlnd(address _plnd) external onlyOwnerOrGovernor {
        plnd = _plnd;
    }

    function setBurnPercent(uint256 _burnPercent) external onlyOwnerOrGovernor {
        burnPercent = _burnPercent;
    }

    function setDaoPercent(uint256 _daoPercent) external onlyOwnerOrGovernor {
        daoPercent = _daoPercent;
    }

    function setRewardPercent(uint256 _rewardPercent) external onlyOwnerOrGovernor {
        rewardPercent = _rewardPercent;
    }

    function setSwapUnit(uint256 _swapUnit) external onlyOwnerOrGovernor {
        swapUnit = _swapUnit;
    }

    function setRoundAmount(uint256 _roundAmount) external onlyOwnerOrGovernor {
        roundAmount = _roundAmount;
    }
}

