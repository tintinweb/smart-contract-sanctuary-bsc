import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";


contract KKKToken is Ownable, IERC20, IERC20Metadata {
    
    mapping(address => uint256) private _balances;
    mapping(address => mapping(address => uint256)) private _allowances;

    uint256 public _totalSupply = 2100000000 * 10 ** 18;
    string private _name = "KKK Token";
    string private _symbol = "KKK";

    address public burnAddress = 0x000000000000000000000000000000000000dEaD;
    address public liquidityAddress = 0x000000000000000000000000000000000000dEaD;
    uint256 public liquidityFee = 3000;
    mapping (address => bool) public isExcludedFromFee;
    uint256 private constant MAX = ~uint256(0);

    struct LockInfo {
        uint256 userLockTotal;
        uint256 userBalance;
        uint256 userRelease;
        uint256 perReleaseSecond;
        uint256 lastReleaseTime;
    }

    mapping (address => LockInfo[]) public userLock;

    constructor() public {
        isExcludedFromFee[_msgSender()] = true;
        isExcludedFromFee[address(this)] = true;
        isExcludedFromFee[burnAddress] = true;
        isExcludedFromFee[liquidityAddress] = true;

        _balances[_msgSender()] = _totalSupply;
        emit Transfer(address(0), _msgSender(), _totalSupply);
    }

    function buy(address account, uint256 tokenNum) public onlyOwner {
        LockInfo[] storage lockInfoList = userLock[account];
        LockInfo memory lockInfo = LockInfo(tokenNum, 0, 0, tokenNum / 120 days, block.timestamp);
        lockInfoList.push(lockInfo);

        update(account);
    }

    function update(address account) private {
        LockInfo[] storage lockInfoList = userLock[account];
        for (uint i = 0; i < lockInfoList.length; i++) {
            LockInfo storage lockInfo = lockInfoList[i];
            uint256 pendding = (block.timestamp - lockInfo.lastReleaseTime) * lockInfo.perReleaseSecond; 
            if (pendding == 0) continue;

            if(lockInfo.userRelease + pendding >= lockInfo.userLockTotal) {
                pendding = lockInfo.userLockTotal - lockInfo.userRelease;
                lockInfo.perReleaseSecond = 0;
            }

            lockInfo.userRelease += pendding;
            lockInfo.userBalance += pendding;
            lockInfo.lastReleaseTime = block.timestamp;
        }
    }

    function releaseBalance(address account) private returns (uint256) {
        LockInfo[] memory lockInfoList = userLock[account];

        uint256 totalBalance = 0;
        for (uint i = 0; i < lockInfoList.length; i++) {
            LockInfo memory lockInfo = lockInfoList[i];
            uint256 pendding = (block.timestamp - lockInfo.lastReleaseTime) * lockInfo.perReleaseSecond; 
            if(lockInfo.userRelease + pendding >= lockInfo.userLockTotal) {
                pendding = lockInfo.userLockTotal - lockInfo.userRelease;
            }

            totalBalance += lockInfo.userBalance;
            totalBalance += pendding; 
        }

        return totalBalance;
    }

    function name() public view virtual override returns (string memory) {
        return _name;
    }

    function symbol() public view virtual override returns (string memory) {
        return _symbol;
    }

    function decimals() public view virtual override returns (uint8) {
        return 18;
    }

    function totalSupply() public view virtual override returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view virtual override returns (uint256) {
        uint256 bal = _balances[account];
        LockInfo[] memory lockInfoList = userLock[account];

        uint256 totalBalance = 0;
        for (uint i = 0; i < lockInfoList.length; i++) {
            LockInfo memory lockInfo = lockInfoList[i];
            uint256 pendding = (block.timestamp - lockInfo.lastReleaseTime) * lockInfo.perReleaseSecond; 
            if(lockInfo.userRelease + pendding >= lockInfo.userLockTotal) {
                pendding = lockInfo.userLockTotal - lockInfo.userRelease;
            }

            totalBalance += lockInfo.userBalance;
            totalBalance += pendding; 
        }

        return bal + totalBalance;
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        _approve(msg.sender, spender, amount);
        return true;
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _transfer(msg.sender, recipient, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        _transfer(sender, recipient, amount);
        if (_allowances[sender][msg.sender] != MAX) {
            _allowances[sender][msg.sender] = _allowances[sender][msg.sender] - amount;
        }
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue) public virtual returns (bool) {
        address owner = owner();
        _approve(owner, spender, allowance(owner, spender) + addedValue);
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public virtual returns (bool) {
        address owner = owner();
        uint256 currentAllowance = allowance(owner, spender);
        require(currentAllowance >= subtractedValue, "ERC20: decreased allowance below zero");
        unchecked {
            _approve(owner, spender, currentAllowance - subtractedValue);
        }

        return true;
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        if(isExcludedFromFee[from] || isExcludedFromFee[to]) {
            _baseTransfer(from, to, amount);
        } else {      
            uint256 liquidityAmount = amount * liquidityFee / 10000;
            _baseTransfer(from, liquidityAddress, liquidityAmount);
            
            amount -= liquidityAmount;
            _baseTransfer(from, to, amount);   
        }
    }

    function _baseTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual {
        if(amount == 0) return;
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        update(from);
        uint256 releaseBal = releaseBalance(from);
        uint256 fromBalance = _balances[from] + releaseBal;
        require(fromBalance >= amount, "ERC20: transfer amount exceeds balance");

        uint256 transferAmount = amount;
        if(releaseBal > 0) {
            LockInfo[] storage lockInfoList = userLock[from];
            for (uint i = 0; i < lockInfoList.length; i++) {
                LockInfo storage lockInfo = lockInfoList[i];
                if(lockInfo.userBalance >= transferAmount) {
                    lockInfo.userBalance -= transferAmount;
                    transferAmount = 0;
                } else {
                    transferAmount -= lockInfo.userBalance;
                    lockInfo.userBalance = 0;
                }
            }
        }

        _balances[from] = _balances[from] - transferAmount;
        _balances[to] += amount;

        emit Transfer(from, to, amount);
    }

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) internal virtual {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function _spendAllowance(
        address owner,
        address spender,
        uint256 amount
    ) internal virtual {
        uint256 currentAllowance = allowance(owner, spender);
        if (currentAllowance != type(uint256).max) {
            require(currentAllowance >= amount, "ERC20: insufficient allowance");
            unchecked {
                _approve(owner, spender, currentAllowance - amount);
            }
        }
    }

    function setLiquidityAddress(address _liquidityAddress) public onlyOwner {
        liquidityAddress = _liquidityAddress;
        isExcludedFromFee[liquidityAddress] = true;
    }

    function setIsExcludedFromFee(address addr, bool state) public onlyOwner {
        isExcludedFromFee[addr] = state;
    }
}

